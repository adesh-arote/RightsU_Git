@model List<RightsU_Entities.Report_Column_Setup>

<style>
    #tdcenter {
        text-align: center;
    }
</style>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Column Code
            </th>
            <th>
                View Name
            </th>
            <th>
                Name In Database
            </th>
            <th>
                Display Name
            </th>
            <th>
                Valued As
            </th>
            <th>
                Display Order
            </th>
            <th>
                IsPartofSelectOnly
            </th>
            <th>
                List Source
            </th>
            <th>
                Lookup Column
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
        <tr id="tdcenter">
            <td>
                @item.Column_Code
            </td>
            <td>
                @item.View_Name
            </td>
            <td>
                @item.Name_In_DB
            </td>
            <td>
                @item.Display_Name
            </td>
            <td>
                @item.Valued_As
            </td>
            <td>
                @item.Display_Order
            </td>
            <td>
                @*@item.IsPartofSelectOnly*@
                @{ if (item.IsPartofSelectOnly == "Y")
                    {
                        <span>Yes</span>
                    }
                    if (item.IsPartofSelectOnly == "N")
                    {
                        <span>No</span>   
                    }
                    if (item.IsPartofSelectOnly == "B")
                    {
                        <span>Both</span>   
                    }
                }
            </td>
            <td>
                @item.List_Source
            </td>
            <td>
                @item.Lookup_Column
            </td>
            <td>
                <a title="Edit" class="glyphicon glyphicon-pencil" style="cursor: pointer" onclick="AddEditReportColumnSetup('EDIT', '@item.Column_Code')"></a>
                <a title="View" class="glyphicon glyphicon-eye-open" style="cursor: pointer" onclick="AddEditReportColumnSetup('VIEW', '@item.Column_Code')"></a>

            </td>
        </tr>

            }
        }
    </tbody>
</table>