    <div class="modal-dialog">
        <div class="modal-content clearfix">
            <div class="form_fields acq">
                <div class="modal_block modal_header">
                    <a class="close" onclick="CloseLanguagePopup()">
                        <span>X</span>
                        <span class="sr-only">Close</span>
                    </a>
                    <h2>Add Language</h2>
