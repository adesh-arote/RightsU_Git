@model List<RightsU_Dapper.Entity.SAP_WBS>
@{
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }  
}
<script>
    $('.expand_WBS_Code').expander({
        slicePoint: 30,
        expandPrefix: '',
        expandText: '...@objMessageKey.readmore',
        collapseTimer: 0,
        userCollapseText: '<span>[^]</span>'
    });
    $('.expand_WBS_Description').expander({
        slicePoint: 30,
        expandPrefix: '',
        expandText: '...@objMessageKey.readmore',
        collapseTimer: 0,
        userCollapseText: '<span>[^]</span>'
    });
</script>
<table class="table table-bordered table-hover" id="tblSAPWBS">
    <thead>
        <tr>
            <th style="width:25%;">@objMessageKey.WBSCode</th>
            <th style="width:25%;">@objMessageKey.WBSDescription</th>
            <th style="width:10%;">@objMessageKey.Studio/@objMessageKey.Vendor</th>
            <th style="width:10%;">@objMessageKey.Original/@objMessageKey.Dubbed</th>
            <th style="width:10%;">@objMessageKey.ShortID</th>
            <th style="width:10%;">@objMessageKey.Status</th>
            <th style="width:10%;">@objMessageKey.SportType</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="expand_WBS_Code">@item.WBS_Code</span>
                    </td>
                    <td>
                        <span class="expand_WBS_Description">@item.WBS_Description</span>
                    </td>
                    <td>
                        <span>@item.Studio_Vendor</span>
                    </td>
                    <td style="text-align:center;">
                        <span>@item.Original_Dubbed</span>
                    </td>
                    <td style="text-align:center;">
                        <span>@item.Short_ID</span>
                    </td>
                    <td style="text-align:center;">
                        <span>@item.Status</span>
                    </td>
                    <td style="text-align:center;">
                        <span>@item.Sport_Type</span>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">@objMessageKey.Norecordfound</td>
            </tr>
        }
    </tbody>
</table>
