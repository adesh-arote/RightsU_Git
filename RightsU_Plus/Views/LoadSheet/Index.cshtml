    function ValidateDownload(AL_Load_Sheet_Code) {
        debugger;

        $.ajax({
            type: "POST",
            url: URL_ValidateDownload,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                AL_Load_Sheet_Code: AL_Load_Sheet_Code
            }),
            success: function (result) {
                debugger;
                if (result.path == "")
                    showAlert('E', "File Not Found");
                else {
                    debugger;
                    Download(AL_Load_Sheet_Code);
                }

            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function RefreshLoadSheet(AL_Load_Sheet_Code) {
        debugger;
        $.ajax({
            type: "POST",
            url: URL_RefreshLoadSheet,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                AL_Load_Sheet_Code: AL_Load_Sheet_Code
            }),
            success: function (result) {
                
                SearchLoadSheet('');
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }
</script>

