<script>
      var IsCall = 'Y', Command_Name = "", dummyGuid_G, sort_Type = "T",Module_Code_G = @ViewBag.Code;
    var URL_BindBookingsheet = '@Url.Action("BindBookingsheet", "LoadSheet")';
    var URL_BindLoadSheetList = '@Url.Action("BindLoadSheetList", "LoadSheet")';
    var URL_SearchBookingsheet = '@Url.Action("SearchBookingsheet", "LoadSheet")';
    var URL_OpenBookingsheetPopup = '@Url.Action("OpenBookingsheetPopup", "LoadSheet")';
    var URL_GenerateLoadSheet = '@Url.Action("GenerateLoadSheet", "LoadSheet")';
    var URL_GetLoadSheetStatus = '@Url.Action("GetLoadSheetStatus", "LoadSheet")';
    var URL_SearchLoadSheet = '@Url.Action("SearchLoadSheet", "LoadSheet")';
    var URL_ValidateDownload = '@Url.Action("ValidateDownload", "LoadSheet")';
    var URL_RefreshLoadSheet = '@Url.Action("RefreshLoadSheet", "LoadSheet")';

    $(document).ready(function () {
        debugger;
        //BindLoadSheetList();
        SearchLoadSheet('');
    });

    function SearchLoadSheet(searchText) {
        $('#searchCommon').val(searchText);
        showLoading();
        $.ajax({
            type: "POST",
            url: URL_SearchLoadSheet,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchText
            }),
            async: false,
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#hdnPageNo').text(1);
                    $('#hdnPageNo').val(1);
                    $('#lblRecordCount').text(result.Record_Count);
                    $("#hdnRecordCount").val(result.Record_Count);
                    SetPaging()
                    BindLoadSheetList();
                    hideLoading();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }

    function BindLoadSheetList() {
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();

        $.ajax({
            type: "POST",
            url: URL_BindLoadSheetList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                sortType: sort_Type
            }),
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#divLoadSheetList').empty();
                    $('#divLoadSheetList').html(result);
                    SetPaging();
                    CheckPendingStatus();
                    initializeTooltip();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function OpenBookingsheetPopup(CommandName, AL_Load_Sheet_Code) {
        $.ajax({
            type: "POST",
            url: URL_OpenBookingsheetPopup,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                CommandName: CommandName,
                AL_Load_Sheet_Code: AL_Load_Sheet_Code
            }),
            async: false,
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#popup').modal();
                    $('#pupupHtml').empty();
                    $('#pupupHtml').html(result);
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
        
    }

    function addNumeric() {
        $(".pagingSize").numeric({
            allowMinus: false,
            allowThouSep: false,
            allowDecSep: false,
            max: 99,
            min: 1
        });

        $(".exchangeRate").numeric({
            allowMinus: false,
            allowThouSep: false,
            allowDecSep: true,
            max: 9999,
            min: 0
        });
    }

    function SetPaging() {
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo').val());
        var recordCount = parseInt($('#hdnRecordCount').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch').val());
        var recordPerPage = parseInt($('#txtPageSize').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination").pagination(recordCount, opt);
    }

    function pageselectCallback(page_index, jq) {
        //if (checkCurrentAction()) {
            $('.required').removeClass('required');

            if (!ValidatePageSize())
                return false;

            var pageNo = page_index + 1
            $('#hdnPageNo').val(pageNo);
        if (IsCall == 'Y')
            BindLoadSheetList();
            else
                IsCall = 'Y';
        //}
    }
    function txtPageSize_OnChange() {
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;

        BindLoadSheetList()
        SetPaging();
    }
    function ValidatePageSize() {
        var recordPerPage = $('#txtPageSize').val()
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }

    function pageBinding() {
        BindBookingsheet()
        SetPaging_BS();
    }

    function GenerateLoadsheet() {
        debugger;
        var bookinSheetCodes = [];
        $.each($("#tblBookingSheet tbody tr"), function (index, value) {

            //var i = $(value).children().last();
            index = index + 1;

            //var codes = $(this).find('#hdnTitleCode').val();
            var BookingSheetCode = $('#' + index + '_hdnCnt').val();
            var codes = '';
            if ($('#chk_' + BookingSheetCode).is(':checked') == true) {
                codes = $('#' + index + '_hdnCnt').val();
                bookinSheetCodes.push(codes);
            }
        })


        $.ajax({
            type: "POST",
            url: URL_GenerateLoadSheet,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            async: false,
            data: JSON.stringify({
                bookinSheetCodes: bookinSheetCodes.join(','),
            }),
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();

                }
                else {
                    if (result.Status == "S") {
                        
                        $('#lblRecordCount').text(result.RecordCount);
                        $('#hdnRecodLockingCode').val(0);
                        ClosePopup();
                        showAlert("S", result.Message);
                        SearchLoadSheet('');
                        //if ($("#searchCommon").val() != "") {
                        //    SearchLoadSheet("");
                        //}
                        //else {
                        //    SearchLoadSheet("");
                        //}
                    }
                    else
                        showAlert("E", result.Message, "");
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        })
    }

    function ClosePopup() {

        $('#hdnAction').val("");
        $('#popup').modal('hide');
        $('#pupupHtml').empty();
    }

    function DownloadLoadSheet(BkSheetCode) {
        debugger;
        //var url = window.location.pathname;
        //var url = window.location.href;
        //var url = window.location.origin;
        $.ajax({
            type: "POST",
            url: URL_GetFileName,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                BookingSheetCode: BkSheetCode
            }),
            success: function (Filename) {
                debugger;
                window.location.href = window.location.origin + "/" + DownloadPath + Filename;
                SearchOnImportMasterList("");
            }
        })
    }

    function CheckPendingStatus() {
        debugger
        var pendingRecord = 0;
        $(".deal_action").each(function () {
            debugger
            var SiblingClass = $(this).attr('class').split(' ')[1];
            if (isNaN(SiblingClass.substr(SiblingClass.length - 1))) {
                var AL_Load_Sheet_Code = SiblingClass.slice(12, SiblingClass.length - 1);
                //if (SiblingClass.substr(SiblingClass.length - 1) != 'E') {

                if (SiblingClass.substr(SiblingClass.length - 1) == 'P' || SiblingClass.substr(SiblingClass.length - 1) == 'W') {
                    $.ajax({
                        type: "POST",
                        url: URL_GetLoadSheetStatus,
                        traditional: true,
                        enctype: 'multipart/form-data',
                        contentType: "application/json; charset=utf-8",
                        async: false,
                        data: JSON.stringify({
                            AL_Load_Sheet_Code: AL_Load_Sheet_Code
                        }),
                        success: function (result) {
                            debugger
                            if (result == "true") {
                                redirectToLogin();
                            }
                            if (result.RecordStatus == "P") {
                                $("#imgLoading_" + AL_Load_Sheet_Code).css("display", '');
                                pendingRecord++;
                            }
                            else if (result.RecordStatus == "W") {
                                $("#imgLoading_" + AL_Load_Sheet_Code).css("display", '');
                                pendingRecord++;

                                var status = '<span>Waiting</span>'

                                $('.clsTdStatus_' + AL_Load_Sheet_Code+'W').empty();
                                $('.clsTdStatus_' + AL_Load_Sheet_Code+'W').append(status);
                            }


                            else if (result.RecordStatus == "D") {
                                $("#imgLoading_" + AL_Load_Sheet_Code).css("display", 'none');
                                $('.' + SiblingClass).empty();

                                var a = '<a title="Download" class="glyphicon glyphicon-save" onclick="ValidateDownload(' + AL_Load_Sheet_Code + ');" data-original-title="Can not edit this currency as it is deactivated"></a>' +
                                    '<a title="Refresh" class="glyphicon glyphicon-refresh" onclick="RefreshLoadSheet(' + AL_Load_Sheet_Code + ');"></a>';
                                $('.' + SiblingClass).append(a);

                                var status = '<span>Success</span>'

                                $('.clsTdStatus_' + AL_Load_Sheet_Code + 'P').empty();
                                $('.clsTdStatus_' + AL_Load_Sheet_Code + 'P').append(status);
                                initializeTooltip();
                            }
                            
                        },
                        error: function (result) {
                        }
                    });
                }
            }
        });

        if (pendingRecord > 0) {
            setTimeout(CheckPendingStatus, 5000);
        }
    }

    function Download(AL_Load_Sheet_Code) {
        @*var URL = '@Url.Action("Download", "Title_Content_ImportExport", new
        {
            ImportLogCode = "_DM_Import_Master_Code_"
        })';
        URL = URL.replace("_ImportLogCode_", dealCode);
        URL = URL.replace(/amp;/g, "");
        window.location.href = URL;*@
        window.location.href = '@Url.Action("Download", "LoadSheet")?AL_Load_Sheet_Code=' + AL_Load_Sheet_Code;
