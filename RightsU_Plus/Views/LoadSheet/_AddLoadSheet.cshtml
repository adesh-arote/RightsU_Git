<script>
    var Command_Name = "", sortType = "T", AL_LoadSheet_Code = "", TabName = "BS", Module_Code = 264;

    var URL_BindRevisionHistory = '@Url.Action("BindRevisionHistory", "LoadSheet")';
    var LoadsheetMonthView = '@objLsData.LoadsheetMonthView';
    var LoadSheetCode = '@objLsData.LoadSheetCode';

    $(document).ready(function () {
        debugger;
        addNumeric();     
    });

    function addNumeric() {
        debugger;
        $(".pagingSize").numeric({
            allowMinus: false,
            allowThouSep: false,
            allowDecSep: false,
            max: 99,
            min: 1
        });
    }

    function ClosePopup() {
        debugger;
        $('#hdnAction').val("");
        $('#popup').modal('hide');
        $('#pupupHtml').empty();

        BindLoadSheetList();
    }

    function btnSearch_OnClick_BS() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        if (!ValidatePageSize_BS())
            return false;

        var LoadSheetMonth = $.trim($('#searchCommon_BS_Month').val());
        var CommandName = $('#hdnCommand').val();

        if (LoadSheetMonth == '') {
            $('#searchCommon_BS_Month').val('');
            $('#searchCommon_BS_Month').attr('required', true)
            return false;
        }
        SearchBookingsheet(LoadSheetMonth, "", CommandName, TabName, Module_Code);
    }

    function btnClear_OnClick_BS() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        if (!ValidatePageSize_BS())
            return false;

        var CommandName = $('#hdnCommand').val();
        if (CommandName == "ADD") {
            $('#searchCommon_BS_Month').val('');
        }
        SearchBookingsheet("", LoadSheetCode, CommandName, TabName, Module_Code);
    }

    function SearchBookingsheet(LoadSheetMonth, loadSheetCode, CommandName, TabName, Module_Code) {
        debugger;
        $('#searchCommon_BS').val(LoadSheetMonth);
        showLoading();
        $.ajax({
            type: "POST",
            url: URL_SearchBookingsheet,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                loadsheetMonth: LoadSheetMonth,
                loadSheetCode: loadSheetCode,
                CommandName: CommandName,
                TabName: TabName,
                Module_Code: Module_Code
            }),
            async: false,
            success: function (result) {
                debugger;
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#hdnPageNo_BS').text(1);
                    $('#hdnPageNo_BS').val(1);
                    $('#lblRecordCount_BS').text(result.Record_Count);
                    $("#hdnRecordCount_BS").val(result.Record_Count);
                    Command_Name = CommandName;
                    SetPaging_BS();
                    if (TabName == "BS") {
                        BindBookingsheet(CommandName);
                    }
                    if (TabName == "RS") {
                        BindRevisionHistory();
                    }
                    hideLoading();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }

    function SetPaging_BS() {
        debugger;
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo_BS').val());
        var recordCount = parseInt($('#hdnRecordCount_BS').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch_BS').val());
        var recordPerPage = parseInt($('#txtPageSize_BS').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo_BS').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback_BS };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination_BS").pagination(recordCount, opt);
    }

    function BindBookingsheet(CommandName) {
        debugger;
        var pageNo = $('#hdnPageNo_BS').val();
        var recordPerPage = $('#txtPageSize_BS').val();

        $('#hdnAction').val("");
        $.ajax({
            type: "POST",
            url: URL_BindBookingsheet,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                sortType: sortType,
                CommandName: CommandName
            }),
            success: function (result) {
                debugger;
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    //$('#popup').modal();
                    $('#divBookingsheetList').empty();
                    $('#divBookingsheetList').html(result);
                    $('#divRevisionHistoryList').hide();
                    $('#divBookingsheetList').show();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function ValidatePageSize_BS() {
        debugger;
        var recordPerPage = $('#txtPageSize_BS').val()
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize_BS').attr('required', true)
        return false
    }

    function pageselectCallback_BS(page_index, jq) {
        debugger;
        $('.required').removeClass('required');

        if (!ValidatePageSize_BS())
            return false;

        var pageNo = page_index + 1
        $('#hdnPageNo_BS').val(pageNo);
        if (IsCall == 'Y')
            BindBookingsheet(Command_Name);
        else
            IsCall = 'Y';
    }

    function txtPageSize_BS_OnChange() {
        debugger;
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize_BS())
            return false;

        BindBookingsheet(Command_Name)
        SetPaging_BS();
    }

    function OpenTab(NewTab) {
        debugger;
        if (NewTab == "BS") {
            $("[id*='tab']").removeClass('active');
            $("#tabBklist").addClass('active');
            TabName = NewTab;
        }
        if (NewTab == "RS") {
            $("[id*='tab']").removeClass('active');
            $("#tabRevHistory").addClass('active');
            TabName = NewTab;
        }
        $('#txtPageSize_BS').val(10);
        SearchBookingsheet("", LoadSheetCode, Command_Name, TabName, Module_Code);
    }

    function BindRevisionHistory() {
        debugger;
        var pageNo = $('#hdnPageNo_BS').val();
        var recordPerPage = $('#txtPageSize_BS').val();

        $('#hdnAction').val("");
        $.ajax({
            type: "POST",
            url: URL_BindRevisionHistory,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                sortType: sortType
            }),
            success: function (result) {
                debugger;
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#divRevisionHistoryList').empty();
                    $('#divRevisionHistoryList').html(result);
                    $('#divBookingsheetList').hide();
                    $('#divRevisionHistoryList').show();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    $('.expand_Remaks').expander({
        slicePoint: 32,
        expandPrefix: '',
        expandText: '...@objMessageKey.readmore',
        collapseTimer: 0,
        userCollapseText: '<span>[^]</span>'
    });

</script>

