@model List<RightsU_Entities.USPAL_GetBookingsheetDataForLoadsheet_Result>
@using UTOFrameWork.FrameworkClasses;
@{
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}

<script> 
    var Command_Name = "", sortType = "T";

    $(document).ready(function () {
        debugger;
        if (Command_Name == "ADD") {
            SearchBookingsheet("", "", Command_Name);
        }      
    });

    $('#chkAll').on("change", function () {
        debugger;
        var IsCheck = $(this).prop("checked");
        $('input[type="checkbox"]').prop('checked', IsCheck);
    });
    
    $('.checkbox').on("change", function () {
        debugger;
        if ($('.checkbox:checked').length == $('.checkbox').length) {
            $('#chkAll').prop('checked', true);
        } else {
            $('#chkAll').prop('checked', false);
        }
    });

    function ClosePopup() {
        debugger;
        $('#hdnAction').val("");
        $('#popup').modal('hide');
        $('#pupupHtml').empty();

        BindLoadSheetList();
    }

    function btnSearch_OnClick() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        if (!ValidatePageSize_BS())
            return false;

        var searchText = $.trim($('#searchCommon').val());
        var CommandName = $('#hdnCommand').val();

        if (searchText == '') {
            $('#searchCommon').val('');
            $('#searchCommon').attr('required', true)
            return false;
        }
        SearchBookingsheet(searchText, "", CommandName);
    }

    function btnClear_OnClick() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        if (!ValidatePageSize_BS())
            return false;

        var searchText = $('#searchCommon').val('');
        var CommandName = $('#hdnCommand').val();

        SearchBookingsheet(searchText, "", CommandName);
    }

    function SearchBookingsheet(searchText, loadSheetCode, CommandName) {
        debugger;
        $('#searchCommon').val(searchText);
        showLoading();
        $.ajax({
            type: "POST",
            url: URL_SearchBookingsheet,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                loadsheetMonth: searchText,
                loadSheetCode: loadSheetCode,
                CommandName: CommandName
            }),
            async: false,
            success: function (result) {
                debugger;
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#hdnPageNo_BS').text(1);
                    $('#hdnPageNo_BS').val(1);
                    $('#lblRecordCount_BS').text(result.Record_Count);
                    $("#hdnRecordCount_BS").val(result.Record_Count);
                    Command_Name = CommandName;
                    SetPaging_BS();
                    BindBookingsheet(CommandName);
                    hideLoading();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }

    function SetPaging_BS() {
        debugger;
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo_BS').val());
        var recordCount = parseInt($('#hdnRecordCount_BS').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch_BS').val());
        var recordPerPage = parseInt($('#txtPageSize_BS').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo_BS').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback_BS };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination_BS").pagination(recordCount, opt);
    }

    function BindBookingsheet(CommandName) {
        debugger;
        var pageNo = $('#hdnPageNo_BS').val();
        var recordPerPage = $('#txtPageSize_BS').val();

        $('#hdnAction').val("");
        $.ajax({
            type: "POST",
            url: URL_BindBookingsheet,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                sortType: sortType,
                CommandName: CommandName
            }),
            success: function (result) {
                debugger;
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    //$('#popup').modal();
                    $('#divBookingsheetList').empty();
                    $('#divBookingsheetList').html(result);
                    SetPaging_BS();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function ValidatePageSize_BS() {
        debugger;
        var recordPerPage = $('#txtPageSize_BS').val()
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize_BS').attr('required', true)
        return false
    }

    function pageselectCallback_BS(page_index, jq) {
        debugger;
        $('.required').removeClass('required');

        if (!ValidatePageSize_BS())
            return false;

        var pageNo = page_index + 1
        $('#hdnPageNo_BS').val(pageNo);
        if (IsCall == 'Y')
            BindBookingsheet(Command_Name);
        else
            IsCall = 'Y';
    }

    function txtPageSize_BS_OnChange() {
        debugger;
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize_BS())
            return false;

        BindBookingsheet(Command_Name)
        SetPaging_BS();
    }

</script>

<div class="modal_block modal_header">
    <a class="close" onclick="ClosePopup()">
        <span>X</span>
        <span class="sr-only">Close</span>
    </a>
