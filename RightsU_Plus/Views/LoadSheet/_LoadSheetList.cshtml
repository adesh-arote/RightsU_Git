@model List<RightsU_Entities.USPAL_GetLoadsheetList_Result>
@using UTOFrameWork.FrameworkClasses;
@{
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}

<table class="table table-bordered table-hover" id="tblMusicLink">
    <thead>
        <tr>
            <th style="width:20%;">Load Sheet No.</th>
            <th style="width:15%;">LS for Month</th>
            <th style="width:15%;">No. of Booking Sheet</th>
            <th style="width:15%;">Status</th>
            <th style="width:15%;">Generated By</th>
            <th style="width:15%;">Generated On</th>
            <th style="width:15%;">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="expand_Currency_Name">
                        <span>@item.Load_sheet_No</span>
                    </td>
                    <td style="text-align:center;">
                        <span>@item.Load_Sheet_Month</span>
                    </td>
                    <td align="center">
                        <span onclick="OpenBookingsheetPopup('VIEW',@item.AL_Load_Sheet_Code,'')" style="color: #2b64a5;font-weight: bolder;cursor: pointer;">@item.NoOfBookingSheet</span>
                    </td>
                    <td align="center" class="clsTdStatus_@item.AL_Load_Sheet_Code@item.Status">
                        @if (item.Status == "D")
                        {
                            <span>Success</span>
                        }
                        else if (item.Status == "P")
                        {
                            <span>Pending</span>
                        }
                        else if (item.Status == "W")
                        {
                            <span>Waiting</span>
                        }
                        else if (item.Status == "E")
                        {
                            <span>Error</span>
                        }
                    </td>
                    <td>
                        @item.InsertedBy
                    </td>
                    <td>
                        @item.Inserted_On
                    </td>
                    <td align="center" class="deal_action clsTdAction_@item.AL_Load_Sheet_Code@item.Status">
                        @if (item.Status == "P" || item.Status == "W")
                        {
                            <img id="imgLoading" title="In Process" src="~/Images/square_dots_loading.gif" style="height: 26px;" />
                        }
                        else
                        {
                            <a title="Download" class="glyphicon glyphicon-save" onclick="ValidateDownload(@item.AL_Load_Sheet_Code);"></a>
                            <a title="Refresh" class="glyphicon glyphicon-refresh" onclick="RefreshLoadSheet(@item.AL_Load_Sheet_Code);"></a>
                        }

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">@objMessageKey.Norecordfound</td>
            </tr>
        }
    </tbody>
</table>