                                            switch (Model.Year_Type.Trim())
                                            {
                                                case "FY":
                                                    strYearType = objMessageKey.FYAprMar;
                                                    break;
                                                case "CY":
                                                    strYearType = objMessageKey.JanDec;
                                                    break;
                                                case "DY":
                                                    strYearType = objMessageKey.DealYear;
                                                    break;
                                            }
                                            <td>@strYearType</td>
                                        }
                                        @if (ViewBag.DealSegment == "Y")
                                        {
