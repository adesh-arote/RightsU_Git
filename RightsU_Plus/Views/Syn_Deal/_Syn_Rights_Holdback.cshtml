                    Counter = objADRH.strDummyProp;
                    @Html.Hidden("hdnHoldback_Type_" + Counter, objADRH.Holdback_Type)
                    @Html.Hidden("hdnPlatform_Codes_HB_View", objADRH.strPlatformCodes)

