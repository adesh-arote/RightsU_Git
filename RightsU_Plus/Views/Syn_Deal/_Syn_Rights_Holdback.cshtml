        $('.show_hide').click(function () {
            hideSubTitle();
            hideDubbing();
            $('.MoreRegionDiv').slideUp();
            $(this).parent().find('.MoreRegionDiv').slideToggle('fast');
            return false;
        });
        $('.show_hide_SubTitle').click(function () {
            hideRegion();
            hideDubbing();
            $('.MoreSubtitleDiv').slideUp();
            $(this).parent().find('.MoreSubtitleDiv').slideToggle('fast');
            return false;
