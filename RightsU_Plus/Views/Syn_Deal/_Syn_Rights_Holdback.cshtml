                            <ul>
                                <li class="platform">
                                    <a id="lnkAddPlatform_@Counter" href="#" title="@objMessageKey.HoldbackOn" onclick="return BindPlatform_HB('@Counter','LIST','@objADRH.strPlatformCodes');">
