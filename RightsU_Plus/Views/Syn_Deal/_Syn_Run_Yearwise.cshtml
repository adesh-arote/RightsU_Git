@model List<RightsU_Entities.Syn_Deal_Run_Yearwise_Run>
@{
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}
@if (Model != null)
{
    <td></td>
    <td colspan="3">
        <table id="tblYearWiseRun" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th width="60%">@objMessageKey.Period</th>
                    <th width="40%">@objMessageKey.Run</th>
                    
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        @if (Model.ElementAt(i).Start_Date != null && Model.ElementAt(i).End_Date != null)
                        {
                            <td align="center">@Model.ElementAt(i).Start_Date.Value.ToString("dd MMM yyyy")	@objMessageKey.To  @Model.ElementAt(i).End_Date.Value.ToString("dd MMM yyyy")</td>
                            <td align="center">
                                @Html.TextBox("[" + i + "].No_Of_Runs", Model.ElementAt(i).No_Of_Runs, new { @class = "numbertext text" })
                                @Html.Hidden("[" + i + "].Start_Date_Str", Model.ElementAt(i).Start_Date.Value.ToString("dd/MM/yyyy"))
                                @Html.Hidden("[" + i + "].End_Date_Str", Model.ElementAt(i).End_Date.Value.ToString("dd/MM/yyyy"))
                                @Html.Hidden("[" + i + "].Syn_Deal_Run_Yearwise_Run_Code", Model.ElementAt(i).Syn_Deal_Run_Yearwise_Run_Code)
                                @Html.Hidden("[" + i + "].Syn_Deal_Run_Code", Model.ElementAt(i).Syn_Deal_Run_Code)
                            </td>
                        }
                        else
                        {
                            <td align="center">@objMessageKey.Year @Model.ElementAt(i).Year_No</td>
                            <td align="center">
                                @Html.TextBox("[" + i + "].No_Of_Runs", Model.ElementAt(i).No_Of_Runs, new { @class = "numbertext text" })
                                @Html.Hidden("[" + i + "].Year_No", Model.ElementAt(i).Year_No)
                                @Html.Hidden("[" + i + "].Syn_Deal_Run_Yearwise_Run_Code", Model.ElementAt(i).Syn_Deal_Run_Yearwise_Run_Code)
                                @Html.Hidden("[" + i + "].Syn_Deal_Run_Code", Model.ElementAt(i).Syn_Deal_Run_Code)
                            </td>
                        }
                       

                    </tr> 
                }
              
            </tbody>

        </table>
    </td>
}
else
{
    @Html.Display(objMessageKey.Invalid)
}