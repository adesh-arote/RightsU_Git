@using UTOFrameWork.FrameworkClasses
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}
<link type="text/css" rel="stylesheet" href="~/css/chosen.min.css?v=@System.Configuration.ConfigurationManager.AppSettings["Version_No"]" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.22.1/ckeditor.js" integrity="sha512-F8fV4+wpHYl9zul08Soff9H9fCx6OMIFfgbQcy+2v2gV7PdbT0OgM1LFwujQmwlLGWWKNbOFZ13uWP+Cbe0Ngw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
      var IsCall = 'Y', Command_Name = "", dummyGuid_G, sort_Type = "T";

    var URL_Bind_Email_Config_Template = '@Url.Action("Bind_Email_Config_Template", "Email_Config_Template")';
    var URL_Search_Email_Config_Template = '@Url.Action("Search_Email_Config_Template", "Email_Config_Template")';
    var URL_Save_Email_Config_Template = '@Url.Action("Save_Email_Config_Template", "Email_Config_Template")';
    var URL_ActivateDeactivate = '@Url.Action("ActivateDeactivate", "Email_Config_Template")';
    var URL_Bind_Config_Template_PopUp = '@Url.Action("Bind_Config_Template_PopUp", "Email_Config_Template")';
    var URL_Save_Config_Template = '@Url.Action("Save_Config_Template", "Email_Config_Template")';

    var URL_CheckRecordLock = '@Url.Action("CheckRecordLock", "Email_Config_Template")';
    var URL_Refresh_Lock = '@Url.Action("Refresh_Lock", "Global")';
    var URL_Release_Lock = '@Url.Action("Release_Lock", "Global")';

    $(document).ready(function () {
        debugger;
        if (LayoutDirection_G == "RTL") {
            $('#btnUser').css("float", "right");
            $('#txtSort').css("text-align", "left");
            $('#ddlSortType_chosen').css("text-align", "right");
        }
        else {
            $('#btnUser').css("float", "left");
            $('#txtSort').css("text-align", "right");
            $('#ddlSortType_chosen').css("text-align", "left");
        }
        Search_Email_Config_Template("");
        addNumeric();
        //initializeChosen();

        $('#searchCommon').keypress(function (e) {
            if (e.keyCode == 13) {
                btnSearch_OnClick()
                return false;
            }
        });
        $('#ddlSortType').change(function () {
            sort_Type = $('#ddlSortType').val();
            $('#hdnPageNo').val(1);
            var searchtext = $("#searchCommon").val();
            Search_Email_Config_Template(searchtext);
        })
    });

    //-----------------SEARCH-----------------------------

    function btnSearch_OnClick() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        var searchText = $.trim($('#searchCommon').val());

        if (searchText == '') {
            $('#searchCommon').val('');
            $('#searchCommon').attr('required', true)
            return false;
        }
        Search_Email_Config_Template(searchText);
    }

    function btnShowAll_OnClick() {
        debugger;
        if (!checkCurrentAction())
            return false;
        if (!ValidatePageSize())
            return false;
        sort_Type = "T";
        $("#ddlSortType").find("option").attr("selected", false);
        $("#ddlSortType").val('T').trigger("chosen:updated");
        $('#hdnPageNo').val(1);
        $('#searchCommon').attr('required', false)
        $('#searchCommon').val('');
        Search_Email_Config_Template("");
    }

    function Search_Email_Config_Template(searchtext) {
        debugger;
        $('#searchCommon').val(searchtext);
        showLoading();
        $.ajax({
            type: "POST",
            url: URL_Search_Email_Config_Template,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchtext
            }),
            success: function (result) {
                $('#hdnPageNo').text(1);
                $('#hdnPageNo').val(1);
                $('#lblRecordCount').text(result.Record_Count);
                $("#hdnRecordCount").val(result.Record_Count);
                SetPaging();
                Email_Config_Template_List("", 0);
                hideLoading();
            }
        });
    }

    //-----------------PAGING------------------------------

    function addNumeric() {
        debugger;
        $(".pagingSize").numeric({
            allowMinus: false,
            allowThouSep: false,
            allowDecSep: false,
            max: 99,
            min: 1
        });
    }

    function SetPaging() {
        debugger;
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo').val());
        var recordCount = parseInt($('#hdnRecordCount').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch').val());
        var recordPerPage = parseInt($('#txtPageSize').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination").pagination(recordCount, opt);
    }

    function pageselectCallback(page_index, jq) {
        debugger;
        if (checkCurrentAction()) {
            $('.required').removeClass('required');

            if (!ValidatePageSize())
                return false;

            var pageNo = page_index + 1
            $('#hdnPageNo').val(pageNo);
            if (IsCall == 'Y')
                Email_Config_Template_List("", 0);
            else
                IsCall = 'Y';
        }
    }

    function txtPageSize_OnChange() {
        debugger;
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;

        Email_Config_Template_List("", 0);
        SetPaging();
    }

    function ValidatePageSize() {
        debugger;
        var recordPerPage = $('#txtPageSize').val();
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }

    function pageBinding() {
        debugger;
        Email_Config_Template_List("", 0);
        SetPaging();
    }

    //-----------------VALIDATION--------------------------

    function checkCurrentAction() {
        debugger;
        var action = $("#hdnAction").val();
        if (action == "ADD") {
            showAlert("E", "Complete Add Operation First");
            return false;
        }
        else if (action == "EDIT") {
            showAlert("E", "Complete Edit Operation First");
            return false;
        }
        return true;
    }

    //-----------------MASTER-------------------------------

    function Email_Config_Template_List(commandName, Email_Config_Template_Code) {
        debugger;
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();

        $.ajax({
            type: "POST",
            url: URL_Bind_Email_Config_Template,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                Email_Config_Template_Code: Email_Config_Template_Code,
                commandName: commandName,
                sortType: sort_Type
            }),
            success: function (result) {
                debugger;
                $('#divEmail_Config_Template_List').empty();
                $('#divEmail_Config_Template_List').html(result);
                initializeTooltip();
                initializeExpander();
                initializeChosen();
            }
        })
    }

    function AddEditEmail_Template(commandName, Email_Config_Template_Code) {
        debugger;
        if (checkCurrentAction() && ValidatePageSize()) {
            Email_Config_Template_List(commandName, Email_Config_Template_Code);
            $('#hdnAction').val(commandName)
        }
    }

    function Save_Email_Config_Template(Email_Config_Template_Code) {
        debugger;
        var returnVal = true;
        var Email_Config_Code = $.trim($("#ddlEmailConfig").val());
        var Event_Template_Type = $.trim($("#ddlTemplateType").val());
        var Event_Platform_Code = $.trim($("#ddlPlatform").val());

        if (Email_Config_Code == "") {
            $('#ddlEmailConfig').val('').attr('required', true);
            returnVal = false;
        }
        if (Event_Template_Type == "") {
            $('#ddlTemplateType').val('').attr('required', true);
            returnVal = false;
        }
        if (Event_Platform_Code == "") {
            $('#ddlPlatform').val('').attr('required', true);
            returnVal = false;
        }
        
        if (returnVal) {
            $.ajax({
                type: "POST",
                url: URL_Save_Email_Config_Template,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    Email_Config_Template_Code: Email_Config_Template_Code,
                    Email_Config_Code: Email_Config_Code,
                    Event_Template_Type: Event_Template_Type,
                    Event_Platform_Code: Event_Platform_Code
                }),
                success: function (result) {
                    debugger;
                    if (result.Status == "S") {
                        $('#lblRecordCount').text(result.RecordCount);
                        $('#hdnAction').val("")
                        showAlert("S", result.Message);
                        Search_Email_Config_Template("");

                        if ($("#searchCommon").val() != "") {
                            Search_Email_Config_Template($("#searchCommon").val())
                        }
                        else {
                            Email_Config_Template_List("", 0);
                        }
                    }
                    else {
                        showAlert("E", result.Message);
                    }
                }
            })
        }
    }

    function Email_Config_Template_Cancel() {
        debugger;
        var recordLockingCode = parseInt($('#hdnRecodLockingCode').val())
        if (recordLockingCode > 0)
            ReleaseRecordLock(recordLockingCode, URL_Release_Lock);
        $('#hdnAction').val("")
        Email_Config_Template_List("", 0);
    }

    //----------------Record Locking----------------------------
    function CheckRecordLock(commandName, Email_Config_Template_Code) {
        debugger;
        $.ajax({
            type: "POST",
            url: URL_CheckRecordLock,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                Email_Config_Template_Code: Email_Config_Template_Code,
                commandName: commandName
            }),
            async: false,
            success: function (result) {
                debugger;
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    if (result.Is_Locked == "Y") {
                        AddEditEmail_Template(commandName, Email_Config_Template_Code)
                        $('#hdnRecodLockingCode').val(result.Record_Locking_Code); // This syntax must be after AddEditCountry() this
                        Call_RefreshRecordReleaseTime(result.Record_Locking_Code, URL_Refresh_Lock);
                    }
                    else {
                        showAlert("E", result.Message);
                    }

                }

            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }

    //----------------Activate/Deactivate-----------------------

    function ActivateDeactivate(Email_Config_Template_Code, Action) {
        debugger;
        var ModuleCode = $("#ddlModule").val();
        if (checkCurrentAction()) {
            $.ajax({
                type: "POST",
                url: URL_ActivateDeactivate,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    Email_Config_Template_Code: Email_Config_Template_Code,
                    Action: Action
                }),
                success: function (result) {
                    if (result.Status == "S") {
                        Email_Config_Template_List("", 0);
                        showAlert("S", result.Message);
                    }
                    else {
                        showAlert("E", result.Message);
                    }
                }
            })
        }
    }

    //----------------Config Template Popup----------------------

    function ConfigureTemplate(Email_Config_Template_Code, Email_Config_Code, Event_Template_Code, Event_Platform_Code, Event_Template_Type) {
        debugger;
        
        $.ajax({
            type: "POST",
            url: URL_Bind_Config_Template_PopUp,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                Email_Config_Template_Code: Email_Config_Template_Code,
                Email_Config_Code: Email_Config_Code,
                Event_Template_Code: Event_Template_Code,
                Event_Platform_Code: Event_Platform_Code,
                Event_Template_Type: Event_Template_Type
            }),
            success: function (result) {
                debugger;
                $('#popup').modal();
                $('#pupupHtml').empty();
                $('#pupupHtml').html(result);
                initializeTooltip();
                initializeExpander();
                initializeChosen();
            }
        })
    }

    function ClosePopup() {
        $('#hdnAction').val("");
        $('#popup').modal('hide');
        $('#pupupHtml').empty();
    }

    function Save_Config_Template(Config_Template_Code) {
        debugger;
        var returnVal = true;
        var editorData = $.trim($("#texteditor").val());

        //var Subject = $.trim($("#TemplateName").val());

        if (editorData == "") {
            $('#texteditor').val('').attr('required', true);
            returnVal = false;
        }

        var TemplateName = "";
        var ExistingName = "";
        if ($('.configTemplate').val() == "AddNew") {
            TemplateName = $.trim($("#TemplateName").val());
            ExistingName = "";
        }
        else {
            ExistingName = $.trim($("#TemplateName").val());
            TemplateName = "";
        }

        if (returnVal) {
            $.ajax({
                type: "POST",
                url: URL_Save_Config_Template,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    Config_Template_Code: Config_Template_Code,
                    TemplateName: TemplateName,
                    ExistingName: ExistingName,
                    editorData: editorData
                }),
                success: function (result) {
                    debugger;
                    if (result.Status == "S") {
                       
                    }
                    else {
                        showAlert("E", result.Message);
                    }
                }
            })
        }
    }

</script>

<style>
    .search_area {
        border-bottom: 1px dotted #777;
        margin-bottom: 5px;
        background-color: #eee;
    }

    #ddlSortType_chosen {
        max-width: 42%;
        text-align: left;
    }
</style>

<div class="main_section">
    <section class="rightsU_container clearfix">
        <div class="container acq main_col">
            <div class="">
                <div class="title_block dotted_border clearfix">
                    <h2 class="pull-left">
                        Email Config Template
                    </h2>
                    <div class="right_nav pull-right">
                        <ul>
                            <li id="btnUser">
                                <input autocomplete="off" type="button" class="btn btn-primary" value="@objMessageKey.Add" onclick="AddEditEmail_Template('ADD', 0)" />
                            </li>
                            <li>
                                <a title="@objMessageKey.SaveToExcel" class="glyphicon glyphicon-floppy-save" style="cursor:pointer; text-decoration:underline; " onclick="ExportToExcel()"></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="search_area" style="background-color: #eee; padding:5px;">
                    <table class="table">
                        <tr>
                            <td style="width:10%; vertical-align: middle;text-align:center;">
                                @objMessageKey.SearchText :
                            </td>
                            <td style="width:25%; vertical-align:middle;">
                                <input autocomplete="off" type="text" name="srchCommon" id="searchCommon" class="search" style="width:100%" placeholder="Email Config Template" maxlength="100" />
                            </td>
                            <td style="width:13%;vertical-align: middle; text-align:center;">
                                <input autocomplete="off" type="button" id="btnSearch" class="button" value="@objMessageKey.Search" onclick="btnSearch_OnClick()">
                                <input autocomplete="off" type="button" id="btnShowAll" class="button" value="@objMessageKey.ShowAll" onclick="btnShowAll_OnClick()">
                            </td>
                            <td id="txtSort">
                                @objMessageKey.SortBy :
                                @Html.DropDownList("SortType", (List<SelectListItem>)ViewBag.SortType, new { @id = "ddlSortType", @class = "form_input chosen-select" })
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="grid_area">
                    <div style="border-bottom: 1px dotted #777; display:none;"></div>
                    <div class="paging_area clearfix">
                        <span class="pull-left">@objMessageKey.TotalRecords: </span>
                        <span class="pull-left" id="lblRecordCount"></span>
                        <input autocomplete="off" type="hidden" id="hdnPageNo" name="hdnPageNo" value="1" />
                        <input autocomplete="off" type="hidden" id="hdnPagePerBatch" name="hdnPagePerBatch" value="5" />
                        <input autocomplete="off" type="hidden" id="hdnRecordCount" name="hdnRecordCount" value="0" />

                        <div id="Pagination" class="pagination">
                        </div>
                        <span class="pull-right">
                            @objMessageKey.PageSize:
                            <input autocomplete="off" type="text" id="txtPageSize" name="txtPageSize" class="smallTextBox pagingSize" value="10" onchange="txtPageSize_OnChange()" onfocus="checkCurrentAction()" onblur="setDefaultPaging('txtPageSize')">
                        </span>
                    </div>
                    <div class="tab-content clearfix table-wrapper scale_table_container">
                        <div class="scale_table_block">
                            <input autocomplete="off" type="hidden" id="hdnCategoryCode" value="0" />
                            <input autocomplete="off" type="hidden" id="hdnAction" name="hdnAction" value="" />
                            <input autocomplete="off" type="hidden" id="hdnRecodLockingCode" name="hdnRecodLockingCode" value="0" />
                            <div id="divEmail_Config_Template_List" class="deal clearfix">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div aria-labelledby="myModalLabel" class="form_wrapper modal fade big_popup" id="popup" role="dialog" tabindex="-1" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content clearfix">
            <div class="form_fields acq" id="pupupHtml">

            </div>
        </div>
    </div>
</div>