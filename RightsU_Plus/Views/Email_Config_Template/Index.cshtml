@using UTOFrameWork.FrameworkClasses
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}
<link type="text/css" rel="stylesheet" href="~/css/chosen.min.css?v=@System.Configuration.ConfigurationManager.AppSettings["Version_No"]" />

<script>
      var IsCall = 'Y', Command_Name = "", dummyGuid_G, sort_Type = "T";

    var URL_Bind_EmailTemplate = '@Url.Action("Bind_EmailTemplate", "Email_Config_Template")';
    var URL_Search_EmailTemplate = '@Url.Action("Search_EmailTemplate", "Email_Config_Template")';
    var URL_Save_EmailTemplate = '@Url.Action("Save_EmailTemplate", "Email_Config_Template")';

    var URL_CheckRecordLock = '@Url.Action("CheckRecordLock", "Email_Config_Template")';
    var URL_Refresh_Lock = '@Url.Action("Refresh_Lock", "Global")';
    var URL_Release_Lock = '@Url.Action("Release_Lock", "Global")';

    $(document).ready(function () {
        debugger;
        if (LayoutDirection_G == "RTL") {
            $('#btnUser').css("float", "right");
            $('#txtSort').css("text-align", "left");
            $('#ddlSortType_chosen').css("text-align", "right");
        }
        else {
            $('#btnUser').css("float", "left");
            $('#txtSort').css("text-align", "right");
            $('#ddlSortType_chosen').css("text-align", "left");
        }
        Search_EmailTemplate("");
        addNumeric();
        initializeChosen();

        $('#searchCommon').keypress(function (e) {
            if (e.keyCode == 13) {
                btnSearch_OnClick()
                return false;
            }
        });
        $('#ddlSortType').change(function () {
            sort_Type = $('#ddlSortType').val();
            $('#hdnPageNo').val(1);
            var searchtext = $("#searchCommon").val();
            Search_EmailTemplate(searchtext);
        })
    });

    //-----------------SEARCH-----------------------------

    function btnSearch_OnClick() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        var searchText = $.trim($('#searchCommon').val());

        if (searchText == '') {
            $('#searchCommon').val('');
            $('#searchCommon').attr('required', true)
            return false;
        }
        Search_EmailTemplate(searchText);
    }

    function btnShowAll_OnClick() {
        debugger;
        if (!checkCurrentActionAttribGroup())
            return false;
        if (!ValidatePageSize())
            return false;
        sort_Type = "T";
        $("#ddlSortType").find("option").attr("selected", false);
        $("#ddlSortType").val('T').trigger("chosen:updated");
        $('#hdnPageNo').val(1);
        $('#searchCommon').attr('required', false)
        $('#searchCommon').val('');
        Search_EmailTemplate("");
    }

    function Search_EmailTemplate(searchtext) {
        debugger;
        $('#searchCommon').val(searchtext);
        showLoading();
        $.ajax({
            type: "POST",
            url: URL_Search_EventPlatform,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchtext
            }),
            success: function (result) {
                $('#hdnPageNo').text(1);
                $('#hdnPageNo').val(1);
                $('#lblRecordCount').text(result.Record_Count);
                $("#hdnRecordCount").val(result.Record_Count);
                SetPaging();
                Email_TemplateList("", 0);
                hideLoading();
            }
        });
    }

    //-----------------PAGING------------------------------

    function addNumeric() {
        debugger;
        $(".pagingSize").numeric({
            allowMinus: false,
            allowThouSep: false,
            allowDecSep: false,
            max: 99,
            min: 1
        });
    }

    function SetPaging() {
        debugger;
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo').val());
        var recordCount = parseInt($('#hdnRecordCount').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch').val());
        var recordPerPage = parseInt($('#txtPageSize').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination").pagination(recordCount, opt);
    }

    function pageselectCallback(page_index, jq) {
        debugger;
        if (checkCurrentActionAttribGroup()) {
            $('.required').removeClass('required');

            if (!ValidatePageSize())
                return false;

            var pageNo = page_index + 1
            $('#hdnPageNo').val(pageNo);
            if (IsCall == 'Y')
                Event_PatformList("", 0);
            else
                IsCall = 'Y';
        }
    }

    function txtPageSize_OnChange() {
        debugger;
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;

        Event_PatformList("", 0);
        SetPaging();
    }

    function ValidatePageSize() {
        debugger;
        var recordPerPage = $('#txtPageSize').val();
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }

    function pageBinding() {
        debugger;
        Email_TemplateList("", 0);
        SetPaging();
    }

    //-----------------VALIDATION--------------------------

    function checkCurrentActionAttribGroup() {
        debugger;
        var action = $("#hdnAction").val();
        if (action == "ADD") {
            showAlert("E", "Complete Add Operation First");
            return false;
        }
        else if (action == "EDIT") {
            showAlert("E", "Complete Edit Operation First");
            return false;
        }
        return true;
    }

    //-----------------MASTER-------------------------------

    function Email_TemplateList(commandName, Email_TemplateCode) {
        debugger;
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();

        $.ajax({
            type: "POST",
            url: URL_Bind_EventPlatForm,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                Email_TemplateCode: Email_TemplateCode,
                commandName: commandName,
                sortType: sort_Type
            }),
            success: function (result) {
                debugger;
                $('#divEventPlatformList').empty();
                $('#divEventPlatformList').html(result);
                initializeTooltip();
                initializeExpander();
            }
        })
    }

    function AddEditEmail_Template(commandName, Email_TemplateCode) {
        debugger;
        if (checkCurrentActionAttribGroup() && ValidatePageSize()) {
            Event_PatformList(commandName, Email_TemplateCode);
            $('#hdnAction').val(commandName)
        }
    }

    function SaveEvent_Platform(Email_TemplateCode) {
        debugger;
        var returnVal = true;
        var EventPlatform_Name = $.trim($("#EventPlatform_Name").val());
        var EventPlatform_Short_Name = $.trim($("#EventPlatform_Short_Name").val());

        if (EventPlatform_Name == "") {
            $('#EventPlatform_Name').val('').attr('required', true);
            returnVal = false;
        }
        if (EventPlatform_Short_Name == "") {
            $('#AL_Lab_Short_Name').val('').attr('required', true);
            returnVal = false;
        }


        if (returnVal) {
            $.ajax({
                type: "POST",
                url: URL_SaveEventPlatform,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    EventPlatform_Code: Event_PlatformCode,
                    EventPlatform_Name: EventPlatform_Name,
                    EventPlatform_short_name: EventPlatform_Short_Name
                }),
                success: function (result) {
                    debugger;
                    if (result.Status == "S") {
                        $('#lblRecordCount').text(result.RecordCount);
                        $('#hdnAction').val("")
                        showAlert("S", result.Message);
                        SearchEvent_Platform("");

                        if ($("#searchCommon").val() != "") {
                            SearchEvent_Platform($("#searchCommon").val())
                        }
                        else {
                            Event_PatformList("", 0);
                        }
                    }
                    else {
                        showAlert("E", result.Message);
                    }
                }
            })
        }
    }

    function Event_PlatformCancel() {
        debugger;
        var recordLockingCode = parseInt($('#hdnRecodLockingCode').val())
        if (recordLockingCode > 0)
            ReleaseRecordLock(recordLockingCode, URL_Release_Lock);
        $('#hdnAction').val("")
        Event_PatformList("", 0);
    }

    //----------------Record Locking----------------------------
    function CheckRecordLock(commandName, Email_TemplateCode) {
        debugger;
        $.ajax({
            type: "POST",
            url: URL_CheckRecordLock,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                Email_TemplateCode: Email_TemplateCode,
                commandName: commandName
            }),
            async: false,
            success: function (result) {
                debugger;
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    if (result.Is_Locked == "Y") {
                        AddEditEmail_Template(commandName, Email_TemplateCode)
                        $('#hdnRecodLockingCode').val(result.Record_Locking_Code); // This syntax must be after AddEditCountry() this
                        Call_RefreshRecordReleaseTime(result.Record_Locking_Code, URL_Refresh_Lock);
                    }
                    else {
                        showAlert("E", result.Message);
                    }

                }

            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }


</script>

<style>
    .search_area {
        border-bottom: 1px dotted #777;
        margin-bottom: 5px;
        background-color: #eee;
    }

    #ddlSortType_chosen {
        max-width: 42%;
        text-align: left;
    }
</style>

<div class="main_section">
    <section class="rightsU_container clearfix">
        <div class="container acq main_col">
            <div class="">
                <div class="title_block dotted_border clearfix">
                    <h2 class="pull-left">
                        Email Config Template
                    </h2>
                    <div class="right_nav pull-right">
                        <ul>
                            <li id="btnUser">
                                <input autocomplete="off" type="button" class="btn btn-primary" value="@objMessageKey.Add" onclick="AddEditEmail_Template('ADD', 0)" />
                            </li>
                            <li>
                                <a title="@objMessageKey.SaveToExcel" class="glyphicon glyphicon-floppy-save" style="cursor:pointer; text-decoration:underline; " onclick="ExportToExcel()"></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="search_area" style="background-color: #eee; padding:5px;">
                    <table class="table">
                        <tr>
                            <td style="width:10%; vertical-align: middle;text-align:center;">
                                @objMessageKey.SearchText :
                            </td>
                            <td style="width:25%; vertical-align:middle;">
                                <input autocomplete="off" type="text" name="srchCommon" id="searchCommon" class="search" style="width:100%" placeholder="Event Platform Name" maxlength="100" />
                            </td>
                            <td style="width:13%;vertical-align: middle; text-align:center;">
                                <input autocomplete="off" type="button" id="btnSearch" class="button" value="@objMessageKey.Search" onclick="btnSearch_OnClick()">
                                <input autocomplete="off" type="button" id="btnShowAll" class="button" value="@objMessageKey.ShowAll" onclick="btnShowAll_OnClick()">
                            </td>
                            <td id="txtSort">
                                @objMessageKey.SortBy :
                                @Html.DropDownList("SortType", (List<SelectListItem>)ViewBag.SortType, new { @id = "ddlSortType", @class = "form_input chosen-select" })
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="grid_area">
                    <div style="border-bottom: 1px dotted #777; display:none;"></div>
                    <div class="paging_area clearfix">
                        <span class="pull-left">@objMessageKey.TotalRecords: </span>
                        <span class="pull-left" id="lblRecordCount"></span>
                        <input autocomplete="off" type="hidden" id="hdnPageNo" name="hdnPageNo" value="1" />
                        <input autocomplete="off" type="hidden" id="hdnPagePerBatch" name="hdnPagePerBatch" value="5" />
                        <input autocomplete="off" type="hidden" id="hdnRecordCount" name="hdnRecordCount" value="0" />

                        <div id="Pagination" class="pagination">
                        </div>
                        <span class="pull-right">
                            @objMessageKey.PageSize:
                            <input autocomplete="off" type="text" id="txtPageSize" name="txtPageSize" class="smallTextBox pagingSize" value="10" onchange="txtPageSize_OnChange()" onfocus="checkCurrentActionAttribGroup()" onblur="setDefaultPaging('txtPageSize')">
                        </span>
                    </div>
                    <div class="tab-content clearfix table-wrapper scale_table_container">
                        <div class="scale_table_block">
                            <input autocomplete="off" type="hidden" id="hdnCategoryCode" value="0" />
                            <input autocomplete="off" type="hidden" id="hdnAction" name="hdnAction" value="" />
                            <input autocomplete="off" type="hidden" id="hdnRecodLockingCode" name="hdnRecodLockingCode" value="0" />
                            <div id="divEventPlatformList" class="deal clearfix">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>