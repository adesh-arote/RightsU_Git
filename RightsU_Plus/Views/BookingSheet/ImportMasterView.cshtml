
@using UTOFrameWork.FrameworkClasses
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }

    RightsU_Plus.Controllers.SelectedBKDetails objBKDetails = new RightsU_Plus.Controllers.SelectedBKDetails();
    if (Session["objSDAB"] != null)
    {
        objBKDetails = (RightsU_Plus.Controllers.SelectedBKDetails)Session["objSDAB"];
    }

    string DownloadPath = @System.Configuration.ConfigurationManager.AppSettings["DownloadSheetPath"];
}
<link type="text/css" rel="stylesheet" href="~/css/chosen.min.css?v=@System.Configuration.ConfigurationManager.AppSettings["Version_No"]" />

<script>
    var IsCall = 'Y', Command_Name = "", dummyGuid_G, Filter_By = "A", sort_Type = "T", TabName = "DWN";;

    var DownloadPath = '@DownloadPath';
    var BksCode = '@objBKDetails.BookingSheetCode';

    var URL_BindImportMasterList = '@Url.Action("BindImportMasterList", "BookingSheet")';
    var URL_SearchOnImportMasterList = '@Url.Action("SearchOnImportMasterList", "BookingSheet")';
    var URL_UploadFiles = '@Url.Action("UploadFiles", "BookingSheet")';
    var URL_GetFileName = '@Url.Action("GetFileName", "BookingSheet")';
    var URL_GetImportedSheetStatus = '@Url.Action("GetImportedSheetStatus", "BookingSheet")';
    var URL_RefreshImportedSheet = '@Url.Action("RefreshImportedSheet", "BookingSheet")';
    var URL_ImportSheetView = '@Url.Action("ImportedSheetView", "BookingSheet")';

    $(document).ready(function () {
        if (LayoutDirection_G == "RTL") {
            $('#btnUser').css("float", "right");
            $('#txtSort').css("text-align", "left");
            $('#ddlFilterBy_chosen').css("text-align", "right");
        }
        else {
            $('#btnUser').css("float", "left");
            $('#txtSort').css("text-align", "right");
            $('#ddlFilterBy_chosen').css("text-align", "left");
        }

        addNumeric();
        SearchOnImportMasterList("");
        initializeTooltip();

        //$('#searchCommon').keypress(function (e) {
        //    if (e.keyCode == 13) {
        //        btnSearch_OnClick()
        //        return false;
        //    }
        //});
        //$("#ddlFilterBy").change(function () {
        //    Filter_By = $('#ddlFilterBy').val();
        //    $('#hdnPageNo').val(1);
        //    var searchtext = $("#searchCommon").val();
        //    SearchOnImportMasterList(searchtext);
        //});
        $("#ddlFilterBy").change(function () {
            var searchtext = $("#ddlFilterBy").val();
            //Filter_By = $('#ddlFilterBy').val();
            $('#hdnPageNo').val(1);
            SearchOnImportMasterList(searchtext);
        });
    });

    function addNumeric() {
        debugger;
        $(".pagingSize").numeric({
            allowMinus: false,
            allowThouSep: false,
            allowDecSep: false,
            max: 99,
            min: 1
        });
    }

    function btnSearch_OnClick() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        var searchText = $('#searchCommon').val();

        if (searchText == '') {
            $('#searchCommon').val('');
            $('#searchCommon').attr('required', true)
            return false;
        }
        SearchOnImportMasterList(searchText);
    }

    function btnShowAll_OnClick() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        if (!ValidatePageSize())
            return false;

        Filter_By = "A";
        $("#ddlFilterBy").find("option").attr("selected", false);
        $("#ddlFilterBy").val('A').trigger("chosen:updated");
        $('#hdnPageNo').val(1);

        SearchOnImportMasterList("");
    }

    function SearchOnImportMasterList(searchText) {
        debugger;
        $('#ddlFilterBy').val(searchText);

        $.ajax({
            type: "POST",
            url: URL_SearchOnImportMasterList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchText,
            }),
            async: false,
            success: function (result) {
                $('#hdnPageNo').text(1);
                $('#hdnPageNo').val(1);
                $('#lblRecordCount').text(result.Record_Count);
                $("#hdnRecordCount").val(result.Record_Count);
                SetPaging();
                BindImportMasterList(BksCode);
            }
        });
    }

    function SetPaging() {
        debugger;
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo').val());
        var recordCount = parseInt($('#hdnRecordCount').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch').val());
        var recordPerPage = parseInt($('#txtPageSize').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination").pagination(recordCount, opt);
    }

    function pageselectCallback(page_index, jq) {
        debugger;
        //if (checkCurrentAction()) {
        $('.required').removeClass('required');

        if (!ValidatePageSize())
            return false;

        var pageNo = page_index + 1
        $('#hdnPageNo').val(pageNo);
        if (IsCall == 'Y')
            BindImportMasterList(BksCode);
        else
            IsCall = 'Y';
        //}
    }

    function txtPageSize_OnChange() {
        debugger;
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;

        BindImportMasterList(BksCode);
        SetPaging();
    }

    function ValidatePageSize() {
        debugger;
        var recordPerPage = $('#txtPageSize').val()
        if ($(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }

    function BindImportMasterList(BksCode) {
        debugger;
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();

        $.ajax({
            type: "POST",
            url: URL_BindImportMasterList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                SortType: sort_Type,
                BookingSheetCode: BksCode
            }),
            success: function (result) {
                $('#divBindMasterList').empty();
                $('#divBindMasterList').html(result);

                CheckPendingStatus();
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function Uploadfile() {
        debugger;
        showLoading();

        var Remark = $('#remark').val();
        var BookingSheetCode = $('#hiddenBksCode').val();
        var files = $("#fileUpload").get(0).files;

        if ((Remark == '' || Remark == undefined) && (files.length <= 0)) {
            $('#remark').val('');
            hideLoading();
            $('#fileUpload').attr('required', true);
            $('#remark').attr('required', true);
            showAlert("E", "Please choose file and fill remark.");
            return false;
        }
        else if ((Remark == '' || Remark == undefined) && (files.length > 0)) {
            hideLoading();
            $('#fileUpload').val('');
            showAlert("E", "Please fill remark.");
            return false;
        }
        else if ((Remark != '' || Remark != undefined) && (files.length <= 0)) {
            hideLoading();
            showAlert("E", "Please choose file.");
            return false;
        }
        else {
            var formdata = new FormData();
            formdata.append("InputFile", files[0]);
            formdata.append("BookingSheetCode", BookingSheetCode);
            formdata.append("Remark", Remark);
        }

        $.ajax({
            type: "POST",
            url: URL_UploadFiles,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            async: true,
            contentType: false,
            processData: false,
            data: formdata,
            success: function (result) {
                debugger;
                if (result.Status == "S") {
                    SearchOnImportMasterList("");
                    hideLoading();
                    showAlert("S", result.Message);

                    $("#fileUpload").val('');
                    $('#remark').val('');
                    $('#remark').removeAttr('required');
                }
                else {
                    showAlert("E", result.Message);
                    hideLoading();
                    $("#fileUpload").val('');
                    //$('#remark').val('');
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function DownloadLink(BkSheetCode) {
        debugger;
        //var url = window.location.pathname;
        //var url = window.location.href;
        //var url = window.location.origin;
        $.ajax({
            type: "POST",
            url: URL_GetFileName,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                BookingSheetCode: BkSheetCode
            }),
            success: function (Filename) {
                debugger;
                window.location.href = window.location.origin + "/" + DownloadPath + Filename;
                SearchOnImportMasterList("");
            }
        })
    }

    function CheckPendingStatus() {
        debugger;
        var pendingRecord = 0;
        $(".deal_action").each(function () {
            debugger;
            var Sibling = $(this).attr('class').split(' ')[2];

            var SiblingClass = $(this).attr('class').split(' ')[1];
            if (isNaN(SiblingClass.substr(SiblingClass.length - 1))) {
                var DmMasterCode = SiblingClass.slice(12, SiblingClass.length - 1);

                if (isNaN(Sibling.substr(Sibling.length - 1)))
                    var FileType = Sibling.slice(13, Sibling.length - 1);

                if (SiblingClass.substr(SiblingClass.length - 1) == 'N' || SiblingClass.substr(SiblingClass.length - 1) == 'P' || SiblingClass.substr(SiblingClass.length - 1) == 'I' || SiblingClass.substr(SiblingClass.length - 1) == 'S' || SiblingClass.substr(SiblingClass.length - 1) == 'E') {
                    $.ajax({
                        type: "POST",
                        url: URL_GetImportedSheetStatus,
                        traditional: true,
                        enctype: 'multipart/form-data',
                        contentType: "application/json; charset=utf-8",
                        async: false,
                        data: JSON.stringify({
                            DmMasterCode: DmMasterCode
                        }),
                        success: function (result) {
                            debugger
                            if (result == "true") {
                                redirectToLogin();
                            }
                            if (result.RecordStatus == "P" || result.RecordStatus == "N" || result.RecordStatus == "I") {
                                $("#imgLoading_" + DmMasterCode).css("display", '');
                                pendingRecord++;
                            }
                            else if (result.RecordStatus == "E") {
                                if (result.LatestFile == "Y") {
                                    if (result.FileError == "FE") {
                                        $("#imgLoading_" + DmMasterCode).css("display", 'none');
                                        $('.' + SiblingClass).empty();

                                        var a = '<a title="Error in uploaded file" class="glyphicon glyphicon-exclamation-sign" style="cursor: pointer;"></a>';
                                        $('.' + SiblingClass).append(a);

                                        var status = '<span>Error</span>'

                                        $('.clsTdStatus_' + DmMasterCode + 'P').empty();
                                        $('.clsTdStatus_' + DmMasterCode + 'P').append(status);
                                    }
                                    else {
                                        $("#imgLoading_" + DmMasterCode).css("display", 'none');
                                        $('.' + SiblingClass).empty();

                                        //var a = '<a title="View" class="glyphicon glyphicon-eye-open" style="cursor: pointer;" onclick="window.location.href ="' + URL_ImportSheetView + '?DM_Master_Import_Code=' + DmMasterCode + '&amp;fileType=' + FileType + '";"></a>' +
                                        //    '<a title="Refresh" class="glyphicon glyphicon-refresh" onclick="RefreshBookingSheet(' + DmMasterCode + ');"></a>';
                                        //$('.' + SiblingClass).append(a);

                                        var a = '<a title="View" class="glyphicon glyphicon-eye-open" style="cursor: pointer;" onclick="window.location.href =\'' + URL_ImportSheetView + '?DM_Master_Import_Code=' + DmMasterCode + '&amp;fileType=' + FileType + '\';"></a>';
                                        $('.' + SiblingClass).append(a);

                                        var status = '<span>Error</span>'

                                        $('.clsTdStatus_' + DmMasterCode + 'P').empty();
                                        $('.clsTdStatus_' + DmMasterCode + 'P').append(status);
                                    }
                                }
                                else {
                                    $("#imgLoading_" + DmMasterCode).css("display", 'none');
                                    $('.' + SiblingClass).empty();
                                }
                            }
                            else if (result.RecordStatus == "S") {
                                if (result.LatestFile == "Y") {
                                    $("#imgLoading_" + DmMasterCode).css("display", 'none');
                                    $('.' + SiblingClass).empty();

                                    var a = '<a title="View" class="glyphicon glyphicon-eye-open" style="cursor: pointer;" onclick="window.location.href =\'' + URL_ImportSheetView + '?DM_Master_Import_Code=' + DmMasterCode + '&amp;fileType=' + FileType + '\';"></a>';
                                    $('.' + SiblingClass).append(a);

                                    var status = '<span>Success</span>'

                                    $('.clsTdStatus_' + DmMasterCode + 'P').empty();
                                    $('.clsTdStatus_' + DmMasterCode + 'P').append(status);
                                }
                                else {
                                    $("#imgLoading_" + DmMasterCode).css("display", 'none');
                                    $('.' + SiblingClass).empty();
                                }
                            }
                            initializeTooltip();
                            //SearchOnImportMasterList("");
                        },
                        error: function (result) {
                        }
                    });
                }
            }
        });

        //if (pendingRecord > 0) {
            setTimeout(CheckPendingStatus, 5000);
        //}
    }

    function RefreshImportedSheet(DmMasterCode) {
        debugger;
        $.ajax({
            type: "POST",
            url: URL_RefreshImportedSheet,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                DmMasterCode: DmMasterCode
            }),
            success: function (result) {
                debugger;
                SearchOnImportMasterList("");
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function ChangeTab(NewTab) {
        debugger;
        if (NewTab == "DWN") {
            $("[id*='tab']").removeClass('active');
            $("#tabDownload").addClass('active');
            TabName = NewTab;
        }
        if (NewTab == "IMP") {
            $("[id*='tab']").removeClass('active');
            $("#tabImport").addClass('active');
            TabName = NewTab;
        }

        if (TabName == "DWN") {
            $("#ImportTable").hide();
            $("#DownloadTable").show();
        }
        if (TabName == "IMP") {
            $("#DownloadTable").hide();
            $("#ImportTable").show();
        }
    }

</script>

<div class="main_section">
    <section class="rightsU_container clearfix">
        <div class="container acq main_col">
            <div class="">
                <div class="title_block dotted_border clearfix">
                    <div><h2 class="pull-left">Booking Sheet Import/Export</h2></div>
                </div>

                <div class="search_area" style="background-color: #eee; padding:5px;">
                    <table class="table">
                        <tr>
                            <td style="vertical-align: middle;">
                                <span style="margin-top: 20px;"><b>Client :- </b>@objBKDetails.Client_Name</span>&nbsp;&nbsp;&nbsp;
                                <span style="margin-top: 20px;"><b>Proposal :- </b>@objBKDetails.Proposal_CY</span>&nbsp;&nbsp;&nbsp;
                                <span style="margin-top: 20px; text-align:center;"><b>Cycle :- </b> @objBKDetails.Cycle</span>
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="navigation_tabs">
                    <div class="tabbable" id="divAlternateConfig">
                        <input type="hidden" id="hdnTabName" value="TA" />
                        <ul class="nav nav-tabs nav-tab pull-left" id="ulalternate">
                            <li class="active" id="tabDownload">
                                <a data-toggle="tab" href="#" role="tab" data-tabname="TA" data-configitem="0" onclick="ChangeTab('DWN')">DownLoad Sheet</a>
                            </li>
                            <li id="tabImport">
                                <a data-toggle="tab" href="#" role="tab" data-tabname="TA" data-configitem="0" onclick="ChangeTab('IMP')">Upload Sheet</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="search_area">
                    <table class="table" style="background-color: #eee; height:70px" id="DownloadTable">
                        <tr>
                            <td style="width: 10%; vertical-align: middle;">
                                <b>Download Booking Sheet:</b>
                            </td>
                            <td style="width:50%; vertical-align: middle;" colspan="5">
                                <input type="button" id="btnSheetDownload" value="Download" class="btn btn-primary" onclick="DownloadLink('@objBKDetails.BookingSheetCode')" />
                                <span id="RefreshDate">(<b>Latest Refreshed On : </b> @objBKDetails.MaxDate)</span>
                            </td>
                        </tr>
                    </table>

                    <table class="table" id="ImportTable" style="background-color: #eee; height:70px; display:none;">
                        <tr>
                            <td style="width: 10%; vertical-align: middle;">
                                <b>Import Booking Sheet:</b>
                            </td>
                            <td style="width: 20%;vertical-align: middle;">
                                <input id="fileUpload" type="file" style="width:100%; background-color: white" name="" runat="server" accept=".xls,.xlsx" />
                            </td>
                            <td style="width: 10%; vertical-align: middle; text-align:center;">
                                <b>Remarks:</b>
                            </td>
                            <td style="width: 25%; vertical-align: middle;">
                                <textarea style="min-height:45px;max-height:100px;" id="remark" class="textarea" cols="20"></textarea>
                            </td>
                            <td style="width: 10%;vertical-align: middle; text-align:center">
                                <input type="button" style="width: 50%; cursor:pointer" onclick="return Uploadfile();" class="btn btn-primary" value="Upload" />
                                <input type="hidden" id="hiddenBksCode" value="@objBKDetails.BookingSheetCode" />
                            </td>
                        </tr>
                    </table>
                </div>

                <div style="border-bottom: 1px dotted #777;"></div>
                <div class="search_area" style="background-color: #eee; padding:5px;">
                    <table class="table">
                        <tr>
                            <td style="width: 30%;vertical-align: middle;text-align: right;">
                                <b>Filter By Status :</b>
                            </td>
                            <td style="width: 10%;">
                                @Html.DropDownList("ddlFilterBy", (List<SelectListItem>)ViewBag.FilterBy, new { @id = "ddlFilterBy", @class = "form_input chosen-select" })
                                <input type="hidden" name="srchCommon" id="searchCommon" class="search" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="grid_area">
                    @*<div style="border-bottom: 1px dotted #777; display:none;"></div>*@
                    <div class="paging_area clearfix">
                        <span class="pull-left">Total Records: </span>
                        <span class="pull-left" id="lblRecordCount"></span>
                        <input type="hidden" id="hdnPageNo" name="hdnPageNo" value="1" />
                        <input type="hidden" id="hdnPagePerBatch" name="hdnPagePerBatch" value="5" />
                        <input type="hidden" id="hdnRecordCount" name="hdnRecordCount" value="0" />

                        <div id="Pagination" class="pagination">
                        </div>
                        <span class="pull-right">
                            Page Size:
                            <input type="text" id="txtPageSize" name="txtPageSize" class="smallTextBox pagingSize" value="10" autocomplete="off" onchange="txtPageSize_OnChange()" onblur="setDefaultPaging('txtPageSize')">
                        </span>
                    </div>
                    <div class="tab-content clearfix table-wrapper scale_table_container">
                        <div class="scale_table_block">
                            <input type="hidden" id="hdnAction" value="" />
                            <input type="hidden" id="hdnRecodLockingCode" name="hdnRecodLockingCode" value="0" />
                            <div id="divBindMasterList" class="deal clearfix">

                            </div>
                        </div>
                    </div>
                    <br />
                    <div>
                        @Html.ActionLink("Back to List", "Index", "BookingSheet", new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>