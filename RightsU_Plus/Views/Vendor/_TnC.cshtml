@model List<RightsU_Entities.AL_Vendor_TnC>

@{
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}

<script>
    $(document).ready(function () {
        debugger;
        $("#tncRemark").keyup(function () {
            $("#UsedLetters").html($("#tncRemark").val().length);
        });
        $("#tncRemark").click(function () {
            $("#UsedLetters").html($("#tncRemark").val().length);
        });

        
        $('.ExtendTnC').expander({
        slicePoint: 32,
        expandPrefix: '',
        expandText: '...@objMessageKey.readmore',
        collapseTimer: 0,
        userCollapseText: '<span>[^]</span>'
    });
    });

    function checkCurrentActionTnC() {
        debugger;
        var action = $("#hdnActionTnC").val();
        if (action == "ADD") {
            showAlert("E", "Complete Add Operation First");
            return false;
        }
        else if (action == "EDIT") {
            showAlert("E", "Complete Edit Operation First");
            return false;
        }
        return true;
    }

    function AddEditTnC(TabName, commandName, TnCCode) {
        debugger;
        if (checkCurrentActionTnC()) {
            AdditionalInfoTab(TabName, commandName, TnCCode);
            $('#hdnActionTnC').val(commandName);
        }
    }

    function SaveTnC() {
        debugger;
        var returnVal = true;
        var Remark = $("#tncRemark").val();
        var TnCCode = $("#hdnTnCCode").val();
        if (Remark == "") {
            $("#tncRemark").val('').attr('required', true);
            returnVal = false;
        }
        if (returnVal) {
            $.ajax({
                type: "POST",
                url: URL_SaveTnC,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                data: JSON.stringify({
                    AL_Vendor_TnC_Code: TnCCode,
                    TnC_Description: Remark
                }),
                success: function (result) {
                    debugger;
                    //showAlert(result.status, result.message);
                    AdditionalInfoTab('TNC', '', 0);
                    $('#hdnActionTnC').val("");
                }
            });
        }
    }

    function CancelTnC() {
        $('#hdnActionTnC').val("");
        AdditionalInfoTab('TNC', '', 0);
    }

    function DeleteTnc(TnCCode) {
        if (checkCurrentActionTnC()) {
            $.ajax({
                type: "POST",
                url: URL_DeleteTnc,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                data: JSON.stringify({
                    VendorTncCode: TnCCode
                }),
                success: function (result) {
                    debugger;
                    AdditionalInfoTab('TNC', '', 0);
                }
            });
        }
    }
</script>

@{
    int iTnC = 0;
}

<div style="padding:1%">
    <span style="font-size:18px"> Terms and Conditions </span>
    @if (ViewBag.CommandNameTnC != "VIEW")
    {
        <button class="btn btn-primary pull-right" onclick="AddEditTnC('TNC', 'ADD', 0)"> Add </button>
    }
</div>

<table class="table table-bordered table-hover" id="TnCTable">
    <thead id="TnCHead">
        <tr>
            <th style="width:20%">
                Sr. No.
            </th>
            <th style="width:60%">
                Remark
            </th>
            @if (ViewBag.CommandNameTnC != "VIEW")
            {
                <th style="width:20%">
                    Action
                </th>
            }
        </tr>
    </thead>
    <tbody id="TnCBody">
        @foreach (var item in Model)
        {
            iTnC++;
            <tr>
                @if (ViewBag.CommandNameTnC == "EDIT" && ViewBag.TnCCode == item.AL_Vendor_TnC_Code)
                {
                    <td>
                        @iTnC
                    </td>
                    <td>
                        @*<input type="text" style="width:100%" id="tncRemark" value="@item.TnC_Description" />*@
                        <textarea style="width:100%" id="tncRemark" maxlength="500">@item.TnC_Description</textarea>
                        <div class="pull-right"><span id="UsedLetters">0</span>/500</div>
                        <input type="hidden" id="hdnTnCCode" value="@item.AL_Vendor_TnC_Code" />
                    </td>
                    <td>
                        <a title="Save" class="glyphicon glyphicon-ok-circle" onclick="SaveTnC()"></a>
                        <a title="Cancel" class="glyphicon glyphicon-remove-circle" onclick="CancelTnC()"></a>
                    </td>
                }
                else
                {
                    <td>
                        @iTnC
                    </td>
                    <td class="ExtendTnC">
                        @item.TnC_Description
                    </td>
                    if (ViewBag.CommandNameTnC != "VIEW")
                    {
                        <td>
                            <a title="Edit" class="glyphicon glyphicon-pencil" onclick="AddEditTnC('TNC', 'EDIT', '@item.AL_Vendor_TnC_Code')"></a>
                            @if (item.AL_Vendor_TnC_Code < 0)
                            {
                                <a title="Delete" class="glyphicon glyphicon-trash" onclick="DeleteTnc('@item.AL_Vendor_TnC_Code')"></a>
                            }
                        </td>
                    }
                }
            </tr>
        }
        @if (ViewBag.CommandNameTnC == "ADD")
        {
            <tr>
                <td>
                    New
                </td>
                <td>
                    @*<input type="text" style="width:100%" id="tncRemark" />*@
                    <textarea style="width:100%" id="tncRemark" maxlength="500"></textarea>
                    <div class="pull-right"><span id="UsedLetters">0</span>/500</div>
                </td>
                <td>
                    <a title="Save" class="glyphicon glyphicon-ok-circle" onclick="SaveTnC()"></a>
                    <a title="Cancel" class="glyphicon glyphicon-remove-circle" onclick="CancelTnC()"></a>
                </td>
            </tr>
        }
    </tbody>
</table>