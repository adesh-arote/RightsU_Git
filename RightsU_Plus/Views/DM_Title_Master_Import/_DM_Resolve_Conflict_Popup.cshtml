@using UTOFrameWork.FrameworkClasses;
@model List<RightsU_Entities.USPListResolveConflict_Result>
@{
    string Message = Convert.ToString(Session["Message"]);
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}
<script>
    function ClosePopup() {
        $('#popup').modal('hide');
        $('#pupupHtml').empty();
    }
</script>
<style>
      #ResolveConflict {
        overflow: auto;
        max-height: 200px;
    }
</style>


<div class="modal_block modal_header" id="pupupHtml">
    <a class="close" onclick="ClosePopup()">
        <span>x</span>
        <span class="sr-only">Close</span>
    </a>
    <h2>Resolve Conflict</h2>
</div>

<div class="modalPopup" style="margin: 20px;">
    <div class="add_title_popup">
        <div class="tab-content clearfix table-wrapper scale_table_container">
            <div class="scale_table_block" id="ResolveConflict">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="width:15%;">Type</th>
                            <th style="width:20%;">Import Data</th>
                            <th style="width:20%;">Mapped To</th>
                            <th style="width:30%;" colspan="2">Mapped By</th>                          
                            <th style="width:15%;">Mapped Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td align="center">@item.Type</td>
                                    <td align="center">@item.ImportData</td>
                                    <td align="center">@(item.MappedTo == null ? "-" : @item.MappedTo)</td>
                                    <td align="center" style="width:15%;">@(item.MappedBy == null ? "-" : @item.MappedBy)</td>
                                    <td align="center" style="width:15%;">@(item.ActionBy == "" ? "-" : @item.ActionBy)</td>
                                    <td align="center">@(item.MappedDate == null ? "-" : (string.Format("{0:" + GlobalParams.DateFormat_Display + "}", item.MappedDate)))</td>
                                </tr>
                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="6">No records found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


