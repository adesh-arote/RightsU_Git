<style>
    #sumo_ddlTitle, #sumo_ddlLicensor {
        width: 80% !important;
    }
</style>
<script>
    var IsCall = 'Y', Command_Name = "";

    var URL_BindTitleObjectionList = '@Url.Action("BindTitleObjectionList", "Title_Objection")';
    var URL_SearchTitleObjection = '@Url.Action("SearchTitleObjection", "Title_Objection")';
    var URL_AddTitleObjectionList = '@Url.Action("AddTitleObjectionList", "Title_Objection")';
    var URL_BindTitleLicencor = '@Url.Action("BindTitleLicencor", "Title_Objection")';

    var URL_BindPlatformTree = '@Url.Action("BindPlatformTree", "Title_Objection")';
    var URL_BindCountryTerritory = '@Url.Action("BindCountryTerritory", "Title_Objection")';
    var URL_BindObjectionType = '@Url.Action("BindObjectionType", "Title_Objection")';
    var URL_SaveTitleObjection = '@Url.Action("SaveTitleObjection", "Title_Objection")';

    $(document).ready(function () {
        addNumeric();
        $('#searchCommon').keypress(function (e) {
            debugger;
            if (e.keyCode == 13) {
                btnSearch_OnClick()
                return false;
            }
        });
        $("#ddlTitle,#ddlLicensor").SumoSelect();
        SearchTitleObjection();
        $("#ddlLicensor").change(function () {
            TitleLicencorMapping("T")
        });
        $('input[type=radio][name=rb_AcqSyn').change(function () {

            if (this.value === "S") {
                $("#txtLicensor").text("Licensee");
            }
            else {
                $("#txtLicensor").text("Licensor");
            }
            TitleLicencorMapping("L")
            TitleLicencorMapping("T")
        });
    });

    function TitleLicencorMapping(MapFor) {
        debugger;
        var Licensor_Codes = $('#ddlLicensor').val();
        var Title_Codes = $('#ddlTitle').val();
        var Type = $("input[name='rb_AcqSyn']:checked").val();

        if (Licensor_Codes != null) {
            Licensor_Codes = Licensor_Codes.join(',')
        }
        if (Title_Codes != null) {
            Title_Codes = Title_Codes.join(',')
        }

        $.ajax({
            type: "POST",
            url: URL_BindTitleLicencor,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                Type: Type,
                Title_Codes: Title_Codes,
                Licensor_Codes: Licensor_Codes,
                MapFor: MapFor
            }),
            async: false,
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    debugger;
                    if (MapFor == "T") {
                        $("#ddlTitle").empty();
                        $(result.lstTitle).each(function (index, item) {

                            $("#ddlTitle").append($("<option>").val(this.Value).text(this.Text));
                        });
                        if (Title_Codes != null) {
                            $("#ddlTitle").val(Title_Codes.split(',')).attr("selected", "true")[0].sumo.reload();
                        }
                        else {
                            $("#ddlTitle")[0].sumo.reload();
                        }
                    }
                    else if (MapFor == "L") {
                        $("#ddlLicensor").empty();

                        $(result.lstLicensor).each(function (index, item) {
                            $("#ddlLicensor").append($("<option>").val(this.Value).text(this.Text));
                        });

                        if (Licensor_Codes != null) {
                            $("#ddlLicensor").val(Licensor_Codes.split(',')).attr("selected", "true")[0].sumo.reload();
                        }
                        else {
                            $("#ddlLicensor")[0].sumo.reload();
                        }
                    }
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }
    function addNumeric() {
        $(".pagingSize").numeric({
            allowMinus: false,
            allowThouSep: false,
            allowDecSep: false,
            max: 99,
            min: 1
        });
    }
    function SetPaging() {
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo').val());
        var recordCount = parseInt($('#hdnRecordCount').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch').val());
        var recordPerPage = parseInt($('#txtPageSize').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }
        if (pageNo == 0)
            pageNo = 1;
        var index = pageNo - 1;
        $('#hdnPageNo').val(pageNo);
        var opt = null;
        opt = { callback: pageselectCallback };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination").pagination(recordCount, opt);
    }
    function pageselectCallback(page_index, jq) {
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;
        var pageNo = page_index + 1
        $('#hdnPageNo').val(pageNo);
        if (IsCall == 'Y')
            BindTitleObjectionList();
        else
            IsCall = 'Y';
    }
    function txtPageSize_OnChange() {
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;
        BindTitleObjectionList()
        SetPaging();
    }
    function ValidatePageSize() {
        var recordPerPage = $('#txtPageSize').val()
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }
    function pageBinding() {
        BindTitleObjectionList()
        SetPaging();
    }
    function btnSearch_OnClick() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        if (!ValidatePageSize())
            return false;
        $('#hdnPageNo').val(1);

        var Licensor_Codes = $('#ddlLicensor').val();
        var Title_Codes = $('#ddlTitle').val();

        if (Licensor_Codes === '' && Title_Codes === '') {
            $('#ddlLicensor,#ddlTitle').attr('required', true)
            return false;
        }
        SearchTitleObjection();
    }
    function BindTitleObjectionList() {
        debugger;
        var pageNo=$('#hdnPageNo').val(), recordPerPage = $('#txtPageSize').val();

        if(pageNo == undefined)
            pageNo = 1;
        else
            pageNo = $('#hdnPageNo').val();

        if(recordPerPage == undefined)
            recordPerPage = 10;
        else
            recordPerPage = $('#txtPageSize').val();

        $.ajax({
            type: "POST",
            url: URL_BindTitleObjectionList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage
            }),
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#divTitleObjectionList').empty();
                    $('#divTitleObjectionList').html(result);
                    initializeExpander();
                    initializeTooltip();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }
    function SearchTitleObjection() {
        debugger;
        showLoading();

        var Licensor_Codes = $('#ddlLicensor').val();
        var Title_Codes = $('#ddlTitle').val();
        var Type = $("input[name='rb_AcqSyn']:checked").val();

        if (Licensor_Codes != null) {
            Licensor_Codes = Licensor_Codes.join(',')
        }
        if (Title_Codes != null) {
            Title_Codes = Title_Codes.join(',')
        }

        $.ajax({
            type: "POST",
            url: URL_SearchTitleObjection,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                Type: Type,
                Title_Codes: Title_Codes,
                Licensor_Codes: Licensor_Codes
            }),
            async: false,
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#hdnPageNo').text(1);
                    $('#lblRecordCount').text(result.Record_Count);
                    $("#hdnRecordCount").val(result.Record_Count);
                    SetPaging()
                    BindTitleObjectionList();
                    hideLoading();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }
    function AddTitleObjection() {
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");
        debugger;
        $.ajax({
            type: "POST",
            url: URL_AddTitleObjectionList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: '',
            async: false,
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    if (result.Status == "S") {
                        BindTitleObjectionList();
                    }
                    else {
                        showAlert("E", result.Message);
                    }
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }
    function CancelTitleObjection() {
        BindTitleObjectionList();
    }
</script>
<div class="">
    <div class="title_block dotted_border clearfix">
        <h2 class="pull-left">
            Title Objection
            <span></span>
        </h2>

    </div>
    <div class="search_area" style="background-color:#eee">
        <table class="table" style="width:100%">
            <tr>
                <td style="width:20%">
                    <div style="line-height: 2;">
                        <input type="radio" checked=@(ViewBag.Type == "A"?true:false) name="rb_AcqSyn" value="A"> Acquisition &nbsp;&nbsp;
                        <input type="radio" checked=@(ViewBag.Type == "S"?true:false) name="rb_AcqSyn" value="S"> Syndication
                    </div>
                </td>
                <td style="width:27%;">
                    <b><span id="txtLicensor">Licensor</span> :&nbsp;</b>
                    @Html.DropDownList("Licensor", (IEnumerable<SelectListItem>)ViewBag.ddlLicensor, new { @id = "ddlLicensor", @multiple = "multiple" })
                </td>
                <td style="width:5%;line-height: 30px;">
                    <b>OR</b>
                </td>
                <td style="width:30%;">
                    <b>Title :&nbsp;</b>
                    @Html.DropDownList("Title", (IEnumerable<SelectListItem>)ViewBag.ddlTitle, new { @id = "ddlTitle", @multiple = "multiple" })
                </td>
                <td style="width:15%">
                    <input type="button" id="btnSearch" class="button" value="Search" onclick="btnSearch_OnClick()">
                </td>

            </tr>
        </table>
    </div>
    <div class="grid_area">
        <div style="border-bottom: 1px dotted #777; display:none;"></div>
        <div class="paging_area clearfix">
            <span class="pull-left">Total Records: </span>
            <span class="pull-left" id="lblRecordCount"></span>
            <input type="hidden" id="hdnPageNo" name="hdnPageNo" value="1" />
            <input type="hidden" id="hdnPagePerBatch" name="hdnPagePerBatch" value="5" />
            <input type="hidden" id="hdnRecordCount" name="hdnRecordCount" value="0" />

            <div id="Pagination" class="pagination">
            </div>
            <span class="pull-right">
                Page Size:
                <input type="text" id="txtPageSize" name="txtPageSize" class="smallTextBox pagingSize" value="10" onchange="txtPageSize_OnChange()" onblur="setDefaultPaging('txtPageSize')">
            </span>
        </div>
        <div class="tab-content clearfix table-wrapper scale_table_container">
            <div class="scale_table_block">
                <input type="hidden" id="hdnTitleObjectionCode" value="0" />
                <div id="divTitleObjectionList" class="deal clearfix">

                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="bottom_action">
        <ul class="form_link_nav clearfix">
            <li>
                <input type="button" id="btnCancel" class="btn btn-primary" value="Back To List" onclick="CancelSaveDeal('Y')" />
            </li>
        </ul>
    </div>
</div>
