@model IEnumerable<RightsU_Entities.Digital_Data>
<link type="text/css" rel="stylesheet" href="~/css/chosen.min.css?v=@System.Configuration.ConfigurationManager.AppSettings["Version_No"]" />
<script>
    var Url_SearchDigitalConfig = '@Url.Action("SearchConfig", "Acq_DigitalMaster")';
    function txtPageSize_OnChange() {
        debugger;
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;
        BindDigitalList("Data");
        SetPagingData();
    }
    function btnSearch_OnClick() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        var searchText = $.trim($('#searchCommon').val());

        if (searchText == '') {
            $('#searchCommon').val('');
            $('#searchCommon').attr('required', true)
            return false;
        }
        SearchData(searchText);
    }
    function btnShowAll_OnClick() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");
        if (!ValidatePageSize())
            return false;

        sort_Type = "T";
        $("#ddlSortType").find("option").attr("selected", false);
        $("#ddlSortType").val('T').trigger("chosen:updated");
        $('#hdnPageNo').val(1);
        $('#searchCommon').val('');
        SearchData("");
    }
</script>

<input type="hidden" value="DigiData" id="DigiTab" />
<div style="text-align:center">

    <table class="table table-bordered table-hover" style="margin-top:10px">
        <thead>
            <tr>
                <th>
                    Digital Data Code
                </th>
                <th>
                    Digital Type
                </th>
                <th>
                    Data Description
                </th>
                <th style="display:none">
                    Is Active
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Digital_Data_Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Digital_Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data_Description)
                    </td>
                    <td style="display:none">
                        @if (item.Is_Active == "Y")
                        {
                            <span>Yes</span>
                        }
                        else
                        {
                            <span>No</span>
                        }

                    </td>
                    <td>
                        <a title="Edit" class="glyphicon glyphicon-pencil" onclick="AddEditViewDigitalTab('@item.Digital_Data_Code', 'EDITDATA')"></a>
                        <a title="Detail" class="glyphicon glyphicon-eye-open" onclick="AddEditViewDigitalTab('@item.Digital_Data_Code', 'VIEWDATA')"></a>|
                        @Html.ActionLink(" ", "DeleteData", new { id = item.Digital_Data_Code }, new { @class = "glyphicon glyphicon-trash", @style = "cursor: pointer;", @title = "Delete" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
