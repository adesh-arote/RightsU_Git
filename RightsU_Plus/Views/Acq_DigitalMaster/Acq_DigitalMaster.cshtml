    function ValidatePageSize() {
        debugger;
        var recordPerPage = $('#txtPageSize').val()
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }

    function checkCurrentAction() {
        debugger;
        var action = $.trim($('#hdnAction').val());
        if (action == "ADD_RC") {
            showAlert("E", "Complete Add Operation First")
            return false;
        }
        else if (action == "EDIT_RC") {
            showAlert("E", "Complete Edit Operation First")
            return false;
        }
        else if (action == "DELETE_EDIT_CHN") {
            showAlert("E", "Complete Edit Operation First")
            return false;
        }
        return true;
    }


    function pageBinding(Char) {
        debugger;
        if (Char == "Tab") {
            SearchTab("");
            SetPagingTab();
            $('#liDigitalTab').addClass("active");
            $('#liDigital').removeClass("active");
            $('#liDigitalData').removeClass("active");
            $('#liDigitalConfig').removeClass("active");
        }
        else if (Char == "Digi") {
            SearchDigi("");
            SetPagingDigi();
            $('#liDigitalTab').removeClass("active");
            $('#liDigital').addClass("active");
            $('#liDigitalData').removeClass("active");
            $('#liDigitalConfig').removeClass("active");
        }
        else if (Char == "Data") {
            SearchData("");
            SetPagingData();
            $('#liDigitalTab').removeClass("active");
            $('#liDigital').removeClass("active");
            $('#liDigitalData').addClass("active");
            $('#liDigitalConfig').removeClass("active");
        }
        else if (Char == "Config") {
            SearchConfig("");
            SetPagingConfig();
            $('#liDigitalTab').removeClass("active");
            $('#liDigital').removeClass("active");
            $('#liDigitalData').removeClass("active");
            $('#liDigitalConfig').addClass("active");
        }
    }

    function SearchConfig(searchText) {
        debugger;
        var TabValue = "ConfigTab";
        $('#searchCommon').val(searchText);
        showLoading();
        $.ajax({
            type: "POST",
            url: Url_SearchDigitalConfig,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchText,
                TabValue: TabValue
            }),
            async: false,
            success: function (result) {
                debugger;
                $('#divDigitalList').empty();
                $('#divDigitalList').html(result);
                initializeTooltip();
                $('#hdnPageNo').text(1);
                $('#hdnPageNo').val(1);
                $('#lblRecordCount').text(result.Record_Count);
                $("#hdnRecordCount").val(result.Record_Count);
                SetPagingConfig();
                BindDigitalList("Config");
                hideLoading();
            },
            error: function (result) {
                debugger;
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }

