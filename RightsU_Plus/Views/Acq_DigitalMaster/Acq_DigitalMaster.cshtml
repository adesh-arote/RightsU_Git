        if (commandName == "EDITCONFIG") {
            var URL_CallAction = '@Url.Action("AddOrEditDigitalConfig", "Acq_DigitalMaster")/'+ id;
        }
        if (commandName == "VIEWCONFIG") {
            var URL_CallAction = '@Url.Action("DetailsConfig", "Acq_DigitalMaster")/'+ id;
        }
        $.ajax({
            type: "GET",
            url: URL_CallAction,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
