    function BindDigitalList(String) {

        if (String == "Digi") {
            Url_BindDigital = Url_BindDigitalList;
        }
        else if (String == "Tab") {
            Url_BindDigital = Url_BindDigitalTabList;
        }
        else if (String == "Data") {
            Url_BindDigital = Url_BindDigitalDataList;
        }
        else if (String == "Config") {
            Url_BindDigital = Url_BindDigitalConfigList;
        }
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();
        $.ajax({
            type: "POST",
            url: Url_BindDigital,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage
            }),
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#divDigitalList').empty();
                    $('#divDigitalList').html(result);
                    initializeTooltip();
                }
                //SetPaging();
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function AddEditViewDigitalTab(id, commandName) {
        debugger;
        if (commandName == "ADDTAB") {
            var URL_CallAction = '@Url.Action("AddOrEditDigitalTab", "Acq_DigitalMaster")/'+ id;
        }
        if (commandName == "EDITTAB") {
            var URL_CallAction = '@Url.Action("AddOrEditDigitalTab", "Acq_DigitalMaster")/'+ id;
        }
        if (commandName == "VIEWTAB") {
