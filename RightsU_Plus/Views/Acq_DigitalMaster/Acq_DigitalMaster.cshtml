        }
        if (commandName == "EDITDATA") {
            var URL_CallAction = '@Url.Action("AddOrEditDigitalData", "Acq_DigitalMaster")/'+ id;
        }
        if (commandName == "VIEWDATA") {
            var URL_CallAction = '@Url.Action("DetailsData", "Acq_DigitalMaster")/'+ id;
