@model List<RightsU_Entities.BMS_Log>
@using UTOFrameWork.FrameworkClasses
@{
    
}
<script>
    $(document).ready(function () {
        debugger;
        
        var a = '@ViewBag.RC';
        if (a > 0) {
        //    alert(a);
            $('#lblRecordCount').text(a);
          
        }
        if(a==0)
        {
            $('#lblRecordCount').text(a);
          
        }
    });
</script>



<script>
    $('.expandable').expander({
        slicePoint: 50,
        expandPrefix: '...',
        expandText: '<span>read more</span>',
        userCollapseText: '<span>[^]</span>',
        //collapseTimer: 0,  // re-collapses after 5 seconds; default is 0, so no re-collapsing
    });
</script>


<style>
    #popupFade {
        position: absolute;
        display: none;
        max-width: 300px;
        overflow: hidden;
        border: #bbb 1px solid;
        z-index: 100;
    }

        #popupFade .modal-dialog ul.fancytree-container {
            height: 100%;
            border: 0;
        }

        #popupFade form .modal_block {
            padding: 3px 10px;
        }

        #popupFade #Rights_Platform {
            max-height: 300px;
        }
</style>
<table class="table table-bordered table-hover" id="divBVLogList">
    <thead>
        <tr>
            <th style="width:10%;">Module Name</th>
            <th style="width:8%;">Method Type</th>
            <th style="width:10%;">Request Time</th>
            <th style="width:5%; text-align:center">Request XML</th>
            <th style="width:10%; text-align:center">Response Time</th>
            <th style="width:5%; text-align:center">Response XML</th>
            <th style="width:7%; text-align:center">Status</th>
            <th style="width:20%; text-align:center">Error Description</th>
            @*<th style="width:15%; text-align:center">Request Message</th>*@

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Module_Name
                    <input type="hidden" value="@item.BMS_Log_Code" />
                </td>
                <td>
                    @item.Method_Type
                </td>
                <td>
                    @item.Request_Time
                </td>
                <td>
                    <a href="#">
                        <span class="glyphicon glyphicon-search" title="" onclick="ViewXML(@item.BMS_Log_Code, 'Request')" data-original-title="View XML"></span>
                    </a>

                    @*@item.Request_Xml*@
                </td>
                <td>
                    @item.Response_Time
                </td>
                <td>
                    <a href="#">
                        <span class="glyphicon glyphicon-search" title="" onclick="ViewXML(@item.BMS_Log_Code, 'Response')" data-original-title="View XML"></span>
                    </a>
                    @*@item.Response_Xml*@
                </td>
                <td>
                    @item.Record_Status
                </td>
                <td class="expandable">
                    @item.Error_Description
                </td>
            </tr>

        }
    </tbody>
</table>
