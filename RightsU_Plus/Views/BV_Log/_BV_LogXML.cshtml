<div class="modal_block modal_header">
    <a class="close" onclick="ClosePopup()">
        <span>X</span>
        <span class="sr-only">Close</span>
    </a>

    @if (ViewBag.CommandName == "Request")
    {
        <h2>Request XML</h2>
    }
    else
    {
        <h2>Response XML</h2>
    }

</div>

@if (ViewBag.CommandName == "Request")
{
    <div class="modal_block" style="margin-left: 10px; margin-right: 0px;overflow-x: scroll;overflow-y:scroll;max-height:500px">
        <table class="add_title_popup" id="table1" border="1" style="overflow-x:scroll;margin-top:10px;border: 1px solid black;">
            @Html.Raw(ViewBag.HtmlStr)
        </table>
        <textarea name="comment" style="margin-top:20px;height:150px">@Model.Request_Xml</textarea>
    </div>
}
@if (ViewBag.CommandName == "Response")
{
    <div class="modal_block" style="margin-left: 10px; margin-right: 0px;overflow-x: scroll;overflow-y:scroll;max-height:500px">

        <table class="add_title_popup" id="table1" border="1" style="margin-top:10px; border:1px solid black;">
            @Html.Raw(ViewBag.HtmlStr)
        </table>
        <textarea name="comment" style="margin-top:20px;height:150px">@Model.Response_Xml</textarea>
    </div>
}

<div class="modal_block_full" style="margin-top: 10px;">
    <div class="form_links">
        <ul class="modal_block clearfix" style="padding-left:10px; padding-top: 10px;">
            <li>
                <input type="button" class="btn btn-primary" value="Cancel" onclick="ClosePopup()" />
            </li>
        </ul>
    </div>
</div>