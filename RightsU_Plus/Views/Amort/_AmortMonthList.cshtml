@model List<RightsU_Plus.Controllers.AmortController.Amort_Month_Data>

<script>
</script>
<table class="table table-bordered table-hover" id="tblGenres">
    <thead>
        <tr>
            <th style="width:50%;">Month</th>
            <th style="width:30%;">Status</th>
            <th style="width:20%;">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            string strOpen = "Open", strResuest = "In Request", strPending = "Data Generation Pending", strInProcess = "Data Generation In Process",
                strReady = "Data Generation Ready", strCompleted = "Month Closed", strError = "Error";
            foreach (var item in Model)
            {
                <tr>
                    <td align="left">
                        <span>@item.Month</span>
                    </td>
                    <td align="center">
                        @if (item.status == "O")
                        {
                            @strOpen;
                        }
                        else if (item.status == "R")
                        {
                            @strResuest
                        }
                        else if (item.status == "P")
                        {
                            @strPending
                        }
                        else if (item.status == "I")
                        {
                            @strInProcess
                        }
                        else if (item.status == "D")
                        {
                            @strReady
                        }
                        else if (item.status == "C")
                        {
                            @strCompleted
                        }
                        else
                        {
                            @strError
                        }
                    </td>
                    <td align="center">
                        @if (item.status == "O")
                        {
                            <a title="Calculate" class="glyphicon glyphicon-euro"></a>
                        }
                        else if (item.status == "R")
                        {
                            <img id="imgLoading" title="In Process" src="~/Images/square_dots_loading.gif" style="height: 26px;" />
                        }
                        else if (item.status == "P")
                        {
                            <img id="imgLoading" title="In Process" src="~/Images/square_dots_loading.gif" style="height: 26px;" />
                        }
                        else if (item.status == "I")
                        {
                            <img id="imgLoading" title="In Process" src="~/Images/square_dots_loading.gif" style="height: 26px;" />
                        }
                        else if (item.status == "D")
                        {
                            <img id="imgLoading" title="In Process" src="~/Images/square_dots_loading.gif" style="height: 26px;" />
                        }
                        else if (item.status == "C")
                        {
                            <a title="Recalculate/Re-Process" class="glyphicon glyphicon-refresh"></a>
                            <a title="View Amort" class="glyphicon glyphicon-eye-open"></a>
                        }
                        else
                        {
                            <a title="Recalculate/Re-Process" class="glyphicon glyphicon-refresh"></a>
                            <a title="View Amort" class="glyphicon glyphicon-eye-open"></a>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No Records Found</td>
            </tr>
        }
    </tbody>
</table>
