
@using UTOFrameWork.FrameworkClasses
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}

<script>
    var IsCall = 'Y', Command_Name = "", dummyGuid_G, sort_Type = "T", URL_LoadTab = "", TabName = "M";
    arr = [];
    var URL_SearchDeliveryTracking = '@Url.Action("SearchDeliveryTracking", "DeliveryTracking")';
    var URL_BindMoviesList = '@Url.Action("BindMoviesList", "DeliveryTracking")';
    var URL_BindShowsList = '@Url.Action("BindShowsList", "DeliveryTracking")';
    var URL_SaveDelivery = '@Url.Action("SaveDelivery", "DeliveryTracking")';

    $(document).ready(function () {
        if (LayoutDirection_G == "RTL") {

            $('#ddlSortType_chosen').css("text-align", "right");
        }
        else {

            $('#ddlSortType_chosen').css("text-align", "left");
        }

        if (TabName == "M") {
            $("#searchCommon").attr('placeholder', 'Client, Cycle, Lab, Distributor, Display');
        }
        if (TabName == "S") {
            $("#searchCommon").attr('placeholder', 'Client, Cycle, Lab, Distributor, Display');
        }

        if ("@ViewBag.Message" != "") {
           showAlert("S","@ViewBag.Message");
        }
        SearchDeliveryTracking("", TabName);

        $('#searchCommon').keypress(function (e) {
            if (e.keyCode == 13) {
                btnSearch_OnClick()
                return false;
            }
        });
        $("#ddlSortType").change(function () {
            sort_Type = $('#ddlSortType').val();
            $('#hdnPageNo').val(1);
            var searchtext = $("#searchCommon").val();
            SearchOnList(searchtext, TabName);
        });


    });

    function OpenTab(NewTab) {
        debugger;
        if (NewTab == "M") {
            //URL_LoadTab = URL_3;
            $("[id*='tab']").removeClass('active');
            $("#tabBkgsht").addClass('active');
            $("#searchCommon").attr('placeholder', 'Client, Cycle, Lab, Distributor, Display');
            $('#txtSort').show();
            $('#ddlSort').show();
            TabName = NewTab;
        }
        if (NewTab == "S") {
            //URL_LoadTab = URL_PendingRecommendations;
            $("[id*='tab']").removeClass('active');
            $("#tabPdngrmdn").addClass('active');
            $("#searchCommon").attr('placeholder', 'Client, Cycle, Lab, Distributor, Display');
            $('#txtSort').hide();
            $('#ddlSort').hide();
            TabName = NewTab;
        }
        SearchDeliveryTracking("", TabName);
    }

    function SearchDeliveryTracking(searchText, TabName) {
        debugger;
        $('#searchCommon').val(searchText);

        $.ajax({
            type: "POST",
            url: URL_SearchDeliveryTracking,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchText,
                TabName: TabName
            }),
            async: false,
            success: function (result) {
                $('#hdnPageNo').text(1);
                $('#hdnPageNo').val(1);
                $('#lblRecordCount').text(result.Record_Count);
                $("#hdnRecordCount").val(result.Record_Count);
                //SetPaging();
                //if (TabName == "M") {
                //    BindMoviesList("M",0);
                //}
                //if (TabName == "S") {
                //    BindShowsList();
                //}
                BindMoviesList(TabName, 0)
            }
        });
    }

    function BindMoviesList(CommandName, id) {
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();

        debugger;
        $.ajax({
            type: "POST",
            url: URL_BindMoviesList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                sortType: sort_Type,
                CommandName: CommandName,
                id: id
            }),
            success: function (result) {
                $('#divBindList').empty();
                $('#divBindList').html(result);

            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function BindShowsList() {
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();

        debugger;
        $.ajax({
            type: "POST",
            url: URL_BindShowsList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                sortType: sort_Type
            }),
            success: function (result) {
                $('#divBindList').empty();
                $('#divBindList').html(result);

            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function SaveDeliveryTracking() {
        debugger;
        var deliveryTrackingList = new Array();

        var bookinSheetCodes = [];
        $.each($("#tblMoviesList tbody tr"), function (index, value) {
            index = index + 1;


            var BookingSheetCode = $('#' + index + '_hdnCnt').val();
            var codes = '';
            if ($('#chk_' + BookingSheetCode).is(':checked') == true) {
                var AL_Material_Tracking_Code = $('#hdnPoster_' + index).val();

                //if ($('#chk_Poster' + index).is(':checked')) {
                //    PosterValue = "Yes";
                //}
                //else {
                //    PosterValue = "No";
                //}

                var PosterValue = $('#chk_Poster' + index).is(':checked') == true ? "Yes" : "No";
                var StillValue = $('#chk_Still' + index).is(':checked') == true ? "Yes" : "No";
                var TrailerValue = $('#chk_Trailer' + index).is(':checked') == true ? "Yes" : "No";
                var EditedPosterValue = $('#chk_EditedPoster' + index).is(':checked') == true ? "Yes" : "No";
                var EditedStillValue = $('#chk_EditedStill' + index).is(':checked') == true ? "Yes" : "No";
                var DeliveryDateValue = $('#txt_DeliveryDate' + index).val();
                var PO_Status = $('#ddlPOStatus' + index).val();

                deliveryTrackingList.push({
                    Al_Material_Tracking_Code: AL_Material_Tracking_Code,
                    Poster: PosterValue,
                    Still: StillValue,
                    Trailer: TrailerValue,
                    Edited_Poster: EditedPosterValue,
                    Edited_Still: EditedStillValue,
                    Delivery_Date: DeliveryDateValue,
                    PO_Status: PO_Status

                })
            }

        })

        $.ajax({
            type: "POST",
            url: URL_SaveDelivery,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            async: false,
            data: JSON.stringify({
                lst: deliveryTrackingList
            }),
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();

                }
                else {
                    if (result.Status == "S") {
                        showAlert("S", result.Message);
                        $('#lblRecordCount').text(result.RecordCount);
                        $('#hdnRecodLockingCode').val(0);

                        //BindMoviesList("M",0);
                        SearchDeliveryTracking("", TabName);

                    }
                    else
                        showAlert("E", result.Message, "");
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        })
    }

</script>

