
@using UTOFrameWork.FrameworkClasses
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}

<link type="text/css" rel="stylesheet" href="~/css/chosen.min.css?v=@System.Configuration.ConfigurationManager.AppSettings["Version_No"]" />

<script>
    var IsCall = 'Y', Command_Name = "", dummyGuid_G, sort_Type = "T", URL_LoadTab = "", TabName = "M";
    arr = [];
    var URL_SearchDeliveryTracking = '@Url.Action("SearchDeliveryTracking", "DeliveryTracking")';
    var URL_BindMoviesList = '@Url.Action("BindMoviesList", "DeliveryTracking")';
    var URL_BindShowsList = '@Url.Action("BindShowsList", "DeliveryTracking")';
    var URL_SaveDelivery = '@Url.Action("SaveDelivery", "DeliveryTracking")';

    $(document).ready(function () {
        if (LayoutDirection_G == "RTL") {

            $('#ddlSortType_chosen').css("text-align", "right");
        }
        else {

            $('#ddlSortType_chosen').css("text-align", "left");
        }

        SearchDeliveryTracking(TabName, "", "", "", "", "");
    });

    function OpenTab(NewTab) {
        debugger;
        if (NewTab == "M") {
            //URL_LoadTab = URL_3;
            $("[id*='tab']").removeClass('active');
            $("#tabBkgsht").addClass('active');
            $("#searchCommon").attr('placeholder', 'Client, Cycle, Lab, Distributor, Display');
            $('#txtSort').show();
            $('#ddlSort').show();
            TabName = NewTab;
        }
        if (NewTab == "S") {
            //URL_LoadTab = URL_PendingRecommendations;
            $("[id*='tab']").removeClass('active');
            $("#tabPdngrmdn").addClass('active');
            $("#searchCommon").attr('placeholder', 'Client, Cycle, Lab, Distributor, Display');
            $('#txtSort').hide();
            $('#ddlSort').hide();
            TabName = NewTab;
        }
        SearchDeliveryTracking(TabName, "", "", "", "", "");
    }

    function SearchDeliveryTracking(TabName, Client, CycleDate, Lab, Distributor, Display) {
        debugger;
        
        $.ajax({
            type: "POST",
            url: URL_SearchDeliveryTracking,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({    
                TabName: TabName,
                Client: Client,
                CycleDate: CycleDate,
                Lab: Lab,
                Distributor: Distributor,
                Display: Display
            }),
            async: false,
            success: function (result) {
                $('#hdnPageNo').text(1);
                $('#hdnPageNo').val(1);
                $('#lblRecordCount').text(result.Record_Count);
                $("#hdnRecordCount").val(result.Record_Count);
                SetPaging();
                
                BindMoviesList(TabName, 0)
            }
        });
    }

    function BindMoviesList(CommandName, id) {
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();

        debugger;
        $.ajax({
            type: "POST",
            url: URL_BindMoviesList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                sortType: sort_Type,
                CommandName: CommandName,
                id: id
            }),
            success: function (result) {
                $('#divBindList').empty();
                $('#divBindList').html(result);

            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function BindShowsList() {
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();

        debugger;
        $.ajax({
            type: "POST",
            url: URL_BindShowsList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                sortType: sort_Type
            }),
            success: function (result) {
                $('#divBindList').empty();
                $('#divBindList').html(result);

            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function SaveDeliveryTracking() {
        debugger;
        var deliveryTrackingList = new Array();

        var bookinSheetCodes = [];
        $.each($("#tblMoviesList tbody tr"), function (index, value) {
            debugger;
            index = index + 1;

            var BookingSheetCode = $('#' + index + '_hdnCnt').val();
            var codes = '';
            if ($('#chk_' + BookingSheetCode).is(':checked') == true) {
                debugger;
                var AL_Material_Tracking_Code = $('#hdnPoster_' + index).val();

                //if ($('#chk_Poster' + index).is(':checked')) {
                //    PosterValue = "Yes";
                //}
                //else {
                //    PosterValue = "No";
                //}

                var PosterValue = $('#chk_Poster' + index).is(':checked') == true ? "Yes" : "No";
                var StillValue = $('#chk_Still' + index).is(':checked') == true ? "Yes" : "No";
                var TrailerValue = $('#chk_Trailer' + index).is(':checked') == true ? "Yes" : "No";
                var EditedPosterValue = $('#chk_EditedPoster' + index).is(':checked') == true ? "Yes" : "No";
                var EditedStillValue = $('#chk_EditedStill' + index).is(':checked') == true ? "Yes" : "No";
                var DeliveryDateValue = $('#txt_DeliveryDate' + index).val();
                var PO_Status = $('#ddlPOStatus' + index).val();

                deliveryTrackingList.push({
                    Al_Material_Tracking_Code: AL_Material_Tracking_Code,
                    Poster: PosterValue,
                    Still: StillValue,
                    Trailer: TrailerValue,
                    Edited_Poster: EditedPosterValue,
                    Edited_Still: EditedStillValue,
                    Delivery_Date: DeliveryDateValue,
                    PO_Status: PO_Status

                })
            }
        })

        $.ajax({
            type: "POST",
            url: URL_SaveDelivery,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            async: false,
            data: JSON.stringify({
                lst: deliveryTrackingList
            }),
            success: function (result) {
                debugger;
                if (result == "true") {
                    redirectToLogin();

                }
                else {
                    if (result.Status == "S") {
                        showAlert("S", result.Message);
                        $('#lblRecordCount').text(result.RecordCount);
                        $('#hdnRecodLockingCode').val(0);

                        //BindMoviesList("M",0);
                        SearchDeliveryTracking(TabName, "", "", "", "", "");

                    }
                    else
                        showAlert("E", result.Message, "");
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        })
    }

</script>

<script>

    function btnSearch_OnClick() {
        debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        var Client = $('#ddlClient').val();
        var CycleDate = $('#CycleDate').val();
        var Lab = $('#ddlLab').val();
        var Distributor = $('#Distributor').val();
        var Display = $('#ddlDisplayItem').val();

        if (Client == "" && CycleDate == "" && Lab == "" && Distributor == "" && Display == "") {
            $('#ddlClient').attr('required', true);
            $('#CycleDate').attr('required', true);
            $('#ddlLab').attr('required', true);
            $('#Distributor').attr('required', true);
            $('#ddlDisplayItem').attr('required', true);

            showAlert("E", "Please select atleast one input field.");
            return false;
        }

        SearchDeliveryTracking(TabName, Client, CycleDate, Lab, Distributor, Display);
    }

    function btnShowAll_OnClick() {
        debugger;

        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        if (!ValidatePageSize())
            return false;

        $('#ddlClient').val('').trigger('chosen:updated');
        $('#CycleDate').val('');
        $('#ddlLab').val('').trigger('chosen:updated');
        $('#Distributor').val('').trigger('chosen:updated');
        $('#ddlDisplayItem').val('').trigger('chosen:updated');

        SearchDeliveryTracking(TabName, "", "", "", "", "");
    }

    function SetPaging() {
        debugger;
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo').val());
        var recordCount = parseInt($('#hdnRecordCount').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch').val());
        var recordPerPage = parseInt($('#txtPageSize').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 30;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination").pagination(recordCount, opt);
    }

    function pageselectCallback(page_index, jq) {
        debugger;
        $('.required').removeClass('required');

        if (!ValidatePageSize())
            return false;

        var pageNo = page_index + 1
        $('#hdnPageNo').val(pageNo);
        if (IsCall == 'Y') {
            BindMoviesList(TabName, 0)
        }
        else {
            IsCall = 'Y';
        }
    }

    function txtPageSize_OnChange() {
        debugger;
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;
        BindMoviesList(TabName, 0)

        SetPaging();
    }

    function ValidatePageSize() {
        debugger;
        var recordPerPage = $('#txtPageSize').val()
        if ($(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }

</script>

