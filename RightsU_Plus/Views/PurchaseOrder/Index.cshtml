            }),
            success: function (Filename) {
                debugger;
                var url = window.location.origin + "/" + DownloadPath + Filename;
                var save = document.createElement('a');
                save.href = url;
                save.download = Filename;
                //save.target = '_blank';
                save.click();
            }
        })
    }

    function CheckPendingStatus() {
        debugger;
        var pendingRecord = 0;
        $(".deal_action").each(function () {
            debugger;

            var Sibling = $(this).attr('class').split(' ')[2];

            var SiblingClass = $(this).attr('class').split(' ')[1];
            if (isNaN(SiblingClass.substr(SiblingClass.length - 1))) {
                var PurchaseOrderCode = SiblingClass.slice(12, SiblingClass.length - 1);

                if (isNaN(Sibling.substr(Sibling.length - 1)))
                    var BookingSheetCode = Sibling.slice(13, Sibling.length - 1);

                if (SiblingClass.substr(SiblingClass.length - 1) == 'I' || SiblingClass.substr(SiblingClass.length - 1) == 'P') {
                    $.ajax({
                        type: "POST",
                        url: URL_GetPurchaseOrderStatus,
                        traditional: true,
                        enctype: 'multipart/form-data',
                        contentType: "application/json; charset=utf-8",
                        async: false,
                        data: JSON.stringify({
                            PurchaseOrderCode: PurchaseOrderCode
                        }),
                        success: function (result) {
                            debugger
                            if (result == "true") {
                                redirectToLogin();
                            }
                            if (result.RecordStatus == "P" || result.RecordStatus == "I") {
                                $("#imgLoading_" + PurchaseOrderCode).css("display", '');
                                pendingRecord++;
                            }
                            else if (result.RecordStatus == "C") {
                                $("#imgLoading_" + PurchaseOrderCode).css("display", 'none');
                                $('.' + SiblingClass).empty();

                                var a = '<a title="view" class="glyphicon glyphicon-eye-open" style="cursor: pointer;" onclick="BindPODetails(' + PurchaseOrderCode + ');"</a>' +
                                    '<a title="Refresh" class="glyphicon glyphicon-refresh" onclick="RefreshPoList(' + PurchaseOrderCode + ',' + BookingSheetCode + ');"></a>';
                                $('.' + SiblingClass).append(a);
                                
                                initializeTooltip();
                            }
                        },
                        error: function (result) {
                        }
                    });
                }
            }
        });

        if (pendingRecord > 0) {
            setTimeout(CheckPendingStatus, 5000);
        }
    }

    function RefreshPoList(PoCode, BkCode) {
        debugger;
        $.ajax({
            type: "POST",
            url: URL_RefreshPoList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                PurchaseOrderCode: PoCode,
                BookingSheetCode: BkCode
            }),
            success: function (result) {
                debugger;
                SearchPOList("");
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

