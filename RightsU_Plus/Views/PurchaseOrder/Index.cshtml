                //    //$('#divBindPoDetails').empty();
                //    //$('#divBindPoDetails').html(result);
                //    OpenTab(TabName, POC);
                //    addNumeric();
                //}
                $('#PoList').hide();
                $('#PodList').show();
                $('#divBindPoDetails').empty();
                $('#divBindPoDetails').html(result);
                OpenTab(TabName, POC);
                
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function OpenTab(NewTab,PoCode) {
        debugger;
        if (NewTab == "MV") {
            $("[id*='tab']").removeClass('active');
            $("#tabMovie").addClass('active');
            TabName = NewTab;
        }
        else if (NewTab == "SH") {
            $("[id*='tab']").removeClass('active');
            $("#tabShow").addClass('active');
            TabName = NewTab;
        }
        //BindTabData(TabName , PoCode);
        if (TabName == "MV") {
            BindMovieTabData(PoCode)
        }
        if (TabName == "SH") {
            BindShowTabData(PoCode)
        }
    }

    function BindTabData(TabName, PoCode) {
        debugger;
        $.ajax({
            type: "POST",
            url: URL_BindTabData,
            traditional: true,
            enctype: 'multipart/form-data',
