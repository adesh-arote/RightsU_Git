    var URL_BindPOList = '@Url.Action("BindPOList", "PurchaseOrder")';
    var URL_BindPODetails = '@Url.Action("BindPODetails", "PurchaseOrder")';
    var URL_BindTabData = '@Url.Action("BindTabData", "PurchaseOrder")';
    var URL_BindMovieTabData = '@Url.Action("BindMovieTabData", "PurchaseOrder")';
    var URL_BindShowTabData = '@Url.Action("BindShowTabData", "PurchaseOrder")';
