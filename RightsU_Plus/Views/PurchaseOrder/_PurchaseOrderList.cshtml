@model List<RightsU_Entities.USPAL_GetPurchaseOrderList_Result>
@using UTOFrameWork.FrameworkClasses
@{
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th style="width:15%">Clients</th>
            <th style="width:15%">Proposal - CY</th>
            <th style="width:15%">Booking Sheet No</th>
            <th style="width:12%">Created On</th>
            <th style="width:12%">Created By</th>
            <th style="width: 10%;">Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Vendor_Name)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Proposal_CY)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Booking_Sheet_No)
                    </td>
                    <td style="text-align:center">
                        @item.Inserted_On.Value.ToString("dd MMM yyyy")
                    </td>
                    <td style="text-align:center">
                        <span>
                            @{
                                string ActionBy = "";
                                if (item.Inserted_By > 0 && item.Inserted_By != null)
                                {
                                    ActionBy = ((IEnumerable<RightsU_Entities.User>
                                        )ViewBag.UserCode).Where(a => a.Users_Code == item.Inserted_By).Select(b => b.First_Name + " " + b.Last_Name).FirstOrDefault();
                                }
                                @ActionBy
                            }
                        </span>
                    </td>
                    <td style="text-align:center" class="clsTdStatusPO_@item.AL_Purchase_Order_Code@item.Status">                      
                        @if(item.Status == "C")
                        {
                            <span>Success</span>
                        }
                        else
                        {
                            <span>In Progress</span>
                        }
                    </td>
                    <td style="text-align:center" class="deal_action clsTdAction_@item.AL_Purchase_Order_Code@item.Status clsTdAction1_@item.AL_Booking_Sheet_Code@item.Status clsTdAction2_@item.AL_Proposal_Code@item.Status">
                        @if (item.Status == "C")
                        {
                            <a title="view" class="glyphicon glyphicon-eye-open" style="cursor: pointer;" onclick="BindPODetails('@item.AL_Purchase_Order_Code', @item.AL_Proposal_Code)"></a>
                            <a title="Refresh" class="glyphicon glyphicon-refresh" style="cursor:pointer;" onclick="RefreshPoList('@item.AL_Purchase_Order_Code','@item.AL_Booking_Sheet_Code' )"></a>
                            <img id="imgLoadingPO_@item.AL_Purchase_Order_Code@item.Status" title="In Process" src="~/Images/square_dots_loading.gif" style="height: 26px; display:none" />
                        }
                        else
                        {
                            <img id="imgLoadingPO_@item.AL_Purchase_Order_Code@item.Status" title="In Process" src="~/Images/square_dots_loading.gif" style="height: 26px;" />
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9">@objMessageKey.Norecordfound</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <div style="margin:20px; text-align:left">
        @if (ViewBag.Configuration == "config")
        {
            @Html.ActionLink("Booking Sheet List", "Index", "BookingSheet", null, new { @class = "btn btn-primary" })
        }
    </div>
</div>
