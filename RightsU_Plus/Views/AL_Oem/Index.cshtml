@using UTOFrameWork.FrameworkClasses
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}
<link type="text/css" rel="stylesheet" href="~/css/chosen.min.css?v=@System.Configuration.ConfigurationManager.AppSettings["Version_No"]" />

<script>
    confirmed = false;
    var sort_Type = "T";
    var URL_BindOemList =  '@Url.Action("BindALOemList", "AL_Oem")';
    var URL_SearchOemList = '@Url.Action("SearchALOem", "AL_Oem")';
    var URL_SaveOem = '@Url.Action("SaveOEM", "AL_Oem")';
    var Url_Index = '@Url.Action("Index", "AL_Oem")';
    var URL_DeleteOem = '@Url.Action("DeleteAlOem", "AL_Oem")';
    var URL_CheckRecordLock = '@Url.Action("CheckRecordLock", "AL_Oem")';
    var URL_Refresh_Lock = '@Url.Action("Refresh_Lock", "Global")';
    var URL_Release_Lock = '@Url.Action("Release_Lock", "Global")';

    var URL_BindAddEditView = '@Url.Action("BindAddEditView", "AL_Oem")';
    var URl_AddEditFieldValuel = '@Url.Action("AddEditFieldValue", "AL_Oem")';
  
     $(document).ready(function () {
        if(LayoutDirection_G == "RTL")
        {
            $('#btnUser').css("float","right");
            $('#txtSort').css("text-align", "left");
            $('#ddlSortType_chosen').css("text-align", "right");
        }
        else
        {
            $('#btnUser').css("float","left");
            $('#txtSort').css("text-align","left");
            $('#ddlSortType_chosen').css("text-align", "left");
         }
          if ("@ViewBag.Message" != "") {
           showAlert("S","@ViewBag.Message");
           }
         SearchOem("");
         $('#searchCommon').keypress(function (e) {
            if (e.keyCode == 13) {
                btnSearch_OnClick()
                return false;
            }
        });
        $("#ddlSortType").change(function () {
            sort_Type = $('#ddlSortType').val();
            $('#hdnPageNo').val(1);
            var searchtext= $("#searchCommon").val();
            SearchOem(searchtext);
        });
    });

    function ValidatePageSize() {
        debugger;
        var recordPerPage = $('#txtPageSize').val()
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }

    function txtPageSize_OnChange() {
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;
        BindOemList()
        SetPaging();
    }

    function btnSearch_OnClick() {
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");
        if (!ValidatePageSize())
            return false;

        var searchText = $.trim($('#searchCommon').val());

        if (searchText == '') {
            $('#searchCommon').val('');
            $('#searchCommon').attr('required', true)
            return false;
        }
        SearchOem(searchText);
    }

    function btnShowAll_OnClick() {
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");
        if (!ValidatePageSize())
            return false;

        sort_Type = "T";
        $("#ddlSortType").find("option").attr("selected", false);
        $("#ddlSortType").val('T').trigger("chosen:updated");
        $('#hdnPageNo').val(1);
        $('#searchCommon').val('');
        SearchOem("");
    }

    function SetPaging() {
        debugger;
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo').val());
        var recordCount = parseInt($('#hdnRecordCount').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch').val());
        var recordPerPage = parseInt($('#txtPageSize').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination").pagination(recordCount, opt);
    }
    function pageselectCallback(page_index, jq) {
        if (checkCurrentAction()) {
            $('.required').removeClass('required');

            if (!ValidatePageSize())
                return false;

            var pageNo = page_index + 1
            $('#hdnPageNo').val(pageNo);
            if (IsCall == 'Y')
                BindOemList();
            else
                IsCall = 'Y';
        }
    }
    function BindOemList() {
        debugger;
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();
        $.ajax({
            type: "POST",
            url: URL_BindOemList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                sortType: sort_Type,
            }),
            success: function (result) {
                debugger;
                $('#divALOEMList').empty();
                $('#divALOEMList').html(result);

            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }
    function SearchOem(searchText) {
        debugger;
        $('#searchCommon').val(searchText);
        showLoading();
        $.ajax({
            type: "POST",
            url: URL_SearchOemList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchText
            }),
            async: false,
            success: function (result) {
                debugger;
                $('#hdnPageNo').text(1);
                $('#hdnPageNo').val(1);
                $('#lblRecordCount').text(result.Record_Count);
                $("#hdnRecordCount").val(result.Record_Count);
                SetPaging();
                BindOemList();
                hideLoading();
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }

     function checkCurrentAction() {
        var action = $.trim($('#hdnAction').val());
        if (action == "ADD") {
            showAlert("E", "@objMessageKey.CompleteAddOperationFirst")
            return false;
        }
        else if (action == "EDIT") {
            showAlert("E", "@objMessageKey.CompleteEditOperationFirst")
            return false;
        }
        return true;
    }

    function CheckRecordLock(CommandName, Id) {
        debugger;
        $.ajax({
            type: "POST",
            url: URL_CheckRecordLock,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                AL_OemCode : Id
            }),
            async: false,
            success: function (result) {
                debugger;
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    if (result.Is_Locked == "Y") {
                        AddEditALOem(CommandName, Id)
                        $('#hdnRecodLockingCode').val(result.Record_Locking_Code); 
                        Call_RefreshRecordReleaseTime(result.Record_Locking_Code, URL_Refresh_Lock);
                    }
                    else
                        showAlert("E", result.Message);
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }

    function SaveALOem(Id) {
        debugger;
        var recordLockingCode = parseInt($('#hdnRecodLockingCode').val())
        if (recordLockingCode > 0)
            ReleaseRecordLock(recordLockingCode, URL_Release_Lock);

        var Return_value = true;
        var Company_Name = $.trim($("#txtCompany_Name").val());
        var Company_Short_Name = $.trim($("#txtCompany_Short_Name").val());

        if (Company_Name == "") {
            $("#txtCompany_Name").val('').attr("required", true);
            Return_value = false;
        }
        if (Company_Short_Name == "") {
            $("#txtCompany_Short_Name").val('').attr("required", true);
            Return_value = false;
        }
        //var length = $("table tr[id*='tbl_Additional_Fileds']").length;
        //if (length == 0) {
        //    showAlert("E", "Please Add Field Values");
        //    Return_value = false;
        //}

        if (Return_value) {
            $.ajax({
                type: "POST",
                url: URL_SaveOem,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    Id: Id,
                    Company_Name: Company_Name,
                    Company_Short_Name: Company_Short_Name
                }),
                async: false,
                success: function (result) {
                    debugger;
                    if (result.Status == "S") {
                        window.location.href = Url_Index;
                    }
                    else {
                        showAlert("E", result.Message);
                    }

                },
                error: function (result) {
                    alert('Error: ' + result.responseText);
                }
            });
        }
    }

    function DeleteALOem(Id) {
        debugger;
            $.ajax({
                type: "POST",
                url: URL_DeleteOem,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    Id: Id
                }),
                async: false,
                success: function (result) {
                    debugger;
                    if (result.Status == "S") {
                        window.location.href = Url_Index;
                    }
                    if (result.Status == "E") {
                        showAlert("E", result.Message);

                    }

                },
                error: function (result) {
                    alert('Error: ' + result.responseText);
                    hideLoading();
                }
            });
    }

    function ALOemCancel() {
        debugger;
        var recordLockingCode = parseInt($('#hdnRecodLockingCode').val())
        if (recordLockingCode > 0)
            ReleaseRecordLock(recordLockingCode, URL_Release_Lock);

        $('#DivAddEditOem').empty();
        $("#MainView").show();
        //var searchText = $('#searchCommon').val();
       // SearchOem("");
        //window.location.href = Url_Index

    }

     function AddEditALOem(CommandName, Id) {
        debugger;
         $.ajax({
             type: "POST",
             url: URL_BindAddEditView,
             traditional: true,
             enctype: 'multipart/form-data',
             contentType: "application/json; charset=utf-8",
             dataType: "html",
             data: JSON.stringify({
                 ALOemCode: Id,
                 CommandName:CommandName
             }),
             async: false,
             success: function (result) {
                 debugger;
                 $("#MainView").hide();
                 $('#DivAddEditOem').empty();
                 $('#DivAddEditOem').html(result);
                 AddEditViewGrid(CommandName, Id);


             },
             error: function (result) {
                 alert('Error: ' + result.responseText);
                 hideLoading();
             }
         });
    }




 function AddEditViewGrid(CommandName, Id) {
            debugger;
            $.ajax({
                type: "POST",
                url: '@Url.Action("AddEditFieldValue", "AL_Oem")',
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    CommandName: CommandName,
                    Id:Id
                }),
                async: false,
                success: function (data) {
                    debugger;
                    $('#divEFDetails').empty();
                    $('#divEFDetails').html(data);

                },
                error: function (data) {
                    alert('Error: ' + data.responseText);
                }
            });
        }


</script>

<div class="main_section">
    <section class="rightsU_container clearfix">
        <div class="container acq main_col">
            <div class="" id="MainView">
                <div class="title_block dotted_border clearfix">
                    <h2 class="pull-left">
                        OEM
                    </h2>
                    <div class="right_nav pull-right">
                        <ul>
                            <li>
                                <input type="button" class="btn btn-primary" value="@objMessageKey.Add" onclick="AddEditALOem('ADD', '0')" />
                            </li>
                            <li>
                                <a title="@objMessageKey.SaveToExcel" class="glyphicon glyphicon-floppy-save" style="cursor:pointer; text-decoration:underline; " onclick="ExportToExcel()"></a>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="search_area" style="background-color: #eee; padding:5px;">
                    <table class="table">
                        <tr>
                            <td style="width:10%;text-align:center;padding-top:8px;">
                                @objMessageKey.SearchText :
                            </td>
                            <td style="width:30%;">
                                <input type="text" name="srchCommon" id="searchCommon" class="search" style="width:100%" autocomplete="off" placeholder="Company Name, Company Short Name" />
                            </td>
                            <td>
                                <input type="button" id="btnSearch" class="button" value="@objMessageKey.Search" onclick="btnSearch_OnClick()">
