@model RightsU_Entities.Attrib_Report_Column

@{
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}

<div class="main_section">
    <section class="rightsU_container clearfix">
        <div class="container acq main_col">
            <div class="">
                @if (ViewBag.details != "Details")
                {
                    <h4>Are you sure you want to delete?</h4>
                }
                else
                {
                    <h4>Attrib Report Details</h4>
                }
                <hr />
                <br />
                <table class="table table-bordered table-hover">
                    <tbody>
                        <tr>
                            <td style="width:25%">
                                DP Attrib Group Name
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.DP_Attrib_Group_Code)
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%">
                                BV Attrib Group Name
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.BV_Attrib_Group_Code)
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%">
                                Display Name
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.Column_Code)
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%">
                                Control Type
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.Control_Type)
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%">
                                Display Order
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.Display_Order)
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%">
                                Output Group
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.Output_Group)
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%">
                                IsMandatory
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.Is_Mandatory)
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%">
                                Icon
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.Icon)
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%">
                                Css Class
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.Css_Class)
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%">
                                Type
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.Type)
                            </td>
                        </tr>
                        <tr>
                            <td style="width:25%">
                                IsSelectCriteria
                            </td>
                            <td style="text-align:left;">
                                @Html.DisplayFor(model => model.IsSelectCriteria)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    <div style="margin:20px; text-align:center">
                        @if (ViewBag.details != "Details")
                        {
                            <input type="submit" value="Delete" class="btn btn-primary" style="width:100px;" /> 
                        }
                        
                        @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-primary", @style="width:100px;" })
                    </div>
                </div>
            }
        </div>
    </section>
</div>


