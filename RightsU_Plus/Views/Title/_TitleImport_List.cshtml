@model IEnumerable<RightsU_Entities.USP_Insert_Title_Import_UDT>
@using UTOFrameWork.FrameworkClasses;
@{
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }    
}


<script>
    $(document).ready(function () {
        var v = '@ViewBag.Message';
        if (v != '') {
            showAlert("a", v);
        }
        initializeTooltip();
    });
    $('.expandable').expander({
        slicePoint: 25,
        expandPrefix: '',
        expandText: ' read more',
        collapseTimer: 0,
        userCollapseText: '<span>[^]</span>'
    });
</script>
<table class="table table-bordered table-hover" id="tblMain">
    @if (Model.Count() != 0)
    {
        <thead>
            <tr>
                <th style="width: 10%;">@objMessageKey.TitleName</th>
                <th style="width: 10%;">@objMessageKey.TitleType</th>
                <th style="width: 13%;">@objMessageKey.TitleLangauge</th>
                <th style="width: 13%;">@objMessageKey.YearOfRelease</th>
                <th style="width: 10%;">@objMessageKey.Duration</th>
                <th style="width: 10%;">@objMessageKey.KeyStarCast</th>
                <th style="width: 10%;">@objMessageKey.Director</th>
                <th style="width: 10%;">@objMessageKey.MusicLabel</th>
                <th style="width: 24%;">@objMessageKey.ErrorMessage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title_Name</td>
                    <td>@item.Title_Type</td>
                    <td>@item.Title_Language</td>
                    <td>@item.Year_of_Release</td>
                    <td>@item.Duration</td>
                    <td>@item.Key_Star_Cast</td>
                    <td>@item.Director</td>
                    <td>@item.Music_Label</td>
                    <td>
                        <div class="expandable">@Html.Raw(item.Error_Messages.Replace("~", "<br/>").Replace("\r\n", "<br/>").Replace("\n", "<br/>"))</div>
                    </td>
                </tr>
            }
        </tbody>
    }
</table>
