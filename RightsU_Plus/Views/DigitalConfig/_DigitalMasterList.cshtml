
@model List<RightsU_Entities.Digital>
@using UTOFrameWork.FrameworkClasses;
@{
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}

<script>
    $('.expand_Tab_Name').expander({
        slicePoint: 38,
        expandPrefix: '',
        expandText: '...@objMessageKey.readmore',
        collapseTimer: 0,
        userCollapseText: '<span>[^]</span>'
    });
</script>

<table class="table table-bordered table-hover" id="tblMusicLink">
    <thead style="position:sticky;top:0;z-index:1;background:white;">
        <tr>
            <th style="width:5%;">@objMessageKey.Srno.</th>
            <th style="width:60%;">Digital Name</th>
            <th style="width:35%;">Is Active</th>
            <th style="width:15%;">@objMessageKey.Action</th>
        </tr>
    </thead>
    <tbody>

        @{int rowNumber = 1; }
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                string strIsActive = string.Empty;
                strIsActive = item.Is_Active == "Y" ? objMessageKey.Active : objMessageKey.Deactive;
                if (TempData["Action"] == "EditDigital" && item.Digital_Code.ToString() == Convert.ToString(TempData["idDigital"]))
                {
                    <tr>
                        <td align="center">
                            <span>@rowNumber</span>
                        </td>
                        <td align="center">
                            @Html.TextBoxFor(x => item.Digital_Name, new { @class = "numeric", maxlength = 15, id = "txtDigital_Name" })
                        </td>
                        <td align="center">
                            @Html.CheckBox("Is_Active", item.Is_Active == "Y" ? true : false, new { @id = "chkIsActive" })
                        </td>
                        <td align="center">
                            <a title="@objMessageKey.Update" class="glyphicon glyphicon-ok-circle" style="cursor: pointer;" onclick="UpdateDigitalMaster('@item.Digital_Code')"></a>
                            <a title="@objMessageKey.Cancel" class="glyphicon glyphicon-remove-circle" style="cursor: pointer;" onclick="CancelDigitalMaster()"></a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td align="center">
                            <span>@rowNumber</span>
                        </td>
                        <td class="expand_Tab_Name">
                            <span>@item.Digital_Name</span>
                        </td>
                        <td style="text-align:center;">
                            <span>@strIsActive</span>
                        </td>
                        <td align="center">
                            <a title="@objMessageKey.Edit" class="glyphicon glyphicon-pencil" style="cursor: pointer;" onclick="AddDigitalMaster('EDIT',@item.Digital_Code)"></a>
                        </td>
                    </tr>
                }
                rowNumber++;
            }
        }
        else
        {
            <tr>
                <td colspan="5">@objMessageKey.Norecordfound</td>
            </tr>
        }
    </tbody>
</table>