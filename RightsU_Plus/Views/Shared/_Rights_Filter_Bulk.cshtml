        $('#TotalselectedPlatform').html('0');

        //if (viewType == "G")
        //{
        //    $("#G").prop("checked", true);
        //}
        //else if (viewType == "S")
        //{
        //    $("#S").prop("checked", true);
        //}
        //else if (viewType == "D")
        //{
        //    $("#D").prop("checked", true);
        //}
        @*if (rightsRegion_G != "") {
            if ('@ViewBag.RegionName' != "") {
