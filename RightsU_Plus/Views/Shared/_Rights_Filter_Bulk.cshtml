<script>
    var pos = null;
    var URL_BindRegionList = "";
    var URL_BindRightsPlatformTreePopup = "";
    var rightsRegion_G = "";
    var rightsTitle_G = "";
    var viewType = "";
    var IsShowAll = "N";
    if ('@objSchema.Page_From' == "PBK") {
        rightsRegion_G = '@objSchema.Pushback_Region'.split(',');
    }
    else {
        rightsRegion_G = '@objSchema.Rights_Region'.split(',');
    }
