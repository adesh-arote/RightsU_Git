@model IEnumerable<RightsU_Dapper.Entity.USP_GetSystem_Language_Message_ByModule_Result>
@using RightsU_Entities
@{
    RightsU_Dapper.Entity.USP_GetSystem_Language_Message_ByModule_Result obj = null;
}
<input type="hidden" id="hdnSystemMessage_Count" value="@Model.Count()" />

<style>
    .table-wrapper {
        width: 100%;
        max-height: 569px;
        overflow: auto;
    }

    #tblLanguage thead tr th {
        text-align:center;
    }

</style>

<table class="table table-bordered table-hover" id="tblLanguage">
    <thead>
        <tr>
            <th>Sr. No.</th>
            <th style="width: 10%;">Form ID</th>
            <th>Message Key</th>
            <th style="width:23.75%;">System Language (English)</th>
            <th style="width:26.00%;">Message Description</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            for (int i = 0; i < Model.Count(); i++)
            {
                {
                    obj = Model.ElementAt(i);
                }
                <tr>
                    @Html.Hidden("System_Language_Message[" + i + "].System_Language_Message_Code", obj.System_Language_Message_Code, new { id = "hdnSystem_Language_Message_Code_" + i })
                    @Html.Hidden("System_Language_Message[" + i + "].System_Module_Message_Code", obj.System_Module_Message_Code, new { id = "hdnSystem_Module_Message_Code_" + i })
                    @*<td style="text-align: center;width:5%;">@(i + 1)</td>
                    <td style="width:22.8%">@obj.Form_Id</td>
                    <td style="width:22.75%">@obj.Message_Key</td>
                    <td style="width:23.75%">@obj.Default_Message_Desc</td>
                    <td style="width:24.75%">
                        <textarea name="System_Language_Message[@i].Message_Desc" style="min-height: 0px;resize:none;" class="validatetxt" maxlength="500" rows="2" cols="10"  onkeydown="return noenter(event)">@obj.Message_Desc.Trim()</textarea>
                    </td>*@
                    <td style="text-align: center;width:5%;">@(i + 1)</td>
                    <td >@obj.Form_Id</td>
                    <td style="width:23.75%">@obj.Message_Key</td>
                    <td style="width:24.75%">@obj.Default_Message_Desc</td>
                    <td >
                        <textarea name="System_Language_Message[@i].Message_Desc" style="min-height: 0px;resize:none;" class="validatetxt" maxlength="500" rows="2" cols="10" onkeydown="return noenter(event)">@obj.Message_Desc.Trim()</textarea>
                    </td>


                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No Records Found</td>
            </tr>
        }
    </tbody>
</table>
