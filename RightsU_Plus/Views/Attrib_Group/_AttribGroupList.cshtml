
@model List<RightsU_Entities.Attrib_Group>
@{

    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}
<style>
    .multiCheck {
        text-align: center !important;
        vertical-align: middle !important;
    }
</style>
<table class="table table-bordered table-hover" id="tblProgram">
    <thead>
        <tr>
            <th style="width:30%;">Attrib Group Name</th>
            <th style="width:15%">Attrib Type</th>
            <th style="width:15%;">Multiple Select</th>
            <th style="width:15%;">@objMessageKey.Status</th>
            @*<th style="width:15%;">Icon</th>*@
            <th style="width:20%;">@objMessageKey.Action</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.CommandName == "ADD")
        {
            <tr>
                <td>
                    <input id="txtAttribGroupName" type="text" value="" maxlength="100" />
                </td>
                <td>
                    @Html.DropDownList("ddlAttribeType", ViewBag.AttribType as SelectList, "Please Select", new { @id = "ddlAttribeType", @class = "form_input chosen-select" })
                </td>
                <td class="multiCheck">
                    <input type="checkbox" id="chkMultiselect" name="IsMultiselect" />
                </td>
                <td align="center"> <span>@objMessageKey.Active</span></td>
                @*<td>
                        <input id="txtIcon" type="text" value="" maxlength="100" />*
                    </td>*@
                <td align="center">
                    <a title="@objMessageKey.Save" class="glyphicon glyphicon-ok-circle" onclick="SaveAttribGroup(0)"></a>
                    <a title="@objMessageKey.Cancel" class="glyphicon glyphicon-remove-circle" onclick="Cancel()"></a>
                </td>
            </tr>
        }

        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                string strActive = objMessageKey.Active;
                if (item.Is_Active == "N")
                {
                    strActive = objMessageKey.Deactive;
                }
                string isMultiselect = "No";
                if (item.Is_Multiple_Select == "Y")
                {
                    isMultiselect = "Yes";
                }
                <tr>
                    @if (ViewBag.CommandName == "EDIT" && ViewBag.Attrib_Group_Code == item.Attrib_Group_Code)
                    {
                        <td>
                            <input id="txtAttribGroupName" type="text" value="@item.Attrib_Group_Name" maxlength="100" />
                        </td>
                        <td>
                            @Html.DropDownList("ddlAttribeType", ViewBag.AttribType as SelectList, "Please Select", new { @id = "ddlAttribeType", @class = "form_input chosen-select" })
                        </td>
                        <td class="multiCheck">
                            @if ((item.Is_Multiple_Select ?? "N") == "Y")
                            {
                                <input type="checkbox" id="chkMultiselect" value="Y" name="IsMultiselect" checked="checked" />
                            }
                            else
                            {
                                <input type="checkbox" id="chkMultiselect" name="IsMultiselect" />
                            }
                        </td>
                        <td align="center">
                            <span>@strActive</span>
                        </td>
                        @*<td></td>*@
                        <td align="center">
                            <a title="@objMessageKey.Save" class="glyphicon glyphicon-ok-circle" onclick="SaveAttribGroup(@item.Attrib_Group_Code)"></a>
                            <a title="@objMessageKey.Cancel" class="glyphicon glyphicon-remove-circle" onclick="Cancel()"></a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span>@item.Attrib_Group_Name</span>
                        </td>
                        <td>
                            <span>@item.Attrib_Type</span>
                        </td>
                        <td>
                            <span>@isMultiselect</span>
                        </td>
                        <td align="center">
                            <span>@strActive</span>
                        </td>
                        @*<td>
                                <span></span>
                            </td>*@
                        <td align="center">
                            @*<a title="Edit" class="glyphicon glyphicon-pencil" style="cursor:pointer" onclick="EditAttribGroup(@item.Attrib_Group_Code, 'EDIT')"></a>*@
                            @if (item.Is_Active == "Y")
                            {
                                <a title="Edit" class="glyphicon glyphicon-pencil" style="cursor:pointer" onclick="EditAttribGroup(@item.Attrib_Group_Code, 'EDIT')"></a>
                                <a title="Deactivate" class="glyphicon glyphicon-thumbs-down" style="cursor:pointer" onclick="ActiveDeactiveAttribGroup(@item.Attrib_Group_Code, 'N')"></a>
                            }
                            else

                            {
                                <a title="Cannot edit this attrib group as it is deactivated" class="glyphicon glyphicon-pencil disabled" onclick="return false;"></a>
                                <a title="Activate" class="glyphicon glyphicon-thumbs-up" style="cursor:pointer" onclick="ActiveDeactiveAttribGroup(@item.Attrib_Group_Code, 'Y')"></a>
                            }
                        </td>
                    }

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">No record found</td>
            </tr>
        }
    </tbody>
</table>