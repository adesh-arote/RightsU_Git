                        URL = URL.replace("SearchedTitle", '@ViewBag.SearchedTitle');
                        URL = URL.replace("amp;", "");
                        URL = URL.replace("PageSize", '@ViewBag.PageSize');
                        URL = URL.replace("amp;", "");
                        URL = URL.replace("commandName", '@ViewBag.commandName');
