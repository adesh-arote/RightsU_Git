                                    @if (Model.Subtit_LanguageNames == "" || Model.Subtitling_Group_Name == "")
                                    {
                                        <span>NA</span>
                                    }
                                    else
                                    {
                                        @Model.Subtitling_Group_Name
                                    }
                                </div>
                            </td>
                            <td style="width:28%;">
                                @{
                                    string[] lstSubtitle = Model.Subtit_LanguageNames.Split(',');
                                }
                                @if (Model.Subtit_LanguageNames == "")
                                {
                                    <span>NA</span>
                                }
                                else
                                {
                                    if (lstSubtitle.Length > 3)
                                    {
                                        <span>@string.Join(", ", lstSubtitle.Take(3))</span>
                                        <div style="float:right;">
                                            <a title="More Subtitle" id="show_hide_Subtitle" href="#" class="glyphicon glyphicon-option-vertical show_hide_Subtitle"></a>
                                            <div id="extent" class="MoreSubtitleDiv" style="display:none;">
                                                <ul>
                                                    @foreach (var item in lstSubtitle)
                                                    {
                                                        <li class="liSubtitle" id="lblSubtitle_Names" style="border-bottom:1px solid #dddddd;width:135px">
                                                            @item
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span>@string.Join(", ", lstSubtitle.Take(3))</span>
                                    }
                                }
                            </td>
                            <td style="width:27%;">
                                @{
                                    string[] lstMustHaveSubtitle = Model.Subtitling_Must_Have_Names.Split(',');
                                }
                                @if (Model.Subtitling_Must_Have_Names == "")
                                {
                                    <span>NA</span>
                                }
                                else
                                {
                                    if (lstMustHaveSubtitle.Length > 3)
                                    {
                                        <span>@string.Join(", ", lstMustHaveSubtitle.Take(3))</span>
                                        <div style="float:right;">
                                            <a title="More Must Have Subtitle" id="show_hide_MustHaveSubtitle" href="#" class="glyphicon glyphicon-option-vertical show_hide_MustHaveSubtitle"></a>
                                            <div id="extent" class="MoreMustHaveSubtitleDiv" style="display:none;">
