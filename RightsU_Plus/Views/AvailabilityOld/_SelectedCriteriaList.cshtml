        $('.clsPlatformPopup').on('click', function (e) {
            debugger
            var btdId = e.target.id;
            var callfrom = "I";

            pos = $('#' + btdId).offset();
            $.ajax({
                type: "POST",
                url: URL_BindPlatformTreePopup,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
