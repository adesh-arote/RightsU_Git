        <a class="close" onclick="ClosePopup()">
            <span>X</span>
            <span class="sr-only">Close</span>
        </a>
        <h2>Selected Criteria</h2>
    </div>
    <div class="scale_table_block">
        <table class="four_column table">
            <tr>
                <td class="td_label">Title </td>
                <td>
                    @{
                        string[] lstTitle = Model.TitleNames.Split(',');
                    }
                    @if (Model.TitleNames == "")
                    {
                        <span>NA</span>
                    }
                    else
                    {
                        if (lstTitle.Length > 2)
                        {
                            <span>@string.Join(", ", lstTitle.Take(2))</span>
                            <div style="float:right;padding-right:25px;">
                                <a title="More Title" id="show_hide_Title" href="#" class="glyphicon glyphicon-option-vertical show_hide_Title"></a>
                                <div id="extent" class="MoreTitleDiv" style="display:none;">
                                    <ul>
                                        @foreach (var item in lstTitle)
                                        {
                                            <li class="liTitle" id="lblTitle_Names" style="border-bottom:1px solid #dddddd;width:135px">
                                                @item
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>

                        }
                        else
                        {
                            <span>@string.Join(", ", lstTitle.Take(2))</span>
                        }
                    }
                </td>
                @if (Convert.ToInt32(ViewBag.Code) == GlobalParams.ModuleCodeForProgramAvailabilityReport || Convert.ToInt32(ViewBag.Code) == GlobalParams.ModuleCodeForIndiacastProgramAvailabilityReport)
                {
                    <td>Episode Range</td>
                    <td>
                        <span>From:   </span><span>@ViewBag.EpisodeFrom</span>
                        <span> To: </span><span>@ViewBag.EpisodeTo</span>
                    </td>
                }
                else
                {
                    <td> Business Unit </td>
                    <td>@Model.BussinessUnitNames</td>
                }
            </tr>
            <tr>
                <td>Period (@ViewBag.DateType) </td>
                <td>
                    @if (ViewBag.Start_Date != "")
                    {
                        <span>Start Date: </span><span>@ViewBag.Start_Date</span>
                    }
                    @if (ViewBag.End_Date != "")
                    {
                        <span>End Date: </span><span>@ViewBag.End_Date</span>
                    }
                </td>
                @if (Convert.ToInt32(ViewBag.Code) == GlobalParams.ModuleCodeForProgramAvailabilityReport || Convert.ToInt32(ViewBag.Code) == GlobalParams.ModuleCodeForIndiacastProgramAvailabilityReport)
                {
                    <td> Business Unit </td>
                    <td>@Model.BussinessUnitNames</td>
                }
                else
                {
                    <td>Exclusivity </td>
                    <td><span>@Model.ExclusivityNames</span></td>
                }
            </tr>
            <tr>
                <td>Title Language </td>
                <td>
                    @{
                        string[] lstTitleLanguage = Model.TitleLanguage_Names.Split(',');
