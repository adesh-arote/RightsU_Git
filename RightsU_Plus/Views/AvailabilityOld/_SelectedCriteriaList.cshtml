@model RightsU_Entities.USP_Get_Title_Availability_LanguageWise_Filter_Result
@using UTOFrameWork.FrameworkClasses
<div id="divSelectedCriteria" onclick="hideRegionDiv(); hideMustHaveRegionDiv(); hideSubtitleDiv(); hideMustHaveSubtitleDiv(); hideDubbingDiv(); hideMustHaveDubbingDiv(); hideSubLicenseDiv(); hideTitleLanguageDiv(); hideTitleDiv();">
