                    @if (Convert.ToInt32(ViewBag.Code) != GlobalParams.ModuleCodeForTheatricalAvailabilityReport)
                    {
                        <tr>
                            <td align="left" style="width:12%;font-weight: bold;">Subtitle</td>
                            <td style="width:20%;">
