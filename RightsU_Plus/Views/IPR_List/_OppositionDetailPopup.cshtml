@model RightsU_Plus.Controllers.ModalPopupList
<table class="table table-bordered table-hover" id="tblProgram">
    <thead>
        <tr>
            <th style="width:30%;">Opposition Detail</th>
            <th style="width:20%">Opposition Party Name</th>
            <th style="width:20%">Opposition No</th>
            <th style="width:20%;">Class</th>
            <th style="width:30%;">Opposition Status</th>
        </tr>
    </thead>   
    <tbody>
        @if (Model.OppoBy.Count > 0)
        {
            foreach (var item in Model.OppoBy)
            {
                <tr>
                    <td style="background-color:#FFC985;">
                        <span >Opposition By</span>
                    </td>
                    <td>
                        <a title="" href="@Url.Action("ButtonEvent", "IPR_List", new { MODE = UTOFrameWork.FrameworkClasses.GlobalParams.DEAL_MODE_VIEW, IPR_Opp_Code = item.IPR_Opp_Code })"><span style="color:blue;"><u>@item.Party_Name</u></span></a>
                    </td>
                    <td align="center">
                        <a title="" href="@Url.Action("ButtonEvent", "IPR_List", new { MODE = UTOFrameWork.FrameworkClasses.GlobalParams.DEAL_MODE_VIEW, IPR_Opp_Code = item.IPR_Opp_Code })"><span style="color:blue;"><u>@item.Opp_No</u></span></a>
                    </td>
                    <td align="center">
                        <span>@item.IPR_Class_Code</span>
                    </td>
                    <td align="center">
                        <span>@item.IPR_Opp_Status.Opp_Status</span>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td style="background-color:#FFC985;">
                    <span>Opposition By</span>
                </td>
                <td>
                    <span style="text-align:center;">NO DATA</span>
                </td>
                <td>
                    <span style="text-align:center;"> NO DATA</span>
                </td>
                <td>
                    <span style="text-align:center;">NO DATA</span>
                </td>
                <td>
                    <span style="text-align:center;">NO DATA</span>
                </td> 
            </tr>
        }
        @if (Model.OppoAgainst.Count > 0)
        {
            foreach (var data in Model.OppoAgainst)
            {
                <tr>
                    <td style="background-color:#B7E9F7;">
                        <span >Opposition Against</span>
                    </td>
                    <td>
                        <a title="" href="@Url.Action("ButtonEvent", "IPR_List", new { MODE = UTOFrameWork.FrameworkClasses.GlobalParams.DEAL_MODE_VIEW, IPR_Opp_Code = data.IPR_Opp_Code })"><span style="color:blue;"><u>@data.Party_Name</u></span></a>
                    </td>
                    <td align="center">
                        <a title="" href="@Url.Action("ButtonEvent", "IPR_List", new { MODE = UTOFrameWork.FrameworkClasses.GlobalParams.DEAL_MODE_VIEW, IPR_Opp_Code = data.IPR_Opp_Code })"><span style="color:blue;"><u>@data.Opp_No</u></span></a>
                    </td>
                    <td align="center">
                        <span>@data.IPR_Class_Code</span>
                    </td>
                    <td align="center">
                        <span>@data.IPR_Opp_Status.Opp_Status</span>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td style="background-color:#B7E9F7;">
                    <span> Opposition Against </span>
                </td>
                <td>
                    <span style="text-align:center;">NO DATA</span>
                </td>
                <td>
                    <span style="text-align:center;">NO DATA</span>
                </td>
                <td>
                    <span style="text-align:center;">NO DATA</span>
                </td>
                <td>
                    <span style="text-align:center;">NO DATA</span>
                </td>
            </tr>
        }
    </tbody>
</table>


