@using UTOFrameWork.FrameworkClasses
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }

}
<link type="text/css" rel="stylesheet" href="~/css/chosen.min.css?v=@System.Configuration.ConfigurationManager.AppSettings["Version_No"]" />

<script>
    var IsCall = 'Y', Command_Name = "", sort_Type_G = "T",Module_Code_G =@ViewBag.code, SysLanguageCode_G = @ViewBag.LangCode;
    var URL_BindDealDescList = '@Url.Action("BindDealDescList", "Deal_Description")';
    var URL_SearchDealDesc = '@Url.Action("SearchDealDesc", "Deal_Description")';
    var URL_ActiveDeactiveDealDesc = '@Url.Action("ActiveDeactiveDealDesc", "Deal_Description")';
    var URL_SaveDealDesc = '@Url.Action("SaveDealDesc", "Deal_Description")';
    var URL_CheckRecordLock = '@Url.Action("CheckRecordLock", "Deal_Description")';
    var URL_Refresh_Lock = '@Url.Action("Refresh_Lock", "Global")';
    var URL_Release_Lock = '@Url.Action("Release_Lock", "Global")';
    var URL_Export_To_Excel = '@Url.Action("ExportToExcel", "Global")'
    var URL_Reload_Current_Page = '@Url.Action("Index", "Deal_Description")';
    $(document).ready(function () {
        if(LayoutDirection_G == "RTL")
        {
            $('#btnUser').css("float","right");
            $('#txtSort').css("text-align", "left");
            $('#ddlSortType_chosen').css("text-align", "right");
        }
        else
        {
            $('#btnUser').css("float","left");
            $('#txtSort').css("text-align","right");
            $('#ddlSortType_chosen').css("text-align", "left");
        }
        addNumeric();
        SearchDealDesc("");
        $('#searchCommon').keypress(function (e) {
            if (e.keyCode == 13) {
                btnSearch_OnClick()
                return false;
            }
        });
        $("#ddlSortType").change(function () {
            if (!checkCurrentAction()) {
                $('#ddlSortType').val(sort_Type_G).trigger("chosen:updated")
                return false;
            }
            $('#hdnPageNo').val(1);
            sort_Type_G = $('#ddlSortType').val();
            SearchDealDesc($('#searchCommon').val());
        });
       // $("#ancFileName").attr('href', '../Help/Masters/Layout.html?DealDescs');
    });
    function addNumeric() {
        $(".pagingSize").numeric({
            allowMinus: false,
            allowThouSep: false,
            allowDecSep: false,
            max: 99,
            min: 1
        });
    }
    function SetPaging() {
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo').val());
        var recordCount = parseInt($('#hdnRecordCount').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch').val());
        var recordPerPage = parseInt($('#txtPageSize').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination").pagination(recordCount, opt);
    }
    function pageselectCallback(page_index, jq) {
        if (checkCurrentAction()) {
            $('.required').removeClass('required');

            if (!ValidatePageSize())
                return false;

            var pageNo = page_index + 1
            $('#hdnPageNo').val(pageNo);
            if (IsCall == 'Y')
                BindDealDescList(0, "");
            else
                IsCall = 'Y';
        }
    }
    function txtPageSize_OnChange() {
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!checkCurrentAction())
            return false;

        if (!ValidatePageSize())
            return false;

        BindDealDescList(0, "")
        SetPaging();
    }
    function ValidatePageSize() {
        var recordPerPage = $('#txtPageSize').val()
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        //$('#txtPageSize').attr('required', true)
        return false
    }
    function pageBinding() {
        BindDealDescList(0, "")
        SetPaging();
    }
    function btnSearch_OnClick() {
        if (!checkCurrentAction())
            return false;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        if (!ValidatePageSize())
            return false;

        $('#hdnPageNo').val(1);
        var searchText = $.trim($('#searchCommon').val());

        if (searchText == '') {
            $('#searchCommon').val('')
            $('#searchCommon').attr('required', true)
            return false;
        }
        SearchDealDesc(searchText);
    }
    function btnShowAll_OnClick() {
        if (!checkCurrentAction())
            return false;
        if (!ValidatePageSize())
            return false;

        sort_Type_G = "T";
        $("#ddlSortType").find("option").attr("selected", false);
        $("#ddlSortType").val('T').trigger("chosen:updated");
        $('#hdnPageNo').val(1);
        $('#searchCommon').attr('required', false)
        $('#searchCommon').val('');
        SearchDealDesc("");
    }
    function BindDealDescList(DealDescsCode, commandName) {
        debugger
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();
        $.ajax({
            type: "POST",
            url: URL_BindDealDescList,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                DealDescsCode: DealDescsCode,
                commandName: commandName,
                sortType : sort_Type_G
            }),
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#divDealDescsList').empty();
                    $('#divDealDescsList').html(result);
                    initializeExpander();
                    initializeTooltip();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }
    function SearchDealDesc(searchText) {
        debugger
        $("#searchCommon").val(searchText);
        showLoading();
        $.ajax({
            type: "POST",
            url: URL_SearchDealDesc,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchText
            }),
            async: false,
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#hdnPageNo').text(1);
                    $('#lblRecordCount').text(result.Record_Count);
                    $("#hdnRecordCount").val(result.Record_Count);
                    SetPaging()
                    BindDealDescList(0, "");
                    hideLoading();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }
    function ActiveDeactiveDealDesc(DealDescs_Code, doActive) {
        if (checkCurrentAction()) {
            $.ajax({
                type: "POST",
                url: URL_ActiveDeactiveDealDesc,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    DealDescs_Code: DealDescs_Code,
                    doActive: doActive
                }),
                async: false,
                success: function (result) {
                    if (result == "true") {
                        redirectToLogin();
                    }
                    else {
                        if (result.Status == "S") {
                            showAlert("S", result.Message);
                            if ($("#searchCommon").val() != "") {
                                SearchDealDesc($("#searchCommon").val())
                            }
                            else {
                                BindDealDescList(0, "");
                            }
                        }
                        else {
                            showAlert("E", result.Message);
                        }
                    }
                },
                error: function (result) {
                    alert('Error: ' + result.responseText);
                    hideLoading();
                }

            });
        }
    }
    function SaveDealDesc(DealDescsCode) {
        debugger
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        if (!ValidatePageSize())
            return false;
        var Type = "";
        var DealDescsName = $.trim($('#txtDealDescsName_' + DealDescsCode).val());
        if ($('#txtAcqType_' + DealDescsCode).prop('checked')) {
            Type = "A";
        }
        else if ($('#txtSynType_' + DealDescsCode).prop('checked')){
            Type = "S";
        }
        //var Type = $.trim($('#txtType_' + DealDescsCode).val());
        var Record_Code = $('#hdnRecodLockingCode').val();
        
        if (DealDescsName == '' && $('input[type=radio][name=Type]:checked').val() == undefined) {
            $('#txtDealDescsName_' + DealDescsCode).val('')
            $('#txtDealDescsName_' + DealDescsCode).attr('required', true)
            $('#radio_0').addClass('required');
            $('#radio_0').addClass('required');
            return false;
        }
        else if (DealDescsName == '') {
            $('#txtDealDescsName_' + DealDescsCode).val('')
            $('#txtDealDescsName_' + DealDescsCode).attr('required', true)
            return false;
        }
        else if ($('input[type=radio][name=Type]:checked').val() == undefined) {
            $('#radio_0').addClass('required');
            $('#radio_0').addClass('required');
            return false;
        }
        showLoading();
        $.ajax({
            type: "POST",
            url: URL_SaveDealDesc,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                DealDescsCode: DealDescsCode,
                DealDescsName: DealDescsName,
                Type : Type,
                Record_Code: Record_Code
            }),
            async: false,
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    hideLoading();
                    if (result.Status == "S") {
                        debugger
                        $('#lblRecordCount').text(result.RecordCount);
                        $('#hdnAction').val("")
                        showAlert("S", result.Message);
                        if ($("#searchCommon").val() != "") {
                            SearchDealDesc($("#searchCommon").val())
                        }
                        else {
                            BindDealDescList(0, "");
                        }
                        // SearchDealDesc("");
                        SetPaging();
                        // BindDealDescList(0, "");
                    }
                    else {
                        showAlert("E", result.Message);
                    }
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }
    function AddEditDealDesc(DealDescsCode, commandName) {
        if (checkCurrentAction() && ValidatePageSize()) {
            BindDealDescList(DealDescsCode, commandName);
            $('#hdnAction').val(commandName)
        }
    }
    function Cancel() {
        var recordLockingCode = parseInt($('#hdnRecodLockingCode').val())
        if (recordLockingCode > 0)
            ReleaseRecordLock(recordLockingCode, URL_Release_Lock);
        $('#hdnAction').val("")
        BindDealDescList(0, "");
    }
    function checkCurrentAction() {
        var action = $.trim($('#hdnAction').val());
        if (action == "ADD") {
            showAlert("E", "@objMessageKey.CompleteAddOperationFirst")
            return false;
        }
        else if (action == "EDIT") {
            showAlert("E", "@objMessageKey.CompleteEditOperationFirst")
            return false;
        }
        return true;
    }
    function CheckRecordLock(DealDescsCode,commandName){
        $.ajax({
            type: "POST",
            url: URL_CheckRecordLock,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                DealDescsCode: DealDescsCode,
                commandName:commandName
            }),
            async: false,
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    if (result.Is_Locked == "Y") {
                        AddEditDealDesc(DealDescsCode,commandName)
                        $('#hdnRecodLockingCode').val(result.Record_Locking_Code);
                        Call_RefreshRecordReleaseTime(result.Record_Locking_Code, URL_Refresh_Lock);
                    }
                    else
                        showAlert("E", result.Message);
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }
    function ExportToExcel()
    {

        var type = "";
        var Module_Name = "DealDescs";
        type = $('#ddlSortType').val();
        var StrSearchCriteria = $.trim($('#searchCommon').val());
        window.location.href = '@Url.Action("ExportToExcel", "Global")?Module_Code='+Module_Code_G + '&SysLanguageCode=' + SysLanguageCode_G + '&Module_Name='+Module_Name+ '&sortColumnOrder='+type + '&StrSearchCriteria=' + StrSearchCriteria;

    }
</script>
<style>
    .search_area {
        border-bottom: 1px dotted #777;
        margin-bottom: 5px;
        background-color: #eee;
    }
    #ddlSortType_chosen {
        max-width: 46%;
        text-align:left;
    }
</style>
