            tmpDirector = $('#ddlDirector').val().join(',');

        var txtYearOfRelease = $('#txtYearOfRelease').val();

        var extendedMetaData = $('#ExtMetaData').prop('checked');
        $.ajax({
            type: "POST",
            url: '@Url.Action("BindTitleDetailsReports", "Reports")',
            traditional: true,
            enctype: 'multipart/form-data',
