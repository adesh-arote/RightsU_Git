    function AdvanceSearch() {
        debugger;
        var tmpStarCast = '', tmpLanguage = '', tmpOrigLang = '', tmpDeal = '', tmpDirector = '', tmpProducer = '', tmpGenres = '';
        if ($('#ddlStarCast').val())
            tmpStarCast = $('#ddlStarCast').val().join(',');

