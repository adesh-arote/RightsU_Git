<div class="main_section">
    <section class="rightsU_container clearfix">
        <div class="container acq main_col">
            <h2 style="direction:@objMessageKey.LayoutDirection">@objMessageKey.PlatformwiseSyndicationReport</h2>
            <div id="divFilter">
                <table>
                    <tr>
                        <td style="width:10%;"><label class="bold">@objMessageKey.BusinessUnit</label></td>
                        <td style="width:30%;">
                            @Html.DropDownList("BusinessUnit", ViewBag.BusinessUnitList as SelectList, new { @id = "ddlBusinessUnit", @class = "form_input chosen-select" })
                        </td>
                        <td style="width:18%;">
                            <input type="checkbox" id="chk_expiredDeals" /> @objMessageKey.IncludeExpiredDeals
                            @{
                                string strRemarks = objMessageKey.IncludeRestrictionRemark;
                            }
                            @if (ViewBag.Restriction_Remark == "Y")
                            { 
                                <br />
                                <input type="checkbox" id="chk_RestRmk" /> @strRemarks
                            }
                        </td>
                        <td style="width:8%"><b>@objMessageKey.DateFormat:</b></td>
                        <td style="width:17%">
                            @Html.DropDownList("DateFormat", (List<SelectListItem>)ViewBag.DateFormat, new { @id = "ddlDateFormat", @class = "form_input chosen-select" })
                        </td>
                        <td style="width:20%;"><input type="button" id="btnShow" class="btn btn-primary" value="@objMessageKey.Show" onclick="btnShow_OnClick()"> </td>
                    </tr>
                    <tr>
                        <td>
                            <label class="bold">@objMessageKey.Title</label>
                        </td>
                        <td>
                            <input type="text" id="txtTitle" class="search" maxlength="100" style="width:285px" placeholder="@objMessageKey.Title" onkeyup="PopulateTitleNameForPlSyn(event)" autocomplete="on" />
                            <input type="hidden" id="hdnTitleCode" value="0" />
                        </td>
                        <td>
                            <a title="@objMessageKey.SelectPlatforms" class="glyphicon glyphicon-flash" style="cursor: pointer;" onclick="BindPlatformPopup()"></a> <span id="selectedPlatofrms">@objMessageKey.SelectedPlatforms: 0</span>
                            <input type="hidden" id="hdnTabName" value="P" />
                            <input type="hidden" id="hdnTVCodes" name="hdnTVCodes" />
                            <input type="hidden" id="hdnPGCode" name="hdnPGCode" value="" />
                        </td>
                    </tr>


                </table>
            </div>
            <div id="divResult">

            </div>
        </div>
    </section>
</div>

