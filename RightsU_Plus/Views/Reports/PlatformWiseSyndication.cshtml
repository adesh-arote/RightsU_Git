<script>
    var platformCodes_G = " ";
    var URL_BindPlatformSyndicationReport = '@Url.Action("BindPlatformSyndication", "Reports")';
    var URL_BindTitleForPlSyn = '@Url.Action("BindTitleForPlSyn", "Reports")';

    var URL_BindPlatformTreeView = '@Url.Action("BindPlatformTreeView", "Reports")';
    var URL_BindPlatformPopup = '@Url.Action("BindPlatformPopup", "Reports")';
    var URL_BindPlatformGroup = '@Url.Action("BindPlatformGroup", "Reports")';

    $(document).ready(function () {
        $("#chk_RestRmk").prop("checked", true);
    });

    $(function () {
        $("#ddlBusinessUnit").change(function () {
            $('#txtTitle').val('');
            $("#hdnTitleCode").val('0');
        });
    });

    function btnShow_OnClick() {
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");
        var str = "";
        var returnVal = true;
        var businessUnitcode = $('#ddlBusinessUnit').val();
        var expiredDeal = $('#chk_expiredDeals').is(":checked");
        var RestrictionRmk = $('#chk_RestRmk').is(":checked");
        var titleList = $('#txtTitle').val();
        var platformCodes = platformCodes_G;

        //if (titleList == "") {
        //    $('#txtTitle').addClass('required');
        //    returnVal = false;
        //}
        if (titleList == "") {
            titleList = " ";
        }
        if (titleList == 0) {
            titleList = " ";
        }
        if (returnVal) {
            $.ajax({
                type: "POST",
                url: URL_BindPlatformSyndicationReport,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    businessUnitcode: businessUnitcode,
                    titleCodes: titleList,
                    platformCodes: platformCodes,
                    isExpiredDeal: expiredDeal,
                    isRestRmk : RestrictionRmk,
                    dateformat: $('#ddlDateFormat').val()
                }),
                async: false,
                success: function (result) {
                    if (result == "true") {
                        redirectToLogin();
                    }
                    else {
                        $('#divResult').empty();
                        $('#divResult').html(result);
                    }
                },
                error: function (result) {
                    alert('Error: ' + result.responseText);
                }
            });
        }
    }
    function ClosePopup() {
        platformCodes_G = $("#hdnTVCodes").val();
        var selectedPlatform = $('#Rights_PlatformplatformCnt').text();
        if (selectedPlatform.trim() == "")
            selectedPlatform = '0';
        $('#selectedPlatofrms').text('');
        $('#selectedPlatofrms').text("@objMessageKey.SelectedPlatforms: " + selectedPlatform);
        $('#popup').modal('hide');
        $('#pupupHtml').empty();
    }
    function PopulateTitleNameForPlSyn(keyword) {
        if ($('#txtTitle').val().length == "0") {
            $('#hdnTitleCode').val(0);
        }
        var selectedtxt = $('#txtTitle').val()
        var txt = selectedtxt.split('﹐');
        var iscomplete = true;
        if (txt[txt.length - 1].trim() == "")
            iscomplete = false;
        if (iscomplete) {
            $("#txtTitle").autocomplete({
                focus: function () {
                    return false;
                },
                search: function (e, u) {
                    $(this).addClass('loader');
                },
                source: function (request, response) {
                    var param = {
                        BU_Code: $('#ddlBusinessUnit').val(),
                        keyword: $('#txtTitle').val()

                    };
                    $.ajax({
                        url: URL_BindTitleForPlSyn,
                        data: JSON.stringify(param),
                        dataType: "json",
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        dataFilter: function (data) { return data; },
                        success: function (data) {
                            if (data.length == 0) {
                                data[0] = '@objMessageKey.ResultNotFound';
                                response($.map(data, function (v, i) {
                                    $('#txtTitle').removeClass('loader');
                                    return {
                                        label: '@objMessageKey.ResultNotFound',
                                        val: '0'
                                    }
                                }))
                            }
                            else {
                                response($.map(data, function (v, i) {
                                    $('#txtTitle').removeClass('loader');
                                    return {
                                        label: v.Title_Name,
                                        val: v.Title_Code
                                    }
                                }))
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {

                            alert("Error" + textStatus);
                        }
                    });
                },
                select: function (event, i) {
                    debugger;
                    if (i.item.value != "@objMessageKey.ResultNotFound") {
                        var text = this.value.split(/﹐\s*/);
                        text.pop();
                        text.push(i.item.value);
                        text.push("");
                        this.value = text;
                        this.value = text.join("﹐");
                        var value = $("#hdnTitleCode").val().split(/,\s*/);
                        value.pop();
                        value.push(i.item.val);
                        value.push("");
                        $("#hdnTitleCode")[0].value = value.join(", ");
                        return false;
                    }
                    else {
                        $('#txtTitle').val("");
                        return false;
                    }
                },
                minLength: 3,
                open: function (event, ui) {
                    $(".ui-autocomplete").css("position", "absolute");
                    $(".ui-autocomplete").css("max-height", "200px");
                    $(".ui-autocomplete").css("max-width", "285px");
                    $(".ui-autocomplete").css("overflow-y", "auto");
                    $(".ui-autocomplete").css("overflow-x", "hidden");
                    $(".ui-autocomplete").css("z-index", "2147483647");
                    $(".ui-autocomplete").css("direction", "@objMessageKey.LayoutDirection")
                },

            });
        }
        else
            return false;
    }


    function BindPlatformPopup() {
        $.ajax({
            type: "POST",
            url: URL_BindPlatformPopup,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            async: false,
            success: function (result) {
                debugger;
                if (result == "true") {
                    redirectToLogin();
                }
                $('#pupupHtml').empty();
                $('#pupupHtml').html(result);
                $('#popup').modal();
            },
            error: function (result) { }
        });
    }
    function BindPlatform() {
        $.ajax({
            type: "POST",
            url: URL_BindPlatformTreeView,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                SelectedPlatform: $('#hdnTVCodes').val()
            }),
            async: false,
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                $('#divTree').empty();
                $('#divTree').html(result);
            },
            error: function (result) { }
        });
    }
    function TabChange(tabName) {
        $('#hdnTabName').val(tabName);
        $('#hdnTVCodes').val('');
        if (tabName == 'P') {
            //$('#ddlPFGroup').val(null);
            $('#divDdlPG').hide();
            BindPlatform();
        }
        else {
            $('#divDdlPG').show();
            ddlPFGroup_Change();
        }
    }
    function BindPlatformGroup() {
        $.ajax({
            type: "POST",
            url: URL_BindPlatformGroup,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                PlatformGroupCode: $('#ddlPFGroup').val()
                //SelectedCodes: $('#hdnTVCodes').val()
            }),
            async: false,
            success: function (result) {
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#divTree').empty();
                    $('#divTree').html(result);
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }
    function ddlPFGroup_Change() {
        debugger;
        var pgCode = $('#ddlPFGroup').val();
        if (pgCode != null && pgCode != "") {
            $('#hdnPGCode').val(pgCode);
            BindPlatformGroup();
        }
        else {
            $('#hdnPGCode').val("");
            $('#divTree').empty();
        }
    }
</script>
