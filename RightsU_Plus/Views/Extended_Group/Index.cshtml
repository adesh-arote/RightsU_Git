
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}

<link type="text/css" rel="stylesheet" href="~/css/chosen.min.css?v=@System.Configuration.ConfigurationManager.AppSettings["Version_No"]" />

<script>
    var IsCall = 'Y', Command_Name = "", dummyGuid_G, sort_Type = "T";

    var URL_BindExtndGrpLst = '@Url.Action("BindExtendedGroupList", "Extended_Group")';
    var URL_SearchExtndedGroup = '@Url.Action("SearchExtendedGroup", "Extended_Group")';
    var URL_AddEditViewExtdGrp = '@Url.Action("AddEditViewExtdGrp", "Extended_Group")';
    var URL_AddEditViewDetail = '@Url.Action("BindExtdGrpDetail", "Extended_Group")';
    var URL_DeleteGrpDetail = '@Url.Action("DeleteGrpDetail", "Extended_Group")';
    var URL_SaveGrpDetail = '@Url.Action("SaveGrpDetail", "Extended_Group")';
    var URL_DeleteDetail = '@Url.Action("DeleteGrpDetail", "Extended_Group")';
    var URL_SaveMaster = '@Url.Action("SaveMaster", "Extended_Group")';
    var URL_Index = '@Url.Action("Index", "Extended_Group")';

    $(document).ready(function () {
        if (LayoutDirection_G == "RTL") {
            $('#btnUser').css("float", "right");
            $('#txtSort').css("text-align", "left");
            $('#ddlSortType_chosen').css("text-align", "right");
        }
        else {
            $('#btnUser').css("float", "left");
            $('#txtSort').css("text-align", "right");
            $('#ddlSortType_chosen').css("text-align", "left");
        }

        if ("@ViewBag.Message" != "") {
           showAlert("S","@ViewBag.Message");
        }

        addNumeric();
        SearchExtendedGroup("");
        $('#searchCommon').keypress(function (e) {
            if (e.keyCode == 13) {
                btnSearch_OnClick()
                return false;
            }
        });
        //$("#ddlSortType").change(function () {
        //    sort_Type = $('#ddlSortType').val();
        //    $('#hdnPageNo').val(1);
        //    var searchtext = $("#searchCommon").val();
        //    SearchExtendedGroup(searchtext);
        //});
    });

    function addNumeric() {
        debugger;
        $(".pagingSize").numeric({
            allowMinus: false,
            allowThouSep: false,
            allowDecSep: false,
            max: 99,
            min: 1
        });
    }

    function btnSearch_OnClick() {
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");
        debugger;
        var searchText = $('#searchCommon').val();

        //if (searchText == '') {
        //    $('#searchCommon').val('');
        //    $('#searchCommon').attr('required', true)
        //    return false;
        //}
        SearchExtendedGroup(searchText);
    }

    function btnShowAll_OnClick() {
        debugger;
        //$("#searchCommon").empty();
        //$('#ddlSearchModule').val('');
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");
        
        if (!ValidatePageSize())
            return false;

        sort_Type = "T";
        //$("#ddlSortType").find("option").attr("selected", false);
        //$("#ddlSortType").val('T').trigger("chosen:updated");
        $('#hdnPageNo').val(1);

        SearchExtendedGroup("");
    }

    function SearchExtendedGroup(searchText) {
        $('#searchCommon').val(searchText);
        var ModuleCode = $('#ddlSearchModule').val();
        debugger;
        $.ajax({
            type: "POST",
            url: URL_SearchExtndedGroup,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchText,
                ModuleCode: ModuleCode
            }),
            async: false,
            success: function (result) {
                $('#hdnPageNo').text(1);
                $('#hdnPageNo').val(1);
                $('#lblRecordCount').text(result.Record_Count);
                $("#hdnRecordCount").val(result.Record_Count);
                SetPaging()
                BindExtendedGroupList();
            }
        });
    }

    function SetPaging() {
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo').val());
        var recordCount = parseInt($('#hdnRecordCount').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch').val());
        var recordPerPage = parseInt($('#txtPageSize').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination").pagination(recordCount, opt);
    }

    function pageselectCallback(page_index, jq) {
        if (checkCurrentAction()) {
            $('.required').removeClass('required');

            if (!ValidatePageSize())
                return false;

            var pageNo = page_index + 1
            $('#hdnPageNo').val(pageNo);
            if (IsCall == 'Y')
                BindExtendedGroupList();
            else
                IsCall = 'Y';
        }
    }

    function txtPageSize_OnChange() {
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;

        BindExtendedGroupList();
        SetPaging();
    }

    function ValidatePageSize() {
        var recordPerPage = $('#txtPageSize').val()
        if ($(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }

    function pageBinding() {
        BindExtendedGroupList();
        SetPaging();
    }

    function BindExtendedGroupList() {
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();

        debugger;
        $.ajax({
            type: "POST",
            url: URL_BindExtndGrpLst,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                sortType: sort_Type
            }),
            success: function (result) {
                $('#divBindList').empty();
                $('#divBindList').html(result);

                addNumeric();
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function AddEditViewExtdGrp(Id, CommandName) {
        debugger;
        $.ajax({
            type: "POST",
            url: URL_AddEditViewExtdGrp,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                ExtendedGroupCode: Id,
                CommandName: CommandName,
            }),
            success: function (result) {
                debugger;
                $('#popup').modal();
                $('#pupupHtml').empty();
                $('#pupupHtml').html(result);
                initializeChosen();
                if (CommandName != "VIEW")
                    CommandName: CommandName;

                BindExtdGrpDetail(0, "");
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function ClosePopup() {
        $('#hdnAction').val("");
        $('#popup').modal('hide');
        $('#pupupHtml').empty();

        BindExtendedGroupList();
    }

    function AddEditGroupDetail(Id, CommandName) {
        debugger;
        if (!checkCurrentAction()) {
            return false;
        }
        $('#hdnAction').val(CommandName);
        BindExtdGrpDetail(Id, CommandName);
    }

    function BindExtdGrpDetail(Id, CommandName) {
       // alert("Testing1");
        debugger;
        $.ajax({
            type: "POST",
            url: URL_AddEditViewDetail,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            async: false,
            data: JSON.stringify({
                Id: Id,
                CommandName: CommandName,
            }),
            success: function (result) {
                debugger;
                $('#divExtdGrpDtl').empty();
                $('#divExtdGrpDtl').html(result);
                var length = $("table tr[id*='trBookDetail_']").length
                $('#lblRecordCountPopup').text(length);
                initializeTooltip();
                initializeChosen();
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function Cancel() {
        debugger;
        $('#hdnAction').val("");
        checkCurrentAction();
        BindExtdGrpDetail(0, "");
    }

    function SaveDetail(DetailId, rowNumber) {
        debugger;
        var returnVal = true;
        var Metadata = $('#ddlMetadata_' + rowNumber).val();
        var OrdrerInGroup = $('#txtOdrInGrp_' + rowNumber).val();
        var Validations = $('#ddlValidations_' + rowNumber).val().join(',');
        var AdtnlCntn = $('#txtAddCon_' + rowNumber).val();

        if (Metadata == "") {
            $('#ddlMetadata_' + rowNumber).val('').attr('required', true)
            returnVal = false;
        }
        if (OrdrerInGroup == "") {
            $('#txtOdrInGrp_' + rowNumber).val('').attr('required', true)
            returnVal = false;
        }
        if (Validations == "") {
            $('#ddlValidations_' + rowNumber).val('').attr('required', true)
            returnVal = false;
        }
        if (AdtnlCntn == "") {
            $('#txtAddCon_' + rowNumber).val('').attr('required', true)
            returnVal = false;
        }

        if (returnVal) {
            $.ajax({
                type: "POST",
                url: URL_SaveGrpDetail,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    Id: DetailId,
                    Columns_Code: Metadata,
                    Group_Control_Order: OrdrerInGroup,
                    Validations: Validations,
                    Additional_Condition: AdtnlCntn
                }),
                async: false,
                success: function (result) {
                    debugger;
                    if (result.Status == "S") {
                        $('#hdnAction').val("");
                        BindExtdGrpDetail(DetailId, "");
                    }
                    if (result.Error == "1") {
                        showAlert("E", "You are Entered Duplicate data");
                    }
                },
                error: function (result) {
                    alert('Error: ' + result.responseText);
                }
            });
        }
    }

    function DeleteGroupDetail(DetailId) {
        debugger;
        if (!checkCurrentAction())
            return false;
        $.ajax({
            type: "POST",
            url: URL_DeleteDetail,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                DetailId: DetailId
            }),
            success: function (result) {
                if (result.Status == "S") {
                    BindExtdGrpDetail(0, "");
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function SaveMaster() {
        debugger;
        var returnVal = true;
        if (!checkCurrentAction())
            return false;
        var ExtdGrpId = $("#hdnEGCode").val();
        var Module = $("#ddlModule").val();
        var GrpName = $("#txtGroupName").val();
        var ShortName = $("#txtShortName").val();
        var GrpOrder = $("#txtGroupOrder").val();
        var GrpType = $("#ddlType").val();

        if (Module == "") {
            $('#ddlModule').val('').attr('required', true)
            returnVal = false;
        }
        if (GrpName == "") {
            $('#txtGroupName').val('').attr('required', true)
            returnVal = false;
        }
        if (ShortName == "") {
            $('#txtShortName').val('').attr('required', true)
            returnVal = false;
        }
        if (GrpOrder == "") {
            $('#txtGroupOrder').val('').attr('required', true)
            returnVal = false;
        }
        if (GrpType == "") {
            $('#ddlType').val('').attr('required', true)
            returnVal = false;
        }

        var length = $("table tr[id*='trBookDetail_']").length
        if (length == 0) {

            showAlert("E", "Please add Config Details", "OK");
            returnVal = false;
        }
        if (returnVal) {

            $.ajax({
                type: "POST",
                url: URL_SaveMaster,
                traditional: true,
                dataType: "json",
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                async: false,
                data: JSON.stringify({
                    ExtdGrpId: ExtdGrpId,
                    Module_Code: Module,
                    Group_Name: GrpName,
                    Short_Name: ShortName,
                    Group_Order: GrpOrder,
                    Add_Edit_Type: GrpType
                }),
                success: function (result) {
                    debugger;
                    if (result.Status == "S") {
                        ClosePopup();
                        window.location.href = URL_Index;
                    }
                    else
                        showAlert("E", result.Message, "");
                }
            });
        }
    }

    function checkCurrentAction() {
        var action = $.trim($('#hdnAction').val());
        if (action == "ADD") {
            showAlert("E", "Complete Add Operation First");
            return false;
        }
        else if (action == "EDIT") {
            showAlert("E", "Complete Edit Operation First");
            return false;
        }
        return true;
    }

</script>

