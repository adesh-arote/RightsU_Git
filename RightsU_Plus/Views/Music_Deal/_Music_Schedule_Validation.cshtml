@using UTOFrameWork.FrameworkClasses;
@model List<RightsU_Plus.Controllers.Music_DealController.Music_Deal_Validation>
<div class="modal_block modal_header">
    <a class="close" onclick="ClosePopup()">
        <span>X</span>
        <span class="sr-only">Close</span>
    </a>
    <h2>Error Message Details </h2>
</div>
<br />
<div class="modal_block clearfix" style="margin-left: 20px;margin-right: 20px;">
    <div class="tab-content clearfix table-wrapper scale_table_container">
        <div class="scale_table_block" id="MusicError">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="width:10%;">Sr. No.</th>
                        <th style="width:25%;">Schedule Date</th>
                        <th style="width:25%;">Title</th>
                        <th style="width:35%;">Error Message</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">@item.Error_SR_NO</td>
                                <td align="center">@Convert.ToDateTime(@item.Schedule_Date).ToString(GlobalParams.DateFormat_Display)</td>
                                <td align="center" class="expandable">@item.Title</td>
                                <td class="expandable">@item.Error_Message</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
    <br />
</div>

