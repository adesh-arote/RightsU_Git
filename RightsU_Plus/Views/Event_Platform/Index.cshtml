@using UTOFrameWork.FrameworkClasses
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    MessageKey objMessageKey = new MessageKey();
    if (Session["objMessageKey"] != null)
    {
        objMessageKey = (MessageKey)Session["objMessageKey"];
    }
}
<link type="text/css" rel="stylesheet" href="~/css/chosen.min.css?v=@System.Configuration.ConfigurationManager.AppSettings["Version_No"]" />

<script>
      var IsCall = 'Y', sort_Type = "T", Module_Code_G = @ViewBag.Code, SysLanguageCode_G = @ViewBag.LangCode;;
    var URL_Bind_EventPlatForm = '@Url.Action("Bind_EventPlatForm", "Event_Platform")';
    var URL_Search_EventPlatform = '@Url.Action("Search_EventPlatform", "Event_Platform")';
    var URL_SaveEventPlatform = '@Url.Action("SaveEventPlatform", "Event_Platform")';
    var URL_ActivateDeactivate_EvePlatform = '@Url.Action("ActivateDeactivate_EvePlatform", "Event_Platform")';
    var URL_EventTemplateKey = '@Url.Action("EventTemplateKeysPopUP", "Event_Platform")';
    var URL_AddEditEventKeys = '@Url.Action("AddEditEventKeys", "Event_Platform")';
    var URL_SaveEventKeys = '@Url.Action("SaveEventKeys", "Event_Platform")';
    var Url_DeleteEventKeys = '@Url.Action("DeleteEventKeys", "Event_Platform")';
     var Url_SaveMasterData = '@Url.Action("SaveEventKeyValuesInDb", "Event_Platform")';
    
    var URL_CheckRecordLock = '@Url.Action("CheckRecordLock", "Event_Platform")';
    var URL_Refresh_Lock = '@Url.Action("Refresh_Lock", "Global")';
    var URL_Release_Lock = '@Url.Action("Release_Lock", "Global")';

    $(document).ready(function () {
        //debugger;
        if (LayoutDirection_G == "RTL") {
            $('#btnUser').css("float", "right");
            $('#txtSort').css("text-align", "left");
            $('#ddlSortType_chosen').css("text-align", "right");
        }
        else {
            $('#btnUser').css("float", "left");
            $('#txtSort').css("text-align", "right");
            $('#ddlSortType_chosen').css("text-align", "left");
        }
        SearchEvent_Platform("");
        addNumeric();

        $('#searchCommon').keypress(function (e) {
            if (e.keyCode == 13) {
                btnSearch_OnClick()
                return false;
            }
        });
        $('#ddlSortType').change(function () {
            sort_Type = $('#ddlSortType').val();
            $('#hdnPageNo').val(1);
            var searchtext = $("#searchCommon").val();
            SearchEvent_Platform(searchtext);
        })
    });

    //-----------------SEARCH-----------------------------

    function btnSearch_OnClick() {
       // debugger;
        $('.required').removeClass('required');
        $("[required='required']").removeAttr("required");

        var searchText = $.trim($('#searchCommon').val());

        if (searchText == '') {
            $('#searchCommon').val('');
            $('#searchCommon').attr('required', true)
            return false;
        }
        SearchEvent_Platform(searchText);
    }

    function btnShowAll_OnClick() {
     //   debugger;
        if (!checkCurrentAction())
            return false;
        if (!ValidatePageSize())
            return false;
        sort_Type = "T";
        $("#ddlSortType").find("option").attr("selected", false);
        $("#ddlSortType").val('T').trigger("chosen:updated");
        $('#hdnPageNo').val(1);
        $('#searchCommon').attr('required', false)
        $('#searchCommon').val('');
        SearchEvent_Platform("");
    }

    function SearchEvent_Platform(searchtext) {
    //    debugger;
        if (!checkCurrentAction())
            return false;
        $('#searchCommon').val(searchtext);
        showLoading();
        $.ajax({
            type: "POST",
            url: URL_Search_EventPlatform,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchtext
            }),
            success: function (result) {
                $('#hdnPageNo').text(1);
                $('#hdnPageNo').val(1);
                $('#lblRecordCount').text(result.Record_Count);
                $("#hdnRecordCount").val(result.Record_Count);
                SetPaging();
                Event_PatformList("", 0);
                hideLoading();
            }
        });
    }

    //-----------------PAGING------------------------------

    function addNumeric() {
       // debugger;
        $(".pagingSize").numeric({
            allowMinus: false,
            allowThouSep: false,
            allowDecSep: false,
            max: 99,
            min: 1
        });
    }

    function SetPaging() {
      //  debugger;
        IsCall = 'N';
        var pageNo = parseInt($('#hdnPageNo').val());
        var recordCount = parseInt($('#hdnRecordCount').val());
        var pagePerBatch = parseInt($('#hdnPagePerBatch').val());
        var recordPerPage = parseInt($('#txtPageSize').val());

        var cnt = pageNo * recordPerPage;
        if (cnt >= recordCount) {
            var v1 = parseInt(recordCount / recordPerPage);
            if ((v1 * recordPerPage) == recordCount)
                pageNo = v1;
            else
                pageNo = v1 + 1;
        }

        if (pageNo == 0)
            pageNo = 1;

        var index = pageNo - 1;
        $('#hdnPageNo').val(pageNo);

        var opt = null;
        opt = { callback: pageselectCallback };
        opt["items_per_page"] = recordPerPage;
        opt["num_display_entries"] = pagePerBatch;
        opt["num"] = 10;
        opt["prev_text"] = "<<";
        opt["next_text"] = ">>";
        opt["current_page"] = index;
        $("#Pagination").pagination(recordCount, opt);
    }

    function pageselectCallback(page_index, jq) {
       // debugger;
        if (checkCurrentAction()) {
            $('.required').removeClass('required');

            if (!ValidatePageSize())
                return false;

            var pageNo = page_index + 1
            $('#hdnPageNo').val(pageNo);
            if (IsCall == 'Y')
                Event_PatformList("", 0);
            else
                IsCall = 'Y';
        }
    }

    function txtPageSize_OnChange() {
     //   debugger;
        $("[required='required']").removeAttr("required");
        $('.required').removeClass('required');
        if (!ValidatePageSize())
            return false;

        Event_PatformList("", 0);
        SetPaging();
    }

    function ValidatePageSize() {
       // debugger;
        var recordPerPage = $('#txtPageSize').val();
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }

    function pageBinding() {
       // debugger;
        Event_PatformList("", 0);
        SetPaging();
    }

    //-----------------VALIDATION--------------------------

    function checkCurrentAction() {
       // debugger;
        var action = $("#hdnAction").val();
        if (action == "ADD") {
            showAlert("E", "Complete Add Operation First");
            return false;
        }
        else if (action == "EDIT") {
            showAlert("E", "Complete Edit Operation First");
            return false;
        }
        return true;
    }

    //-----------------MASTER-------------------------------

    function Event_PatformList(commandName, Event_PlatformCode) {
        debugger;
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();

        $.ajax({
            type: "POST",
            url: URL_Bind_EventPlatForm,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage,
                Event_PlatformCode: Event_PlatformCode,
                commandName: commandName,
                sortType: sort_Type
            }),
            success: function (result) {
               // debugger;
                $('#divEventPlatformList').empty();
                $('#divEventPlatformList').html(result);
                initializeTooltip();
                initializeExpander();
                initializeChosen();
            }
        })
    }

    function AddEditEvent_Platform(commandName, Event_PlatformCode) {
     //   debugger;
        if (checkCurrentAction() && ValidatePageSize()) {
            Event_PatformList(commandName, Event_PlatformCode);
            $('#hdnAction').val(commandName)
        }
    }

    function SaveEvent_Platform(Event_PlatformCode) {
       debugger;
        var returnVal = true;
        var EventPlatform_Name = $.trim($("#EventPlatform_Name").val());
        var EventPlatform_Short_Name = $.trim($("#EventPlatform_Short_Name").val());
        if (EventPlatform_Short_Name.length > 10) {
            showAlert("E", "Please Enter short name below 10 Characters", "OK");
            return false;
        }
        var EnableCCAndBCC = ($('#EnableCCAndBCC').is(":checked"));
        var IsEnableCCandBCC = "";

        if (EnableCCAndBCC == true)
            IsEnableCCandBCC = "Y";
        else
            IsEnableCCandBCC = "N";

        if (EventPlatform_Name == "") {
            $('#EventPlatform_Name').val('').attr('required', true);
            returnVal = false;
        }
        if (EventPlatform_Short_Name == "") {
            $('#EventPlatform_Short_Name').val('').attr('required', true);
            returnVal = false;
        }
       

        if (returnVal) {
            $.ajax({
                type: "POST",
                url: URL_SaveEventPlatform,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    EventPlatform_Code: Event_PlatformCode,
                    EventPlatform_Name: EventPlatform_Name,
                    EventPlatform_short_name: EventPlatform_Short_Name,
                    EnableCCandBCC: IsEnableCCandBCC
                }),
                success: function (result) {
                    if (result.Status == "S") {
                        $('#lblRecordCount').text(result.RecordCount);
                        $('#hdnAction').val("")
                        showAlert("S", result.Message);
                        SearchEvent_Platform("");

                        if ($("#searchCommon").val() != "") {
                            SearchEvent_Platform($("#searchCommon").val())
                        }
                        else {
                            Event_PatformList("", 0);
                        }
                    }
                    else {
                        showAlert("E", result.Message);
                    }
                }
            })
        }
    }
    function ActivateDeactivate_EvePlatform(EventPlatform_Code, ActiveAction) {
       // debugger;
        if (checkCurrentAction()) {
            $.ajax({
                type: "POST",
                url: URL_ActivateDeactivate_EvePlatform,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    ActiveAction: ActiveAction,
                    EventPlatform_Code: EventPlatform_Code
                }),
                success: function (result) {
                    if (result.Status == "S") {
                        showAlert("S", result.Message);
                        //window.location.href = Url_Index;
                        SearchEvent_Platform("");
                    }
                    else {
                        showAlert("E", result.Message);
                    }
                }
            })
        }
    }

    function Event_PlatformCancel() {
      //  debugger;
        var recordLockingCode = parseInt($('#hdnRecodLockingCode').val())
        if (recordLockingCode > 0)
            ReleaseRecordLock(recordLockingCode, URL_Release_Lock);
        $('#hdnAction').val("")
        Event_PatformList("", 0);
    }

    //----------------Record Locking----------------------------
    function CheckRecordLock(commandName, EventPlatform_Code) {
       // debugger;
        $.ajax({
            type: "POST",
            url: URL_CheckRecordLock,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                EventPlatformCode: EventPlatform_Code
            }),
            async: false,
            success: function (result) {
             //   debugger;
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    if (result.Is_Locked == "Y") {
                        AddEditEvent_Platform(commandName, EventPlatform_Code)
                        $('#hdnRecodLockingCode').val(result.Record_Locking_Code); // This syntax must be after AddEditCountry() this
                        Call_RefreshRecordReleaseTime(result.Record_Locking_Code, URL_Refresh_Lock);
                    }
                    else {
                        showAlert("E", result.Message);
                    }

                }

            },
            error: function (result) {
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }

    //---------------------------------KeysPopup
    function EventTemplateKey(EventId) {
        debugger;    
        if (checkCurrentAction()) {
            $.ajax({
                type: "POST",
                url: URL_EventTemplateKey,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                data: JSON.stringify({
                    EventPlatform_Code: EventId
                }),
                success: function (result) {
                    $('#popup').modal();
                    $('#pupupHtml').empty();
                    $('#pupupHtml').html(result);
                    initializeChosen();
                },
                error: function (result) {
                    alert('Error: ' + result.responseText);
                }
            });
        }
    }

    function ClosePopup() {
        debugger;
        var recordLockingCode = parseInt($('#hdnRecodLockingCode').val())
        if (recordLockingCode > 0)
            ReleaseRecordLock(recordLockingCode, URL_Release_Lock);

        if (!checkCurrentAction())
            return false;

        $('#hdnAction').val("");
        $('#popup').modal('hide');
        $('#pupupHtml').empty();

        Event_PatformList("",0);
    }

    function AddEditKeys(Id, commandName) {
        debugger;
        if (!checkCurrentAction())
            return false;
        $.ajax({
            type: "POST",
            url: URL_AddEditEventKeys,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                Id: Id,
                CommandName: commandName
            }),
            async: false,
            success: function (data) {
                debugger;
                $('#pupupHtml').empty();
                $('#pupupHtml').html(data);
                $("#hdnAction").val(commandName);
                initializeChosen();
            },
            error: function (data) {
                alert('Error: ' + data.responseText);
            }
        });
    }

    function SaveTemplateKey(Id, rowNumber) {
        debugger;
        var returnVal = true;
        var Value = $.trim($("#Value_" + rowNumber).val());
        var KeyName = $.trim($("#ddlKey_" + rowNumber + " :selected").text());

        if (Value == "") {
            $("#Value_" + rowNumber).val('').attr('required', true);
            returnVal = false;
        }
        if (KeyName == "Please Select") {
            $("#ddlKey_" + rowNumber).val('').attr('required', true);
            returnVal = false;
        }

        $("#hdnAction").val("");
        if (returnVal) {
            $.ajax({
                type: "POST",
                url: URL_SaveEventKeys,
                traditional: true,
                enctype: 'multipart/form-data',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({
                    Id: Id,
                    Key: KeyName,
                    Value: Value,
                    RowNumber: rowNumber
                }),
                async: false,
                success: function (data) {
                    debugger;
                    if (data.Status == "S") {
                        AddEditKeys('0', 'View');
                    }
                    if (data.Error == "1") {
                        showAlert("E", "You have Entered Duplication Key Value", "OK");
                    }
                },
                error: function (data) {
                    alert('Error: ' + data.responseText);
                }
            });
        }
    }

    function CancelTemplateKey() {
        debugger;
        $('#hdnAction').val("");
        checkCurrentAction();
        AddEditKeys(0, "",);
    }

    function Deletekeys(Id) {
        debugger;
        if (!checkCurrentAction())
            return false;
        $.ajax({
            type: "POST",
            url: Url_DeleteEventKeys,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                Id: Id
            }),
            async: false,
            success: function (data) {
                debugger;
                if (data.Status == "S") {
                    AddEditKeys('0', '');
                }
                if (data.Status == "E") {
                    alert(data.Message);
                }

            },
            error: function (data) {
                alert('Error: ' + data.responseText);
            }
        });
    }

    function SaveMasterData() {
        debugger;
        var returnVal = true;
        var length = $("table tr[id*='trKeys_']").length
        if (length == 0) {

            showAlert("E", "Please add Key Values", "OK");
            returnVal = false;
        }
        if (returnVal) {
            if (checkCurrentAction()) {
                $.ajax({
                    type: "POST",
                    url: Url_SaveMasterData,
                    traditional: true,
                    enctype: 'multipart/form-data',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({
                    }),
                    async: false,
                    success: function (data) {
                        debugger;
                        if (data.Status == "S") {
                            $('#popup').modal('hide');
                            $('#pupupHtml').empty();
                            Event_PatformList("", 0);
                            showAlert("S", data.Message);
                        }
                        if (data.Status == "E") {
                            showAlert("E", data.Message, "OK");
                        }
                    },
                    error: function (data) {
                        alert('Error: ' + data.responseText);
                    }
                });
            }
        }
    }

    function ExportToExcel() {

        debugger;
        var type = "";
        var Module_Name = "Event Platform";
        type = $('#ddlSortType').val();
        var StrSearchCriteria = $.trim($('#searchCommon').val());

        window.location.href = '@Url.Action("ExportToExcel", "Global")?Module_Code=' + Module_Code_G + '&SysLanguageCode=' + SysLanguageCode_G + '&Module_Name=' + Module_Name + '&sortColumnOrder=' + type + '&StrSearchCriteria=' + StrSearchCriteria;

    }



</script>


