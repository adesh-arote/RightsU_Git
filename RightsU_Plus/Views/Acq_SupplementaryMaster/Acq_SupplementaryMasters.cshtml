    function ValidatePageSize() {
        debugger;
        var recordPerPage = $('#txtPageSize').val()
        if ($.trim(recordPerPage) != '') {
            var pageSize = parseInt(recordPerPage);
            if (pageSize > 0)
                return true;
        }
        $('#txtPageSize').attr('required', true)
        return false
    }

    function checkCurrentAction() {
        debugger;
        var action = $.trim($('#hdnAction').val());
        if (action == "ADD_RC") {
            showAlert("E", "Complete Add Operation First")
            return false;
        }
        else if (action == "EDIT_RC") {
            showAlert("E", "Complete Edit Operation First")
            return false;
        }
        else if (action == "DELETE_EDIT_CHN") {
            showAlert("E", "Complete Edit Operation First")
            return false;
        }
        return true;
    }


    function pageBinding(string) {
        debugger;
        if (string == "Tab") {
            SearchTab("");
            SetPagingTab();
            $('#liSupplementaryTab').addClass("active");
            $('#liSupplementary').removeClass("active");
            $('#liSupplementaryData').removeClass("active");
            $('#liSupplementaryConfig').removeClass("active");
        }
        else if (string == "Supp") {
            SearchSupp("");
            SetPagingSupp();
            $('#liSupplementaryTab').removeClass("active");
            $('#liSupplementary').addClass("active");
            $('#liSupplementaryData').removeClass("active");
            $('#liSupplementaryConfig').removeClass("active");
        }
        else if (string == "Data") {
            SearchData("");
            SetPagingData();
            $('#liSupplementaryTab').removeClass("active");
            $('#liSupplementary').removeClass("active");
            $('#liSupplementaryData').addClass("active");
            $('#liSupplementaryConfig').removeClass("active");
        }
        else if (string == "Config") {
            SearchConfig("");
            SetPagingConfig();
            $('#liSupplementaryTab').removeClass("active");
            $('#liSupplementary').removeClass("active");
            $('#liSupplementaryData').removeClass("active");
            $('#liSupplementaryConfig').addClass("active");
        }
    }

    function SearchConfig(searchText) {
        debugger;
        var TabValue = "ConfigTab";
        $('#searchCommon').val(searchText);
        showLoading();
        $.ajax({
            type: "POST",
            url: Url_SearchSupplementaryConfig,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                searchText: searchText,
                TabValue: TabValue
            }),
            async: false,
            success: function (result) {
                debugger;
                $('#divSupplementaryList').empty();
                $('#divSupplementaryList').html(result);
                initializeTooltip();
                $('#hdnPageNo').text(1);
                $('#hdnPageNo').val(1);
                $('#lblRecordCount').text(result.Record_Count);
                $("#hdnRecordCount").val(result.Record_Count);
                SetPagingConfig();
                BindSupplementaryList("Config");
                hideLoading();
            },
            error: function (result) {
                debugger;
                alert('Error: ' + result.responseText);
                hideLoading();
            }
        });
    }

