        }
        if (commandName == "EDITSUPP") {
            var URL_CallAction = '@Url.Action("AddOrEditSupplementary", "Acq_SupplementaryMaster")/'+ id;
        }
        if (commandName == "VIEWSUPP") {
            var URL_CallAction = '@Url.Action("DetailsSupplementary", "Acq_SupplementaryMaster")/'+ id;
        }
        if (commandName == "ADDDATA") {
            var URL_CallAction = '@Url.Action("AddOrEditSupplementaryData", "Acq_SupplementaryMaster")/'+ id;
        }
        if (commandName == "EDITDATA") {
            var URL_CallAction = '@Url.Action("AddOrEditSupplementaryData", "Acq_SupplementaryMaster")/'+ id;
        }
        if (commandName == "VIEWDATA") {
            var URL_CallAction = '@Url.Action("DetailsSupplementaryData", "Acq_SupplementaryMaster")/'+ id;
        }
        if (commandName == "ADDCONFIG") {
            var URL_CallAction = '@Url.Action("AddOrEditSupplementaryConfig", "Acq_SupplementaryMaster")/'+ id;
        }
        if (commandName == "EDITCONFIG") {
            var URL_CallAction = '@Url.Action("AddOrEditSupplementaryConfig", "Acq_SupplementaryMaster")/'+ id;
        }
        if (commandName == "VIEWCONFIG") {
            var URL_CallAction = '@Url.Action("DetailsSupplementaryConfig", "Acq_SupplementaryMaster")/'+ id;
        }
        $.ajax({
            type: "GET",
            url: URL_CallAction,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            async: false,
            data: JSON.stringify({
