    function BindSupplementaryList(charecter) {
        showLoading();
        if (charecter == "Supp") {
            Url_BindSupplementary = Url_BindSupplementaryList;
        }
        else if (charecter == "Tab") {
            Url_BindSupplementary = Url_BindSupplementaryTabList;
        }
        else if (charecter == "Config") {
            Url_BindSupplementary = Url_BindSupplementaryConfigList;
        }
        else if (charecter == "Data") {
            Url_BindSupplementary = Url_BindSupplementaryDataList;
        };
        var pageNo = $('#hdnPageNo').val();
        var recordPerPage = $('#txtPageSize').val();
        $.ajax({
            type: "POST",
            url: Url_BindSupplementary,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: JSON.stringify({
                pageNo: pageNo,
                recordPerPage: recordPerPage
            }),
            success: function (result) {
                hideLoading();
                if (result == "true") {
                    redirectToLogin();
                }
                else {
                    $('#divSupplementaryList').empty();
                    $('#divSupplementaryList').html(result);
                    initializeTooltip();
                }
            },
            error: function (result) {
                alert('Error: ' + result.responseText);
            }
        });
    }

    function AddEditViewSupplementaryTab(id, commandName) {
        debugger;
        if (commandName == "ADDTAB") {
            var URL_CallAction = '@Url.Action("AddOrEditSupplementaryTab", "Acq_SupplementaryMaster")/'+ id;
        }
        if (commandName == "EDITTAB") {
            var URL_CallAction = '@Url.Action("AddOrEditSupplementaryTab", "Acq_SupplementaryMaster")/'+ id;
        }
        if (commandName == "VIEWTAB") {
            var URL_CallAction = '@Url.Action("DetailsSupplementaryTab", "Acq_SupplementaryMaster")/'+ id;
        }
        if (commandName == "ADDSUPP")
        {
