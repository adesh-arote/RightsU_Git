        }
    })
    function AddButtonFunction() {
        var TabValue = $("#SuppTab").val()
        if (TabValue == "SuppTab") {
            AddEditViewSupplementaryTab(0, 'ADDTAB');
        }
        else if (TabValue == "SuppData") {
            AddEditViewSupplementaryTab(0, 'ADDDATA');
        }
        else if (TabValue =="SuppConfig") {
