                                var arr = item.Term.Split('.');
                                //var str = arr[0] + " years";
                                var str = "";

                                if (arr[0] != "0")
                                {
                                    str += " " + arr[0] + " Years";
                                }

                                if (arr[1] != "0")
                                {
                                    str += " " + arr[1] + " Months";
                                }
                                if (arr[2] != "0")
                                {
                                    str += " " + arr[2] + " Days";
                                }


                                <label for="TermY" title="Term">@str</label>
                            }
                            else
