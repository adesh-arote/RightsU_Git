                        </div>
                        <div class="scale_table_block" id="dvDealAcqAttachment">
                        </div>
                    </div>
                </div>
                @if (ViewBag.PageMode == "EWOA")
                {
                    @Html.Partial("_Edit_Without_Approval")
                }
                @if (ViewBag.PageMode == "APRV")
                {
                    @Html.Partial("_Approved_List")
