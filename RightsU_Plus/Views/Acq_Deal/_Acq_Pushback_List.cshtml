                                    }
                                    else
                                    {
                                        <input type="button" id="btnCancel_Pushback" class="btn btn-primary" value="@objMessageKey.Cancel"
                                               onclick="location.href='@Url.Action("Cancel", "Acq_Pushback")    '">
                                    }

                                </li>
                            </ul>
                        </div>
                    }
                    <input type="hidden" id="hdnTabName" name="hdnTabName" />
