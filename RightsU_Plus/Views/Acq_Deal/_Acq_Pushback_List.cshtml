    var rightsPlatform_G = '@Obj_Deal_Schema_View.Pushback_Platform';
   // var rightsTitle_G = '@Obj_Deal_Schema_View.Pushback_Title'.split(',');
    var rightsExclusive_G = "";
    var selectedTitleCode_G = '';
