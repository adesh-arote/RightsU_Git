    function DigitalSave()
    {
        showLoading();
        debugger;
        var page_size = 0; var page_index = 0;
        var shortName = $('#TabName').val();
        //var wtName = $('#hdnwt' + shortName).val();
        //if (wtName == "PopUp") {
        //    $('#inputValidation').val("false");
        //}
        if ($('#inputValidation').val() == "true") {
            showAlert('I', "Please Complete Add Edit Opration");
            hideLoading();
            return;
        }
        if ($('#ddDigitalTitle').val == "")
        {
            showAlert('I', '@objMessageKey.Selecttitletosearch');
            return;
        }
        if ($('#ddDigitalTitle').val() != null) {
            var title = $('#ddDigitalTitle').val().toString();
        }

        else {
            showAlert('I', "Title not selected");
            hideLoading();
            return;
        }

        var detailsCnt = 0
        $.ajax({
            type: "POST",
            async: false,
            url: URL_DigitalValidation,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            success: function (result) {
                detailsCnt = result.detailsCnt;
            }
        });

        if (detailsCnt < 1) {
            showAlert('I', "Please add Digital details to save.");
            hideLoading();
            return;
        }

        if ($('#txtAcqRemarks').val() != null) {
            var Remarks = $('#txtAcqRemarks').val();
        }

        page_index = $('#hdnCurrentPageNo').val();
        page_size = $('#hdnPageSize').val();

        $.ajax({
            type: "POST",
            url: URL_SaveInDB,
            traditional: true,
            enctype: 'multipart/form-data',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                Title_List: title,
                Remarks: Remarks,
                page_size: page_size,
                page_index: page_index
            }),
            success: function (result) {
                debugger;
                if(result.ErrorCode == "100")
                    showAlert('I', '@objMessageKey.DigitalDetailsSavedSuccessfully', 'OK');
                else
                    showAlert('I', '@objMessageKey.CouldNotsavedRecord');

            }
        });
        //BindPartialTabs("Digital");
        hideLoading();

    }
